	<fx:Script>
		<![CDATA[
			import com.xyw.module.csyxzm.model.D306Request;
			import com.xyw.module.csyxzm.model.VD306;
			import com.xyw.sys.custom.component.ExportExcel;
			import com.xyw.sys.custom.component.SecurityControler;
			import com.xyw.sys.model.ComboBoxData;
			import com.xyw.sys.model.ComboBoxDataRequest;
			import com.xyw.sys.model.ComboBoxDataResponse;
			import com.xyw.sys.model.SystemUser;
			
			import com.xyw.module.csyxzm.csyxzmhfsqcx.tittle;
			import mx.managers.PopUpManager;
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.rpc.events.ResultEvent;
			
			import spark.events.GridSelectionEvent;
			
			public var systemUser:SystemUser = null;
			public var d306Request:D306Request;
			public var vD306:VD306 = null;
			
			//**************启动权限控制**************//
			private function security():void{
				SecurityControler.start(null,'visible');
				SecurityControler.addAllPerms(this.parentApplication.permissionList);
			}
			
			private function moduleCreationCompleteHandler(event:FlexEvent):void
			{
				//security();
				this.systemUser = this.parentApplication.systemUser;
				//检查读卡权限
				if(this.systemUser.duka == "1"){
					this.duka1.enabled = true;
				}
				this.timeStart.text=DateField.dateToString(new Date(),"YYYY-MM-01");
				this.timeEnd.text=DateField.dateToString(new Date(),"YYYY-MM-DD");
				//this.pagerBar.exportEXCEL = exportEXCEL;
				this.certificateDataGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE,onSelected);
			}
			
			private function onSelected(event:GridSelectionEvent):void
			{	
				this.vD306 = DataGrid(event.target).selectedItem as VD306;
			}
			
			private function exportEXCEL():void
			{
				ExportExcel.loadDGInExcel(this.certificateDataGrid,"换发申请信息",this.parentApplication.contextRoot + '/print/ExcelExport.jsp');
			}
			
			/*----------获取查询条件数据---------*/
			private function initQueryParam():void
			{
				d306Request = new D306Request();
				try{ 
					var type:String = this.d306_22.getLastSelectedInstitution();
					var d306_22_:String = this.d306_22.getLastSelectedInstitutionCode();
					
					if(this.systemUser.institutionType == "1")
					{
						d306Request.d30622 = this.systemUser.institutionCode;
					}else{
						if(type == "8")
						{
							d306Request.d30622 = d306_22_;
						}else if(type == "6")
						{
							d306Request.d30622 = d306_22_.substring(0,6);
						}else if(type == "4")
						{
							d306Request.d30622 = d306_22_.substring(0,4);
						}else if(type == "2")
						{
							d306Request.d30622 = d306_22_.substring(0,2);
						}
					}  
					if(this.areaType.selected == true){
						d306Request.d30131 = this.d301_05.getAreaCode();
					}else{
						d306Request.d30105 = this.d301_05.getAreaCode();
					}
					d306Request.timeStr = DateField.stringToDate(this.timeStart.text,"YYYY-MM-DD");
					d306Request.timeEnd = DateField.stringToDate(this.timeEnd.text,"YYYY-MM-DD");
					d306Request.d30604 = this.d306_04.text;
					d306Request.d30603 = this.d306_03.text;
					d306Request.d30606 = this.d306_06.text;
					d306Request.d30608 = this.d306_08.text;
				}catch(error:Error) {
					
				}
			}
			
			private function query(event:MouseEvent):void
			{
				d306Request = new D306Request();
				this.initQueryParam();
				d306Request.parameterPageindex = 1;
				d306Request.parameterPagesize = 20;
				this.d306Service.queryVD306s(d306Request);
			}
			
			private function queryVD306sHandler(event:ResultEvent):void
			{
				var d306Response:Object = event.result;
				var listVD306:ArrayCollection = d306Response.vd306s;
				var rowCount:Number = d306Response.rowCount;
				if(d306Response.errorMessage == null)
				{
					this.pagerBar.pageSize = 20;
					this.pagerBar.dataGrid = this.certificateDataGrid;
					this.pagerBar.rowCount = rowCount;
					this.pagerBar.resultData = listVD306;
					this.pagerBar.dataBind();
					this.pagerBar.pagerFunction = pagerFunction;
					if(rowCount > 0) {
						this.pagerBar.enabled = true;
					}
				} else {
					Alert.show(d306Response.errorMessage, "系统提示");
				}
			}
			
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				d306Request = new D306Request();
				this.initQueryParam();
				d306Request.parameterPageindex = currentPageIndex;
				d306Request.parameterPagesize = pageSize;
				this.d306Service.queryVD306s(d306Request);
			}
			public function deleteD306(event:MouseEvent):void
			{
				if(this.vD306 == null){
					Alert.show("请选择要操作的行");
					return;
				}
				d306Request.d30601 = this.vD306.d30601;
				d306Request.d30602 = this.vD306.d30602;
				this.d306Service.deleteD306(d306Request);
			}
			protected function deleteD306Handler(event:ResultEvent):void
			{
				var d306Response:Object = event.result;
				if(d306Response.errorMessage == null){
					if(d306Response.promptMessage != null){
						Alert.show(d306Response.promptMessage, "系统提示");
					}
					refresh();
				} else {
					Alert.show(d306Response.errorMessage, "系统提示");
				}
			}
			public function refresh():void
			{
				d306Request = new D306Request();
				this.initQueryParam();
				d306Request.parameterPageindex = this.pagerBar.currentPageIndex;
				d306Request.parameterPagesize = 20;
				this.d306Service.queryVD306s(d306Request);
			}
			public function update(event:MouseEvent):void
			{
				if(this.vD306 == null){
					Alert.show("请选择要操作的行");
					return;
				}else{
					var window:tittle = new tittle();
					window.vd306 = this.vD306;
					PopUpManager.addPopUp(window,this);
					var x:Number = (this.parentApplication.mdiCanvas.width - window.width) / 2;
					var y:Number = (this.parentApplication.mdiCanvas.height - window.height) / 2;
					window.move(x, y);
				}
			}
			private function printD306(event:MouseEvent):void
			{
				if(this.vD306 == null){
					Alert.show("请选择要操作的行");
					return;
				}
				var urlRequest:URLRequest = null;
				var selectD30601:Number = vD306.d30601;
				var selectD30603:String = vD306.d30603;
				
				var url:String = this.parentApplication.contextRoot + "/CsyxzmhfsqbServlet?flagF=0&d30603=" + selectD30603 + "&d30601=" + selectD30601;
				navigateToURL(new URLRequest(url), null);
			}
			
			//读卡(母亲)
			protected function readCard_mother(event:MouseEvent):void
			{
				try{
					//readCard是调用index.js下的函数，读卡涉及index.jsp和index.js两个文件
					var str:String = ExternalInterface.call("parent.readCard");
					if(str != null && str.length != 0){
						
						var array:Array = str.split(",");
						var sex:String = array[1];//性别
						if(sex=="女"){
							this.d306_06.text = array[0];//姓名
							this.d306_08.text = array[5];//身份证号
						}else{
							Alert.show("请读母亲信息！","系统提示");
						}
					}else{
						Alert.show("读卡失败！");
					}
				} 
				catch(error:Error) {
					Alert.show("读卡失败！");
				}
			}
		]]>
	</fx:Script>
