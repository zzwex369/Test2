<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   xmlns:component = "com.xyw.sys.custom.component.*"
			   title="信息加载" backgroundColor="#FFFFFF"
			   chromeColor="#5CACEE" close="removeWindow()"
			   width="1024" height="246"
			   creationComplete="init()">
	<fx:Declarations>
		<s:RemoteObject id="d307Service" destination="d307Service" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="queryVD307" result="queryVD307Handler(event)"/>
		</s:RemoteObject>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import com.xyw.module.csyxzm.model.D307Request;
			import com.xyw.module.csyxzm.model.VD307;
			
			import com.xyw.module.csyxzm.csyxzmqf.index;
			import mx.controls.Alert;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			import com.xyw.sys.model.SystemUser;
			
			import spark.events.GridSelectionEvent;
			
			public var systemUser:SystemUser = null;
			public var vD307:VD307 = null;
			public var d30706:String;
			public var d30708:String;
			public var d30712:String;
			public var d30714:String;
			public var vd307:Object;			
			public function init():void {
				try{
					var d307Request:D307Request  = new D307Request();
					d307Request.d30706 = this.d30706;
					d307Request.d30708 = this.d30708;
					d307Request.d30712 = this.d30712;
					d307Request.d30714 = this.d30714;
					d307Request.parameterPageindex = 1;
					d307Request.parameterPagesize = 20;
					this.d307Service.queryVD307(d307Request);
					this.certificateDataGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE, onSelected);
				}catch(error:Error){
					this.removeWindow();
					Alert.show("网络繁忙，请重试!","系统提示");
				}
			}
			
			public function queryVD307Handler(event:ResultEvent):void {
				var d307Response:Object = event.result;
				if(d307Response.state){
					this.certificateDataGrid.dataProvider=d307Response.vd307s;
				}else{
					Alert.show(d307Response.errorMessage,"系统提示");
				}
			}
			
			private function onSelected(event:Event):void{
				this.removeWindow();
				this.vd307 = DataGrid(event.target).selectedItem as VD307;
				if(this.vd307.d30701 != 0){
					var qfindex:index=this.owner as index;
					qfindex.queryRecord(vd307);
				}else{
					Alert.show("请选择要加载的数据！","系统提示");
					this.vd307 = null;
				}
			}
			
			public function removeWindow():void
			{ 
				PopUpManager.removePopUp(this);
			}
			
		]]>
	</fx:Script>
	<s:VGroup width="100%" horizontalAlign="center" verticalAlign="middle">
		<s:HGroup paddingBottom="5" paddingLeft="15" paddingTop="10"  paddingRight="5" width="100%" height="100%" chromeColor="#F6F8FA" contentBackgroundColor="#FFFFFF">
			<s:DataGrid id="certificateDataGrid" alternatingRowColors="[#FFFFFF,#EEEEEE]" chromeColor="#5CACEE" editable="true" rowHeight="22" width="980" height="158" >
				<s:columns>
					<s:ArrayList>
						<s:GridColumn dataField="d30701" headerText="主键" visible="false"/>
						<s:GridColumn headerText="序号" width="40" itemRenderer="com.xyw.sys.custom.itemrenderer.CustomGridColumnItemRenderer" editable="false"/>
						<s:GridColumn dataField="d30702" headerText="姓名" width="60"/>
						<s:GridColumn dataField="d30703Zh" headerText="性别" width="40"/>
						<s:GridColumn dataField="d30704Str" headerText="出生日期" width="80"/>
						<s:GridColumn dataField="d30706" headerText="母亲姓名" width="80"/>
						<s:GridColumn dataField="d30708" headerText="母亲证件号" width="150"/>
						<s:GridColumn dataField="d30712" headerText="父亲姓名" width="80"/>
						<s:GridColumn dataField="d30714" headerText="父亲证件号" width="150"/>
						<s:GridColumn dataField="d30718" headerText="领证人" width="60"/>
						<s:GridColumn dataField="d30719Zh" headerText="与新生儿关系" visible="false"/>
						<s:GridColumn dataField="d30720Zh" headerText="领证人有效证件类别" visible="false"/>
						<s:GridColumn dataField="d30721" headerText="领证人证件号" width="150"/>
						<s:GridColumn dataField="d30722" headerText="联系电话" width="100"/>
						<s:GridColumn dataField="d30723Str" headerText="签发时间" width="80"/>
						<s:GridColumn dataField="d30724Zh" headerText="签发机构" width="140"/>
						
					</s:ArrayList>
				</s:columns>
			</s:DataGrid>					
		</s:HGroup>
		
		<s:HGroup contentBackgroundColor="#FF0000" verticalAlign="middle" horizontalAlign="right" paddingBottom="20" paddingTop="10" paddingLeft="10" paddingRight="20" width="100%" height="30">
			<s:Button label="关闭" click="removeWindow();"/>
		</s:HGroup>
	</s:VGroup>
	
</s:TitleWindow>

