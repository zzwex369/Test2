<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   width="1100" height="435" chromeColor="#429edd"
			   creationComplete="init()"
			   close="closeTitleWindow()" title="出生证入库详情"
			   skinClass="com.xyw.sys.custom.skin.CustomTitleWindow" xmlns:component="com.xyw.sys.custom.component.*">
	<fx:Declarations>
		<s:RemoteObject id="certificateRegistService" destination="certificateRegistService" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="queryStockDetail" result="queryStockDetailHandler(event)"/>
		</s:RemoteObject>
	</fx:Declarations>
	
	<fx:Script>
		<![CDATA[
			import com.xyw.module.csyxzm.model.Stock;
			import com.xyw.module.csyxzm.model.StockRequest;
			import com.xyw.module.csyxzm.model.StockResponse;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			public var stockRequest:StockRequest;
			public var stock:Stock;
			
			private function init():void
			{
				stockRequest.parameterPageindex = 1;
				stockRequest.parameterPagesize = 15;
				
				this.certificateRegistService.queryStockDetail(stockRequest);
			}
			
			private function queryStockDetailHandler(event:ResultEvent):void
			{
				var stockResponse:StockResponse = event.result as StockResponse;
				var rowCount:Number = stockResponse.rowCount;
				if(stockResponse.errorMessage == null)
				{
					var listVd505:ArrayCollection = stockResponse.listVd505;
					this.pagerBar.pageSize = 15;
					this.pagerBar.dataGrid = detailCertificateRegistDataGrid;
					this.pagerBar.rowCount = rowCount;
					this.pagerBar.resultData = listVd505;
					this.pagerBar.pagerFunction = pagerFunction;
					this.pagerBar.dataBind();
					//this.detailCertificateRegistDataGrid.dataProvider = vd505s;
					
					if(rowCount > 0) {
						this.pagerBar.enabled = true;
					} else {
						Alert.show("暂无数据!", "系统提示");
					}
				} else {
					Alert.show(stockResponse.errorMessage, "系统提示");
				}
			}
			
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				this.stockRequest.parameterPageindex = currentPageIndex;
				this.stockRequest.parameterPagesize = pageSize;
				
				this.certificateRegistService.queryStockDetail(stockRequest);
			}
			
			public function refresh():void
			{
				this.stockRequest.parameterPageindex = this.pagerBar.currentPageIndex;
				this.stockRequest.parameterPagesize = 15;
				
				this.certificateRegistService.queryStockDetail(stockRequest);
			}
			
			private function closeTitleWindow():void
			{
				PopUpManager.removePopUp(this);
			}
		]]>
	</fx:Script>
