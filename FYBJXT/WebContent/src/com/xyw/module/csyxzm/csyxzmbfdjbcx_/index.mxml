					<s:GridColumn dataField="d30534" headerText="出生证号" width="90"/>
					<s:GridColumn dataField="d30533" headerText="原出生证号" width="90"/>
					<s:GridColumn dataField="d30522" headerText="父亲姓名" width="80"/>
					<s:GridColumn dataField="d30524" headerText="父亲证件证号" width="150"/>
					<s:GridColumn dataField="d30516" headerText="母亲姓名" width="80"/>
					<s:GridColumn dataField="d30518" headerText="母亲证件证号" width="150"/>
					<s:GridColumn dataField="d30528" headerText="领证人" width="60"/>
					<s:GridColumn dataField="d30531" headerText="领证人证件号" width="150"/>
					<s:GridColumn dataField="d30535" headerText="原签发时间" width="80"/>
					<s:GridColumn dataField="d30511_Zh" headerText="助产机构" width="140"/>
