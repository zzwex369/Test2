			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.formatters.DateFormatter;
			import mx.managers.PopUpManager;
			import mx.messaging.AbstractConsumer;
			import mx.rpc.events.ResultEvent;
			import mx.utils.StringUtil;
			
			import spark.events.GridSelectionEvent;
			
			public var d605:D605 =null;
			public var vd605:VD605 = null;
			public var vD605:VD605 = null;
			public var queryChildRequest:QueryChildRequest = null;
			public var systemUser:SystemUser = null;
			
			//****************启动按钮权限控制****************//
			private function security():void{
				SecurityControler.start(null,'visible');
				SecurityControler.addAllPerms(this.parentApplication.permissionList);
				//this.duka1.enabled=SecurityControler.isPermitted('duka.swf');
				//this.duka2.enabled=SecurityControler.isPermitted('duka.swf');
			}
			
			private function moduleCreationCompleteHandler(event:FlexEvent):void
			{
				this.pagerBar.exportEXCEL = exportEXCEL;
				this.pagerBar.exportEXCELAll = exportEXCELall;
				//security();
				this.timeStart.text=DateField.dateToString(new Date(),"YYYY-MM-01");
				this.timeEnd.text=DateField.dateToString(new Date(),"YYYY-MM-DD");
				
				this.systemUser = this.parentApplication.systemUser;
				
				
				this.certificateDataGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE,onSelected);
			}
			public function exportEXCEL():void{
				ExportExcel.loadDGInExcel(this.certificateDataGrid,"儿童死亡登记重要信息",this.parentApplication.contextRoot + '/print/ExcelExport.jsp');
			}
			public function exportEXCELall():void{
				ExportExcel.loadDGInExcel(this.certificateDataGridAll,"儿童死亡登记重要信息",this.parentApplication.contextRoot + '/print/ExcelExport.jsp');
			}
			private function onSelected(event:GridSelectionEvent):void
			{
				this.vD605 = DataGrid(event.target).selectedItem as VD605;
			}
			
			/*----------获取查询条件数据---------*/
			private function initQueryParam():void
			{
				queryChildRequest = new QueryChildRequest();
				try
				{	
					var type:String = this.d605_30.getLastSelectedInstitution();
					var d605_30_:String = this.d605_30.getLastSelectedInstitutionCode();
					
					if(this.systemUser.institutionType == "1")
					{
						queryChildRequest.d605_30 = this.systemUser.institutionCode;
					}else{
						if(type == "8")
						{
							queryChildRequest.d605_30 = d605_30_;
						}else if(type == "6")
						{
							queryChildRequest.d605_30 = d605_30_.substring(0,6);
						}else if(type == "4")
						{
							queryChildRequest.d605_30 = d605_30_.substring(0,4);
						}else if(type == "2")
						{
							queryChildRequest.d605_30 = d605_30_.substring(0,2);
						}
					}
					
					queryChildRequest.d60516Start = DateField.stringToDate(this.timeStart.text,"YYYY-MM-DD");
					queryChildRequest.d60516End = DateField.stringToDate(this.timeEnd.text,"YYYY-MM-DD");
					queryChildRequest.d605_09 = this.d601_09.text;
					queryChildRequest.d605_04 = this.d601_04.text;
					queryChildRequest.d605_05 = this.d601_05.text;
				} 
				catch(error:Error) 
				{
					
				}
			}
			
			private function query(event:MouseEvent):void
			{
				queryChildRequest = new QueryChildRequest();
				this.initQueryParam();
				queryChildRequest.flag = "now";
				queryChildRequest.parameterPageindex = 1;
				queryChildRequest.parameterPagesize = 20;
				this.childDeathReportService.queryD605(queryChildRequest);
				
				queryChildRequest = new QueryChildRequest();
				this.initQueryParam();
				queryChildRequest.flag = "all";
				queryChildRequest.parameterPageindex = 1;
				queryChildRequest.parameterPagesize = 100000;
				this.childDeathReportService.queryD605(queryChildRequest);
			}
			
			protected function queryD605Handler(event:ResultEvent):void
			{
				var queryBirthResponse:Object = event.result;
				var flag:String = queryBirthResponse.flag;
				var listVD605:ArrayCollection = queryBirthResponse.d605s;
				var rowCount:Number = queryBirthResponse.rowCount;
				this.certificateDataGridAll.dataProvider = listVD605;
				if(queryBirthResponse.errorMessage == null)
				{ 
					if(flag == "now"){
						this.pagerBar.pageSize = 20;
						this.pagerBar.dataGrid = this.certificateDataGrid;
						this.pagerBar.rowCount = rowCount;
						this.pagerBar.resultData = listVD605;
						this.pagerBar.dataBind();
						this.pagerBar.pagerFunction = pagerFunction;
						if(rowCount > 0) {
							this.pagerBar.enabled = true;
						}
					}else if(flag == "all"){
						this.certificateDataGridAll.dataProvider = listVD605;
						if(rowCount > 0) {
							this.pagerBar.enabled = true;
						}
					}
				} else {
					Alert.show(queryBirthResponse.errorMessage, "系统提示");
				}
			}
			protected function deleteD605Handler(event:ResultEvent):void
			{
				var queryChildResponse:Object = event.result;
				if(queryChildResponse.errorMessage == null){
					if(queryChildResponse.promptMessage != null){
						Alert.show(queryChildResponse.promptMessage, "系统提示");
					}
					refresh();
				} else {
					Alert.show(queryChildResponse.errorMessage, "系统提示");
				}
			} 
			
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				queryChildRequest = new QueryChildRequest();
				this.initQueryParam();
				queryChildRequest.flag = "now";
				queryChildRequest.parameterPageindex = currentPageIndex;
				queryChildRequest.parameterPagesize = pageSize;
				
				this.childDeathReportService.queryD605(queryChildRequest);
			}
			
			public function refresh():void
			{
				queryChildRequest = new QueryChildRequest();
				this.initQueryParam();
				queryChildRequest.flag = "now";
				queryChildRequest.parameterPageindex = this.pagerBar.currentPageIndex;
				queryChildRequest.parameterPagesize = 20;
				this.childDeathReportService.queryD605(queryChildRequest);
				
				queryChildRequest = new QueryChildRequest();
				this.initQueryParam();
				queryChildRequest.flag= "";
				queryChildRequest.parameterPageindex = this.pagerBar.currentPageIndex;
				queryChildRequest.parameterPagesize = 20;
				this.childDeathReportService.queryD605(queryChildRequest);
			}
			public function update(event:MouseEvent):void
			{
				if(this.vD605 == null){
					Alert.show("请选择要操作的行");
					return;
				}else{
					var window:etitle = new etitle();
					window.vd605 = this.vD605;
					PopUpManager.addPopUp(window,this);
					var x:Number = (this.parentApplication.mdiCanvas.width - window.width) / 2;
					var y:Number = (this.parentApplication.mdiCanvas.height - window.height) / 2;
					window.move(x, y);
				}
			} 
			
			public function deleteD605(event:MouseEvent):void
			{
				if(this.vD605 == null){
					Alert.show("请选择要操作的行");
					return;
				}
				
				Alert.yesLabel = '是'; 
				Alert.noLabel = '否';
				Alert.show('确认删除信息？','删除儿童死亡登记',1|2,this,deleteChildD605);
				
				
			} 
			public function deleteChildD605(event:CloseEvent):void
			{
				if(event.detail==Alert.YES){
					queryChildRequest.d605_01 = this.vD605.d60501;
					this.childDeathReportService.deleteD605(queryChildRequest);
				}
			}
			public function printChildDeath(event:MouseEvent):void
			{
				if(this.vD605 == null){
					Alert.show("请选择要操作的行");
					return;
				}
				var d60501:Number=vD605.d60501;
				var url:String =this.parentApplication.contextRoot+"/ChildDeathReportServlet?flagF=0&d60501="+d60501;
				navigateToURL(new URLRequest(url), null);
			}
			
			
		]]>
	</fx:Script>
