<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  width="100%" height="100%"
		  creationComplete="moduleCreationCompleteHandler(event)"
		  xmlns:component="com.xyw.sys.custom.component.*">
	<fx:Declarations>
		<s:RemoteObject id="uploadService" destination="uploadService" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="pagerBfb" result="pagerBfbHandler(event)"/>
			<s:method name="uploadBfb" result="uploadBfbHandler(event)"/>
			<s:method name="uploadBfbs" result="uploadBfbsHandler(event)"/>
		</s:RemoteObject>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import com.xyw.module.csyxzm.model.VD305;
			import com.xyw.module.upload.model.UploadRequest;
			import com.xyw.module.upload.model.UploadResponse;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.rpc.events.ResultEvent;
			
			import spark.events.GridSelectionEvent;
			import spark.formatters.DateTimeFormatter;
			
			
			public var systemUser:SystemUser = null;
			[Bindable]
			public var vd305:VD305 = null;
			public var vd305s:ArrayCollection;
			
			public function moduleCreationCompleteHandler(event:FlexEvent):void
			{
				this.systemUser = this.parentApplication.systemUser;
				this.dataGridd305.addEventListener(GridSelectionEvent.SELECTION_CHANGE, onSelectionChange);
				var now:Date = new Date();
				this.timeStart.text=DateField.dateToString(now,"YYYY-MM-01");
				this.timeEnd.text=DateField.dateToString(now,"YYYY-MM-DD");
			}
			
			private function onSelectionChange(event:GridSelectionEvent):void
			{
				this.vd305 = DataGrid(event.target).selectedItem as VD305;
			}
			
			public function query():void
			{
				if(this.timeStart.text == ""){
					Alert.show("请选择起始日期！");
					return ;
				} else if(this.timeEnd.text == ""){
					Alert.show("请选择终止日期！");
					return ;
				} else if(this.timeStart.text > this.timeEnd.text){
					Alert.show("起始日期不能大于终止日期！");
					return ;
				}
				
				var uploadRequest:UploadRequest = new UploadRequest();
				uploadRequest.institutionCode = this.institutionCode.getLastSelectedInstitutionCode();
				if(uploadRequest.institutionCode == null){
					uploadRequest.institutionCode = this.systemUser.institutionCode;
				}
				uploadRequest.timeStart = this.timeStart.text;
				uploadRequest.timeEnd = this.timeEnd.text;
				uploadRequest.status = this.d30544.selectedItem.data;
				
				uploadRequest.parameterPageindex = 1;
				uploadRequest.parameterPagesize = 20;
				this.uploadService.pagerBfb(uploadRequest);
			}
			
			public function uploadBfbsHandler(event:ResultEvent):void 
			{
				var uploadResponse:Object = event.result;
				if(uploadResponse.errorMessage == null) {
					if(uploadResponse.promptMessage == null){
					} else {
						Alert.show(uploadResponse.promptMessage,"系统提示");
					}
				} else {
					Alert.show(uploadResponse.errorMessage,"系统提示");
				}
				query();
			}
			
			public function uploadBfbHandler(event:ResultEvent):void 
			{
				var uploadResponse:Object = event.result;
				if(uploadResponse.errorMessage == null) {
					if(uploadResponse.promptMessage == null){
					} else {
						Alert.show(uploadResponse.promptMessage,"系统提示");
					}
				} else {
					Alert.show(uploadResponse.errorMessage,"系统提示");
				}
				query();
			}
			
			public function pagerBfbHandler(event:ResultEvent):void 
			{
				var uploadResponse:Object = event.result;
				var rowCount:Number = uploadResponse.rowCount;
				if(uploadResponse.errorMessage == null) {
					vd305s = uploadResponse.vd305s;
					this.pagerBar.dataGrid = this.dataGridd305;
					this.pagerBar.rowCount = rowCount;
					this.pagerBar.visible = true;
					this.pagerBar.resultData = vd305s;
					this.pagerBar.dataBind();
					this.pagerBar.pagerFunction = pagerFunction;
					if(rowCount > 0) {
						this.pagerBar.enabled =true;
					} else {
						if(uploadResponse.promptMessage == null) {
						} else {
							Alert.show(uploadResponse.promptMessage, "系统提示");
						}
					}
				} else {
					Alert.show(uploadResponse.errorMessage, "系统提示");
				}
			}
			
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				if(this.timeStart.text == ""){
					Alert.show("请选择起始日期！");
					return ;
				} else if(this.timeEnd.text == ""){
					Alert.show("请选择终止日期！");
					return ;
				} else if(this.timeStart.text > this.timeEnd.text){
					Alert.show("起始日期不能大于终止日期！");
					return ;
				}
				
				var uploadRequest:UploadRequest = new UploadRequest();
				uploadRequest.institutionCode = this.institutionCode.getLastSelectedInstitutionCode();
				if(uploadRequest.institutionCode == null){
					uploadRequest.institutionCode = this.systemUser.institutionCode;
				}
				uploadRequest.timeStart = this.timeStart.text;
				uploadRequest.timeEnd = this.timeEnd.text;
				uploadRequest.status = this.d30544.selectedItem.data;
				
				uploadRequest.parameterPageindex = currentPageIndex;
				uploadRequest.parameterPagesize = pageSize;
				
				this.uploadService.pagerBfb(uploadRequest);
			}
			
			
			private function formatDateToString(vd305:Object, column:GridColumn):String
			{
				var dateTimeFormatter:DateTimeFormatter = new DateTimeFormatter();
				dateTimeFormatter.dateTimePattern = "yyyy-MM-dd HH:mm";
				var date_d30504:Date = vd305.d30504_;
				var date_d30504_Text:String = dateTimeFormatter.format(date_d30504);
				return date_d30504_Text;
			}
			
			private function statusFormat(vd305:Object, column:GridColumn):String
			{
				var status:String = vd305.d30537;
				if(status == "1"){
					return "成功";
				} else if(status == "2"){
					return "失败";
				} else if(status == "3"){
					return "未传";
				} else if(status == "4"){
					return "被传";
				} else {
					return "未知";
				}
			}
			
			public function uploadList():void
			{
				if(vd305s == null){
					Alert.show("请先查询要上传数据！","系统提示");
					return;
				}
				if(this.d30544.selectedItem.data == "1" || this.d30544.selectedItem.data == "4"){
					Alert.show("不能上传已上传数据！","系统提示");
					return;
				}
				
				this.uploadService.uploadBfbs(vd305s);
			}
			
			public function upload(event:MouseEvent):void
			{
				if(this.vd305 == null) {
					Alert.show("请选择要查看的行!","系统提示");
					return;
				} else if(this.vd305.d30544 == "1"){
					Alert.show("已成功上传，不能重复上传!","系统提示");
					return;
				} else if(this.vd305.d30544 == "4"){
					Alert.show("不能上传被传的数据!","系统提示");
					return;
				}
				
				this.uploadService.uploadBfb(this.vd305);
			}
			
		]]>
	</fx:Script>
	
	<s:Scroller width="100%" height="100%" horizontalScrollPolicy="auto" verticalScrollPolicy="auto">
		<s:VGroup width="100%" height="100%">
			<mx:TabNavigator width="100%" chromeColor="#ffffff" creationPolicy="all">
				<s:NavigatorContent label="分娩查询" width="100%">
					<s:VGroup width="100%">
						<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10" verticalAlign="middle">
							<s:Label text="助产机构"/>
							<component:InstitutionComboBox id="institutionCode" width="588"/>
						</s:HGroup>
						<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10" verticalAlign="middle">
							<s:Label text="分娩日期"/><mx:DateField yearNavigationEnabled="true" id="timeStart" width="120" dayNames='["日","一","二","三","四","五","六"]'
																monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
																formatString="YYYY-MM-DD"/>
							<s:Label text="至"/><mx:DateField yearNavigationEnabled="true" id="timeEnd" width="120" dayNames='["日","一","二","三","四","五","六"]'
															 monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
															 formatString="YYYY-MM-DD"/>
							
							<s:Label text="上传状态"/><s:DropDownList id="d30544" dataProvider="{new ArrayCollection( [{label:'请选择',data:'0'},{label:'上传成功',data:'1'},{label:'上传失败',data:'2'},{label:'暂未上传',data:'3'},{label:'被上传',data:'4'}])}" selectedIndex="0"/>
							<s:Button label="查询" click="query()"/>
							<s:Button label="上传当前页" click="uploadList()"/>
						</s:HGroup>
					</s:VGroup>
					
				</s:NavigatorContent>
			</mx:TabNavigator>
			<s:DataGrid id="dataGridd305" editable="true" rowHeight="22" width="100%" height="330" alternatingRowColors="[#FFFFFF,#EEEEEE]" skinClass="com.xyw.sys.custom.skin.CustomDataGridSkin">  
				<s:columns>
					<s:ArrayList>
						<s:GridColumn dataField="d30501" headerText="主键" visible="false"/>
						<s:GridColumn headerText="序号" width="40" itemRenderer="com.xyw.sys.custom.itemrenderer.CustomGridColumnItemRenderer" editable="false"/>
						<s:GridColumn dataField="d30502" headerText="姓名" width="60"/>
						<s:GridColumn dataField="d30503_Zh" headerText="性别" width="40"/>
						<s:GridColumn dataField="d30504_" headerText="出生日期" width="110" labelFunction="formatDateToString"/>
						<s:GridColumn dataField="d30534" headerText="出生证号" width="90"/>
						<s:GridColumn dataField="d30533" headerText="原出生证号" width="90"/>
						<s:GridColumn dataField="d30522" headerText="父亲姓名" width="80"/>
						<s:GridColumn dataField="d30524" headerText="父亲证件证号" width="150"/>
						<s:GridColumn dataField="d30516" headerText="母亲姓名" width="80"/>
						<s:GridColumn dataField="d30518" headerText="母亲证件证号" width="150"/>
						<s:GridColumn dataField="d30528" headerText="领证人" width="60"/>
						<s:GridColumn dataField="d30531" headerText="领证人证件号" width="150"/>
						<s:GridColumn dataField="d30511_Zh" headerText="助产机构" width="140"/>
						<s:GridColumn dataField="d30536_Zh" headerText="补发机构" width="140"/>
						<s:GridColumn dataField="d30532_Zh" headerText="补发原因" width="80"/>
						<s:GridColumn dataField="d30544" headerText="上传标志" width="80" labelFunction="statusFormat"/>
						<s:GridColumn headerText="操作" width="60" editable="false">
							<s:itemRenderer>
								<fx:Component>
									<s:GridItemRenderer>
										<s:Button click="outerDocument.upload(event);" label="上传" cornerRadius="0" id="upload" width="100%" height="100%" skinClass="com.xyw.sys.custom.skin.CustomButtonSkin"/>
									</s:GridItemRenderer>
								</fx:Component>
							</s:itemRenderer>	
						</s:GridColumn>
					</s:ArrayList>
				</s:columns>
				
			</s:DataGrid>
			<component:PagerBar id="pagerBar" enabled="false"/>
		</s:VGroup>
	</s:Scroller>
</s:Module>
