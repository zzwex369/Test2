<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  width="100%" height="100%"
		  creationComplete="moduleCreationCompleteHandler(event)"
		  xmlns:component="com.xyw.sys.custom.component.*">
	<fx:Declarations>
		<s:RemoteObject id="uploadService" destination="uploadService" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="pagerFz" result="pagerFzHandler(event)"/>
			<s:method name="uploadFz" result="uploadFzHandler(event)"/>
			<s:method name="uploadFzs" result="uploadFzsHandler(event)"/>
		</s:RemoteObject>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import com.xyw.module.csyxzm.model.VD401;
			import com.xyw.module.upload.model.UploadRequest;
			import com.xyw.module.upload.model.UploadResponse;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.rpc.events.ResultEvent;
			
			import spark.events.GridSelectionEvent;
			import spark.formatters.DateTimeFormatter;
			
			
			public var systemUser:SystemUser = null;
			[Bindable]
			public var vd401:VD401 = null;
			public var vd401s:ArrayCollection;
			
			public function moduleCreationCompleteHandler(event:FlexEvent):void
			{
				this.systemUser = this.parentApplication.systemUser;
				this.dataGridd401.addEventListener(GridSelectionEvent.SELECTION_CHANGE, onSelectionChange);
				var now:Date = new Date();
				this.timeStart.text=DateField.dateToString(now,"YYYY-MM-01");
				this.timeEnd.text=DateField.dateToString(now,"YYYY-MM-DD");
			}
			
			private function onSelectionChange(event:GridSelectionEvent):void
			{
				this.vd401 = DataGrid(event.target).selectedItem as VD401;
			}
			
			public function query():void
			{
				if(this.timeStart.text == ""){
					Alert.show("请选择起始日期！");
					return ;
				} else if(this.timeEnd.text == ""){
					Alert.show("请选择终止日期！");
					return ;
				} else if(this.timeStart.text > this.timeEnd.text){
					Alert.show("起始日期不能大于终止日期！");
					return ;
				}
				
				var uploadRequest:UploadRequest = new UploadRequest();
				uploadRequest.institutionCode = this.institutionCode.getLastSelectedInstitutionCode();
				if(uploadRequest.institutionCode == null){
					uploadRequest.institutionCode = this.systemUser.institutionCode;
				}
				uploadRequest.timeStart = this.timeStart.text;
				uploadRequest.timeEnd = this.timeEnd.text;
				uploadRequest.status = this.d40128.selectedItem.data;
				
				uploadRequest.parameterPageindex = 1;
				uploadRequest.parameterPagesize = 20;
				this.uploadService.pagerFz(uploadRequest);
			}
			
			public function uploadFzsHandler(event:ResultEvent):void 
			{
				var uploadResponse:Object = event.result;
				if(uploadResponse.errorMessage == null) {
					if(uploadResponse.promptMessage == null){
					} else {
						Alert.show(uploadResponse.promptMessage,"系统提示");
					}
				} else {
					Alert.show(uploadResponse.errorMessage,"系统提示");
				}
				query();
			}
			
			public function uploadFzHandler(event:ResultEvent):void 
			{
				var uploadResponse:Object = event.result;
				if(uploadResponse.errorMessage == null) {
					if(uploadResponse.promptMessage == null){
					} else {
						Alert.show(uploadResponse.promptMessage,"系统提示");
					}
				} else {
					Alert.show(uploadResponse.errorMessage,"系统提示");
				}
				query();
			}
			
			public function pagerFzHandler(event:ResultEvent):void 
			{
				var uploadResponse:Object = event.result;
				var rowCount:Number = uploadResponse.rowCount;
				if(uploadResponse.errorMessage == null) {
					vd401s = uploadResponse.vd401s;
					this.pagerBar.dataGrid = this.dataGridd401;
					this.pagerBar.rowCount = rowCount;
					this.pagerBar.visible = true;
					this.pagerBar.resultData = vd401s;
					this.pagerBar.dataBind();
					this.pagerBar.pagerFunction = pagerFunction;
					if(rowCount > 0) {
						this.pagerBar.enabled =true;
					} else {
						if(uploadResponse.promptMessage == null) {
						} else {
							Alert.show(uploadResponse.promptMessage, "系统提示");
						}
					}
				} else {
					Alert.show(uploadResponse.errorMessage, "系统提示");
				}
			}
			
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				if(this.timeStart.text == ""){
					Alert.show("请选择起始日期！");
					return ;
				} else if(this.timeEnd.text == ""){
					Alert.show("请选择终止日期！");
					return ;
				} else if(this.timeStart.text > this.timeEnd.text){
					Alert.show("起始日期不能大于终止日期！");
					return ;
				}
				
				var uploadRequest:UploadRequest = new UploadRequest();
				uploadRequest.institutionCode = this.institutionCode.getLastSelectedInstitutionCode();
				if(uploadRequest.institutionCode == null){
					uploadRequest.institutionCode = this.systemUser.institutionCode;
				}
				uploadRequest.timeStart = this.timeStart.text;
				uploadRequest.timeEnd = this.timeEnd.text;
				uploadRequest.status = this.d40128.selectedItem.data;
				
				uploadRequest.parameterPageindex = currentPageIndex;
				uploadRequest.parameterPagesize = pageSize;
				
				this.uploadService.pagerFz(uploadRequest);
			}
			
			
			private function formatDateToString04(vd401:Object, column:GridColumn):String
			{
				var dateTimeFormatter:DateTimeFormatter = new DateTimeFormatter();
				dateTimeFormatter.dateTimePattern = "yyyy-MM-dd";
				var date_d40104:Date = vd401.d40104;
				var date_d40104_Text:String = dateTimeFormatter.format(date_d40104);
				return date_d40104_Text;
			}
			
			private function formatDateToString08(vd401:Object, column:GridColumn):String
			{
				var dateTimeFormatter:DateTimeFormatter = new DateTimeFormatter();
				dateTimeFormatter.dateTimePattern = "yyyy-MM-dd";
				var date_d40108:Date = vd401.d40108;
				var date_d40108_Text:String = dateTimeFormatter.format(date_d40108);
				return date_d40108_Text;
			}
			
			private function statusFormat(vd401:Object, column:GridColumn):String
			{
				var status:String = vd401.d40137;
				if(status == "1"){
					return "成功";
				} else if(status == "2"){
					return "失败";
				} else if(status == "3"){
					return "未传";
				} else if(status == "4"){
					return "被传";
				} else {
					return "未知";
				}
			}
			
			public function uploadList():void
			{
				if(vd401s == null){
					Alert.show("请先查询要上传的数据！","系统提示");
				}
				if(this.d40128.selectedItem.data == "1" || this.d40128.selectedItem.data == "4"){
					Alert.show("不能上传已上传数据！","系统提示");
				}
				this.uploadService.uploadFzs(vd401s);
			}
			
			public function upload(event:MouseEvent):void
			{
				if(this.vd401 == null) {
					Alert.show("请选择要查看的行!","系统提示");
					return;
				} else if(this.vd401.d40128 == "1"){
					Alert.show("已成功上传，不能重复上传!","系统提示");
					return;
				} else if(this.vd401.d40128 == "4"){
					Alert.show("不能上传被传的数据!","系统提示");
					return;
				}
				
				this.uploadService.uploadFz(this.vd401);
			}
			
		]]>
	</fx:Script>
	
	<s:Scroller width="100%" height="100%" horizontalScrollPolicy="auto" verticalScrollPolicy="auto">
		<s:VGroup width="100%" height="100%">
			<mx:TabNavigator width="100%" chromeColor="#ffffff" creationPolicy="all">
				<s:NavigatorContent label="分娩查询" width="100%">
					<s:VGroup width="100%">
						<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10" verticalAlign="middle">
							<s:Label text="助产机构"/>
							<component:InstitutionComboBox id="institutionCode" width="588"/>
						</s:HGroup>
						<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10" verticalAlign="middle">
							<s:Label text="分娩日期"/><mx:DateField yearNavigationEnabled="true" id="timeStart" width="120" dayNames='["日","一","二","三","四","五","六"]'
																monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
																formatString="YYYY-MM-DD"/>
							<s:Label text="至"/><mx:DateField yearNavigationEnabled="true" id="timeEnd" width="120" dayNames='["日","一","二","三","四","五","六"]'
															 monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
															 formatString="YYYY-MM-DD"/>
							
							<s:Label text="上传状态"/><s:DropDownList id="d40128" dataProvider="{new ArrayCollection( [{label:'请选择',data:'0'},{label:'上传成功',data:'1'},{label:'上传失败',data:'2'},{label:'暂未上传',data:'3'},{label:'被上传',data:'4'}])}" selectedIndex="0"/>
							<s:Button label="查询" click="query()"/>
							<s:Button label="上传当前页" click="uploadList()"/>
						</s:HGroup>
					</s:VGroup>
					
				</s:NavigatorContent>
			</mx:TabNavigator>
			<s:DataGrid id="dataGridd401" editable="true" rowHeight="22" width="100%" height="330" alternatingRowColors="[#FFFFFF,#EEEEEE]" skinClass="com.xyw.sys.custom.skin.CustomDataGridSkin">  
				<s:columns>
					<s:ArrayList>
						<s:GridColumn headerText="序号" width="50" itemRenderer="com.xyw.sys.custom.itemrenderer.CustomGridColumnItemRenderer" editable="false"/>
						<s:GridColumn dataField="d40101" headerText="主键" visible="false"/>
						<s:GridColumn dataField="d40102" headerText="姓名"/>
						<s:GridColumn dataField="d40103Zh" headerText="性别"/>
						<s:GridColumn dataField="d40104" headerText="出生日期" labelFunction="formatDateToString08" editable="false"/>
						<s:GridColumn dataField="d40105" headerText="出生证号" itemRenderer="com.xyw.sys.custom.itemrenderer.CustomColorItemRenderer"/>
						<s:GridColumn dataField="d40106Zh" headerText="作废原因"/>
						<s:GridColumn dataField="d40108" headerText="作废时间" labelFunction="formatDateToString08" editable="false"/>
						<s:GridColumn dataField="d40109" headerText="经办人"/>
						<s:GridColumn dataField="d40110Zh" headerText="经办单位"/>
						<s:GridColumn dataField="d40111" headerText="审核人"/>
						<s:GridColumn dataField="d40112Zh" headerText="审核单位"/>
						<s:GridColumn dataField="d40124Zh" headerText="是否处理"/>
						<s:GridColumn dataField="d40128" headerText="上传标志" width="90" labelFunction="statusFormat"/>
						<s:GridColumn headerText="操作" width="60" editable="false">
							<s:itemRenderer>
								<fx:Component>
									<s:GridItemRenderer>
										<s:Button click="outerDocument.upload(event);" label="上传" cornerRadius="0" id="upload" width="100%" height="100%" skinClass="com.xyw.sys.custom.skin.CustomButtonSkin"/>
									</s:GridItemRenderer>
								</fx:Component>
							</s:itemRenderer>	
						</s:GridColumn>
					</s:ArrayList>
				</s:columns>
				
			</s:DataGrid>
			<component:PagerBar id="pagerBar" enabled="false"/>
		</s:VGroup>
	</s:Scroller>
</s:Module>
