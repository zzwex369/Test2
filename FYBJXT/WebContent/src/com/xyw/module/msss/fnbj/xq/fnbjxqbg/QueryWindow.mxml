<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   xmlns:component = "com.xyw.sys.custom.component.*"
			   title="档案信息加载" backgroundColor="#FFFFFF"
			   chromeColor="#5CACEE" close="removeWindow()" width="1024" height="246"
			   creationComplete="init()">
	<fx:Declarations>
		<s:RemoteObject id="f601Service" destination="f601Service" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="queryF601" result="queryF601Handler(event)"/>
		</s:RemoteObject>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import com.xyw.module.msss.fnbj.model.F601Request;
			import com.xyw.module.msss.fnbj.model.VF601;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			
			import spark.events.GridSelectionEvent;
			
			public var f60103:String;
			public var f60104:String;
			public var f60129:String;
			public var vf601:VF601;
			
			public function init():void {
				var f601Request:F601Request  = new F601Request();
			/* 	f601Request.f60103 = this.f60103;
				f601Request.f60104 = this.f60104;
				f601Request.f60129 = this.f60129; */
				f601Request.parameterPageindex = 1;
				f601Request.parameterPagesize = 20;
				
				this.f601Service.queryF601(f601Request);
				this.certificateDataGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE,onSelected);
			}
			
			public function queryF601Handler(event:ResultEvent):void {
				var f601Response:Object = event.result;
				
				if(f601Response.state){
					this.certificateDataGrid.dataProvider = f601Response.vf601s;
				}else{
					Alert.show(f601Response.errorMessage,"系统提示");
				}
			}
			
			private function onSelected(event:Event):void{
				this.vf601 = DataGrid(event.target).selectedItem as VF601;
				
				if(this.vf601 == null){
					Alert.show("请选择要加载的数据！","系统提示");
					this.vf601 =null;
				}
				var sfindex:index=this.owner as index;
				sfindex.loadF601(this.vf601);
				this.removeWindow();
			}
			
			private function removeWindow():void
			{ 
				PopUpManager.removePopUp(this);
			}
			
		]]>
	</fx:Script>
	<s:VGroup width="100%" horizontalAlign="center" verticalAlign="middle">
		<s:HGroup paddingBottom="5" paddingLeft="15" paddingTop="10"  paddingRight="5" width="100%" height="100%" chromeColor="#F6F8FA" contentBackgroundColor="#FFFFFF">
			<s:DataGrid id="certificateDataGrid" alternatingRowColors="[#FFFFFF,#EEEEEE]" chromeColor="#5CACEE" editable="true" rowHeight="22" width="980" height="158" >
				<s:columns>
					<s:ArrayList>
						<s:GridColumn dataField="f60101" headerText="主键" visible="false"/>
						<s:GridColumn dataField="f60102" headerText="主键2" visible="false"/>
						<s:GridColumn headerText="序号" width="40" itemRenderer="com.xyw.sys.custom.itemrenderer.CustomGridColumnItemRenderer" editable="false"/>
						<s:GridColumn dataField="f60103" headerText="产妇姓名" width="90"/>
						<s:GridColumn dataField="f60104" headerText="产妇身份证号" width="140"/>
						<s:GridColumn dataField="f60105Str" headerText="出生日期" width="90"/>
						<s:GridColumn dataField="f60109" headerText="联系方式" width="90"/>
						<s:GridColumn dataField="f60110" headerText="体重" width="90"/>
						<s:GridColumn dataField="f60115Zh" headerText="本次胎儿数" width="100"/>
						<s:GridColumn dataField="f60136" headerText="本次胎数" width="90"/>
						<s:GridColumn dataField="f60116Str" headerText="末次月经" width="90"/>
						<s:GridColumn dataField="f60128" headerText="申请医生" width="90"/>
						<s:GridColumn dataField="f60126Str" headerText="标本采血日期" width="90"/>
						<s:GridColumn dataField="f60129Zh" headerText="采血单位" width="100"/>
					</s:ArrayList>
				</s:columns>
			</s:DataGrid>					
		</s:HGroup>
		
		<s:HGroup contentBackgroundColor="#FF0000" verticalAlign="middle" horizontalAlign="right" paddingBottom="20" paddingTop="10" paddingLeft="10" paddingRight="20" width="100%" height="30">
			<s:Button label="关闭" click="removeWindow();"/>
		</s:HGroup>
	</s:VGroup>
	
</s:TitleWindow>
