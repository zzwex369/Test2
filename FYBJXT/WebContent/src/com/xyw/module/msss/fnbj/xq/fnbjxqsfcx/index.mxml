							</s:HGroup>  
							
						</s:HGroup>  
						<s:HGroup width="100%" paddingBottom="10" paddingLeft="10" paddingRight="10"
								  verticalAlign="middle">
							<s:Label text="产妇姓名"/><s:TextInput id="F603_03"/>
							<s:Label text="证号号码"/><s:TextInput id="F603_04" width="140"/>
