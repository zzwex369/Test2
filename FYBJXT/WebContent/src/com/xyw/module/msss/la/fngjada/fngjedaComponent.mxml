	<fx:Script>
		<![CDATA[
			import com.xyw.module.fnbj.model.L301;
			import com.xyw.module.fnbj.model.L301Request;
			import com.xyw.module.fnbj.model.VL301;
			import com.xyw.sys.custom.component.CompMethod;
			import com.xyw.sys.custom.component.DataGridEvent;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.CloseEvent;
			import mx.formatters.DateFormatter;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			import mx.utils.StringUtil;
			import spark.events.GridCaretEvent;
			import spark.events.GridSelectionEvent;
			[Bindable]
			private var systemUser:SystemUser =null;
			private var l301:L301=null;
			[Bindable]
			public var vl301:VL301=null;
			private var l301Request:L301Request=null;
			public var l30102:String=null;
			public var l30104:String=null;
			public var systemUserInstitutionCode:String=null;
			public var nowDate:Date=null;
			public var tenDaysAgoDate:Date=null;
			private function init():void
			{
				this.systemUser = this.parentApplication.systemUser;
				var dateStr:String = DateField.dateToString(new Date(),"YYYY-MM-01");
				timeStart.selectedDate = DateFormatter.parseDateString(dateStr);
				timeEnd.selectedDate = new Date();
				this.certificateDataGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE,onSelected);
			}
			private function onSelected(event:GridSelectionEvent):void
			{
				this.vl301= DataGrid(event.target).selectedItem as VL301;
			}
			/*----------获取查询条件数据---------*/
			private function initQueryParam():Boolean
			{
				var boolean:Boolean=true;
				l301=new L301();
				l301Request = new L301Request();
				try{
					if(systemUserInstitutionCode!=null)
					{
						l301.l30117=systemUserInstitutionCode;
					}else
					{
						var type:String = L301_17.getLastSelectedInstitution();
						var l301_17:String = L301_17.getLastSelectedInstitutionCode();
						if(this.systemUser.institutionType == "1")
						{
							l301.l30117 = this.systemUser.institutionCode;
						}else{
							if(type == "8")
							{
								l301.l30117  = l301_17;
							}else if(type == "6")
							{
								l301.l30117 = l301_17.substring(0,6);
							}else if(type == "4")
							{
								l301.l30117 = l301_17.substring(0,4);
							}else if(type == "2")
							{
								l301.l30117  = l301_17.substring(0,2);
							}
						}
					}
					if(nowDate!=null&&tenDaysAgoDate!=null)
					{
						l301Request.timeStr=tenDaysAgoDate;
						l301Request.timeEnd=nowDate;
					}else
					{					
						l301Request.timeStr=timeStart.selectedDate;
						l301Request.timeEnd=timeEnd.selectedDate;
					}
					l301Request.flag="false";
					if(l30102!=null&&l30104!=null)
					{
						l301.l30102=l30102;
						l301.l30104=l30104;
						l301Request.flag="true";
					}
					var i:int=tab.selectedIndex;
					 if(Boolean(i))
					{
						if(StringUtil.trim(L301_02.text)==""&&
						   StringUtil.trim(L301_04.text)=="")
						{
							Alert.show("请输入个人信息","系统提示");
							return false;
						}
						l301.l30102=StringUtil.trim(L301_02.text);
						l301.l30104=StringUtil.trim(L301_04.text);
						l301Request.flag="true";
					}
						l301Request.l301=l301;
						l30102=null;
						l30104=null;
						vl301=null;
						nowDate=null;
						tenDaysAgoDate=null;
						systemUserInstitutionCode=null;
				}catch(e:Error)
				{
					Alert.show("查询异常","系统提示");
				}
				return boolean;
			}
			public function queryL301():void
			{
				_query(1,20);
			}
			public function queryL301Handler(event:ResultEvent):void
			{
				certificateDataGrid.dataProvider=null;
				this.pagerBar.rowCount=0;
				var l301Response:Object = event.result;
				if(!l301Response.state)
				{
					Alert.show(l301Response.errorMessage,"系统提示");
					return;
				}
				var vl301s:ArrayCollection =l301Response.vl301s;
				var rowCount:Number = l301Response.rowCount;
				this.certificateDataGrid.dataProvider=vl301s;
				this.pagerBar.pageSize = 20;
				this.pagerBar.dataGrid = this.certificateDataGrid;  
				this.pagerBar.rowCount = rowCount;
				this.pagerBar.resultData = vl301s;
				this.pagerBar.dataBind();
				this.pagerBar.pagerFunction = pagerFunction;
				if(rowCount > 0) {
					this.pagerBar.enabled = true;
				}
			}
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				_query(currentPageIndex,pageSize);
			}
			
			public function refresh():void
			{
				_query(this.pagerBar.currentPageIndex,20);
			}
			
			private function _query(currentPageIndex:int,pageSize:int):void
			{
				this.initQueryParam();
				l301Request.parameterPageindex=currentPageIndex;
				l301Request.parameterPagesize=pageSize;
				this.l301Service.queryL301(l301Request);	
			}
			
			private function delL301():void
			{
				if(vl301!=null)
				{
					Alert.show("是否删除这条信息","系统提示",3,this,del);
				}else
				{
					Alert.show("请选择一条记录","系统提示");
				}
			}
			private function delL301Handler(event:ResultEvent):void
			{
				var l301Response:Object=event.result;
				if(l301Response.state)
				{
					Alert.show(l301Response.promptMessage,"系统提示");
					queryL301();
				}else
				{
					Alert.show(l301Response.errorMessage,"系统提示");
				}
			}
			private function del(event:CloseEvent):void
			{
				l301Request=new L301Request();
				l301Request.l30101=vl301.l30101;
				if(event.detail==Alert.YES)
				l301Service.delL301(l301Request);
			}
			private function updateL301():void
			{
				if(vl301!=null)
				{
					var window:updateWindow= new updateWindow();
					window.owner=this;
					window.vl301=this.vl301;
					PopUpManager.addPopUp(window,this);
					var x:Number = (this.parentApplication.mdiCanvas.width - window.width)/2;
					var y:Number = (this.parentApplication.mdiCanvas.height - window.height)/2;
					window.move(x,y);  
				}else
				{
					Alert.show("请选择一条记录","系统提示");
				}
			}
			private function register():void
			{
				var window:title = new title();
				window.owner=this;
				window.vl301=vl301;
				PopUpManager.addPopUp(window,this);
				var x:Number = (this.parentApplication.mdiCanvas.width - window.width)/2;
				var y:Number = (this.parentApplication.mdiCanvas.height - window.height)/2;
				window.move(x,y); 
			}
			private function readCard():void
			{
				var arr:Array=CompMethod.readCard();
				if(arr!=null)
				{
					var boolean:Boolean=CompMethod.sex("女",arr[1]);
					if(boolean)
					{
						L301_02.text=arr[0];
						L301_04.text=arr[5];
						queryL301();
					}
				}else
				{					
					Alert.show("读卡失败","系统提示");
				}
			}
			private function printCertificate(event:MouseEvent):void
			{
				
				if(this.vl301 == null)
				{
					Alert.show("请选择要操作的行!","系统提示");
					return;
				}
				var urlRequest:URLRequest = null;
				var selectL30101:Number = vl301.l30101;		
				var url:String =this.parentApplication.contextRoot +"/fngjadaServlet?l30101=" +selectL30101;
				navigateToURL(new URLRequest(url), null);
			}
		]]>
	</fx:Script>
	<mx:TabNavigator width="1150" id="tab">
	<s:NavigatorContent width="100%" label="综合查询" buttonMode="true">
		<s:VGroup>
			<s:HGroup width="100%" paddingBottom="0" paddingLeft="10" paddingRight="10" verticalAlign="middle">
				<s:Label text="录入单位"/>
				<component:InstitutionComboBox id="L301_17" width="100%" buttonMode="true"/>
			</s:HGroup>
			<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10" verticalAlign="middle">
				<s:Label text="登记时间"/><mx:DateField id="timeStart" width="120" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
													monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
													formatString="YYYY-MM-DD" yearNavigationEnabled="true" buttonMode="true"/>
				<s:Label text="至"/><mx:DateField id="timeEnd" width="120" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
												 monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
												 formatString="YYYY-MM-DD" yearNavigationEnabled="true" buttonMode="true"/>
				<s:Button label="查询" buttonMode="true" click="queryL301()" />
				<s:Button label="打印" click="printCertificate(event)"/>
				<s:Button width="60" label="修改"   buttonMode="true" enabled="{vl301!=null}" click="updateL301()"/>
				<s:Button width="60" label="删除"   buttonMode="true" enabled="{vl301!=null}" click="delL301()"/>
				<s:Button label="检查登记" buttonMode="true" enabled="{vl301!=null}" click="register()" />
			</s:HGroup>
		</s:VGroup>
	</s:NavigatorContent>
	<s:NavigatorContent width="100%" label="精确查询" buttonMode="true">
		<s:VGroup>
			<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10" verticalAlign="middle">
				<s:Label text="姓名"/><s:TextInput id="L301_02"/>
				<s:Label text="证件号码"/><s:TextInput id="L301_04" width="140"/>
				<s:Button id="duka1" width="60" label="读卡"   buttonMode="true" enabled="{systemUser.duka=='1'}" click="readCard()"/>
				<s:Button width="60" label="查询"   buttonMode="true" click="queryL301()"/>
				<s:Button label="打印" click="printCertificate(event)"/>
				<s:Button width="60" label="修改"   buttonMode="true" enabled="{vl301!=null}" click="updateL301()"/>
				<s:Button width="60" label="删除"   buttonMode="true" enabled="{vl301!=null}" click="delL301()"/>
				<s:Button label="检查登记" buttonMode="true" enabled="{vl301!=null}" click="register()" />
			</s:HGroup>
		</s:VGroup>
	</s:NavigatorContent>
</mx:TabNavigator>
