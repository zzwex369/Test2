			import spark.components.BorderContainer;
			import spark.events.GridSelectionEvent;
			private var comboBoxDataRequest:ComboBoxDataRequest;
			public var ve601:VE601 = null;
			public var e601:E601 = null;
			public var e601Request:E601Request=new E601Request;
			[Bindable]
			public var systemUser:SystemUser =null;
			public var allstate:Boolean = false;
			[Bindable] 
			private var employeeList:ArrayCollection = new ArrayCollection(); 
			/****************初始化数据********************/
			private function moduleCreationCompleteHandler():void
			{
				this.systemUser = this.parentApplication.systemUser;
				//检查读卡权限
				var dateStr:String = DateField.dateToString(new Date(),"YYYY-MM-01");
				this.timeStart.selectedDate = DateFormatter.parseDateString(dateStr);
				this.timeEnd.selectedDate = new Date();
				this.certificateDataGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE,onSelected); 
				initializeComboBox();
			}
			
			private function onSelected(event:GridSelectionEvent):void
			{
				this.ve601= DataGrid(event.target).selectedItem as VE601;
			}
			private function initializeComboBox():void
			{
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.sql = "select * from  S601_04 t"
				comboBoxDataRequest.flag = "S601_04";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
			}
			/******************得到数据******************/
			private function getComboBoxDataHandler(event:ResultEvent):void
			{
				var comboBoxDataResponse:Object =  event.result;
				var flag:String = comboBoxDataResponse.flag;
				var comboBoxDataList:ArrayCollection = comboBoxDataResponse.comboBoxDataList;
				if(flag == "S601_04")
				{
					this.E601_30_01.dataProvider = comboBoxDataList;
					this.E601_30_01.selectedIndex = 2;	
					this.E601_30_02.dataProvider = comboBoxDataList;
					this.E601_30_02.selectedIndex = 2;	
				}
			}
			/*----------获取查询条件数据---------*/
			private function initQueryParam():Boolean
			{
				e601=new E601();
				e601Request = new E601Request();
				try{	
					var type:String = this.E601_22.getLastSelectedInstitution();
					var e60122:String = this.E601_22.getLastSelectedInstitutionCode();
					if(this.systemUser.institutionType == "1")
					{
						e601.e60122 = this.systemUser.institutionCode;
					}else{
						if(type == "8")
						{
							e601.e60122 = e60122;
						}else if(type == "6")
						{
							e601.e60122= e60122.substring(0,6);
						}else if(type == "4")
						{
							e601.e60122= e60122.substring(0,4);
						}else if(type == "2")
						{
							e601.e60122 = e60122.substring(0,2);
						}
					}		
					e601Request.timeStr = DateField.stringToDate(this.timeStart.text,'YYYY-MM-DD');
					e601Request.timeEnd = DateField.stringToDate(this.timeEnd.text,'YYYY-MM-DD');	
					if( E601_30_01.selectedIndex!=0)
					{
						e601.e60130= E601_30_01.selectedIndex+"";
					}
					var index:int=tab.selectedIndex;
					e601Request.flag="false";
					//0为false
					if(Boolean(index)){
						if(E601_04.text==""&&E601_05.text==""&&E601_06.text==""&&
							E601_13.text==""&&E601_30_02.selectedIndex==0)
						{
							Alert.show("请输入查询条件","系统提示");
							return false;
						}else{				
						/* 	e601.e60104 = StringUtil.trim(this.E601_04.text);
							e601.e60105 = StringUtil.trim(this.E601_05.text);					
							e601.e60106= StringUtil.trim(this.E601_06.text);	
							e601.e60113= StringUtil.trim(this.E601_13.text);	 */
							if( E601_30_01.selectedIndex!=0)
							{
								e601.e60130= E601_30_01.selectedIndex+"";
							}
							e601Request.flag="true";
						}
					}
					e601Request.e601=e601;
				}catch(error:Error) {		
					Alert.show("查询条件异常");
					return false;
				}
				return true;
			}
			
			/****************读卡********************/
			protected function readCard(event:MouseEvent):void
			{
				try
				{
					//readCard是调用index.js下的函数，读卡涉及index.jsp和index.js两个文件
					var str:String = ExternalInterface.call("parent.readCard");
					if(str != null && str.length != 0){	
						var array:Array = str.split(",");
						if(array[1]!="女")
						{
							Alert.show("请读母亲信息！","系统提示");
							return;
						}
						this.E601_04.text = array[0];//姓名
						this.E601_05.text = array[5];//身份证号
					}else{
						Alert.show("读卡失败！");
					}
				} 
				catch(error:Error) 
				{
					Alert.show("读卡失败！");
				}
			}
			
			/****************查询********************/
			public function queryE601():void
			{
				var b:Boolean=this.initQueryParam();
				if(!b){
					return ;
				}
				e601Request.parameterPageindex=1;
				e601Request.parameterPagesize=500;
				this.e601Service.queryE601(e601Request);
			}
			private function queryE601Handler(event:ResultEvent):void{
				var e601Response:Object = event.result;
				var _ve601:ArrayCollection =e601Response.ve601s;
				var rowCount:Number = e601Response.rowCount;
				certificateDataGrid.dataProvider=_ve601;
				//Alert.show("请输入","系统提示"+ve);
				if(_ve601.length>7)
				{
					this.certificateDataGrid.height=450;
				}
				else
				{
					this.certificateDataGrid.height=340;
				} 
			}
			/*****************获取邮寄编号*******************/
			public function renewE601():void
			{	
				if(certificateDataGrid.getAllItems()!=null)
				{
					var _title:title=new title();
					_title.owner = this;
					PopUpManager.addPopUp(_title,this,true);
					var x:Number = (this.parentApplication.mdiCanvas.width - _title.width)/2;
					var y:Number = (this.parentApplication.mdiCanvas.height - _title.height)/2;
					_title.move(x,y); 
					
				}else{
					Alert.show("请选择操作的行","系统提示");
					return;
				}	
			}
			/******************得到邮寄编号******************/
			public function putNum(num:String):void
			{
				/* e601Request.ve601s=certificateDataGrid.getAllItems();
				e601Request.e60131=num;
				e601Request.flag="false"; */
				e601Service.renewE601(e601Request);
			}
			/*******************更新数据返回的信息*****************/
			private function renewE601Handler(event:ResultEvent):void
			{
				var e601Response:Object=event.result;
				if(!e601Response.state){
					Alert.show(e601Response.errorMessage,"系统提示");
					return ;
				}
				Alert.show(e601Response.promptMessage,"系统提示");
				refresh();
			}
			/****************重新查询********************/
			public function refresh():void
			{
				this.initQueryParam();
				e601Request.parameterPageindex=1;
				e601Request.parameterPagesize=500;
				this.e601Service.queryE601(e601Request);
			}
			/*****************datagrid序号生成*******************/
		 	private function Num(oItem:Object,iCol:int):String    
			{   
				var iIndex:int = certificateDataGrid.dataProvider.getItemIndex(oItem) + 1; 	
				return String(iIndex);     
			}  
		]]>
	</fx:Script>
