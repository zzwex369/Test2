					<s:Label text="登记医院"/>
					<component:InstitutionComboBox id="E601_47" width="100%" buttonMode="true"/>
				</s:HGroup>
				
				<s:HGroup >
					<s:HGroup width="100%" paddingLeft="10" paddingRight="10" verticalAlign="middle" gap="10" id="E601_57">
						<s:Label text="PKU结论" paddingTop="3"/>
						<s:RadioButton label="全部" value="" groupName="E601_57" selected="true"/>
						<s:RadioButton label="阴性" value="阴性" groupName="E601_57"/>
						<s:RadioButton label="阳性" value="阳性" groupName="E601_57"/>
						<s:RadioButton label="可疑" value="可疑" groupName="E601_57"/>
					</s:HGroup>
					
					<s:HGroup width="100%"  paddingLeft="10" paddingRight="10" verticalAlign="middle" gap="10" id="E601_59">
						<s:Label text="CH结论" paddingTop="3"/>
						<s:RadioButton label="全部" value="" groupName="E601_59" selected="true"/>
						<s:RadioButton label="阴性" value="阴性" groupName="E601_59"/>
						<s:RadioButton label="阳性" value="阳性" groupName="E601_59"/>
						<s:RadioButton label="可疑" value="可疑" groupName="E601_59"/>

					</s:HGroup>
				</s:HGroup>
				
				
				<s:HGroup width="100%" id="time" paddingLeft="10" paddingRight="10" verticalAlign="middle">
					<s:RadioButton label="登记日期" value="e601_34" groupName="time" selected="true"/>
