						<s:RadioButton buttonMode="true" label="现在住址" value="E504_09" groupName="address" />
						<s:RadioButton buttonMode="true" label="户口地址"  value="E504_61" groupName="address" />
						<component:AreaComboBoxVillageAuto id="addr" width="844" buttonMode="true" table="D201_MS" 
														   areaCode="{this.parentApplication.systemUser.areaCode}"/>
					</s:HGroup>  
				</s:HGroup>
			
				
				
				<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10" verticalAlign="middle">
					<s:Label width="50" text="姓名"/>
