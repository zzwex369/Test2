	<fx:Script>
		<![CDATA[
			import com.xyw.module.fnbj.fnbjwcbj.QueryWindow;
			import com.xyw.module.fnbj.model.F306;
			import com.xyw.module.fnbj.model.VF306;
			import com.xyw.sys.model.ComboBoxDataRequest;
