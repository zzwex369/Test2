	<fx:Script>	
		<![CDATA[			
			import com.xyw.module.fnbj.fnjcqk.QueryWindow;
			import com.xyw.module.fnbj.model.F301Request;
			import com.xyw.module.fnbj.model.F303Request;
			import com.xyw.module.fnbj.model.VF301;
			import com.xyw.module.fnbj.model.VF303;
			import com.xyw.sys.custom.component.CompMethod;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.controls.DateField;
			import mx.events.FlexEvent;
			import mx.formatters.DateFormatter;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			import mx.utils.StringUtil;
			
			import spark.events.GridSelectionEvent;
			
			
			private var vf301:Object =null;
			public var f301Request:F301Request =null; 
			private var vf303:VF303 =null;
			public var f303Request:F303Request; 
			public var systemUser:SystemUser =null;
			
			
			private function moduleCreationCompleteHandler(event:FlexEvent):void
			{
				this.systemUser = this.parentApplication.systemUser;
				//检查读卡权限
				if(this.systemUser.duka == "1"){
					this.duka1.enabled = true;
					this.duka2.enabled = true;
				}
				this.certificateDataGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE,onSelected);
			}
			private function onSelected(event:GridSelectionEvent):void
			{
				this.vf301 = DataGrid(event.target).selectedItem as Object;
			}
			public function getVF301(_vf301:Object):void
			{
				if(_vf301 !=null){
					this.vf301=_vf301;
				}
			}
			
			//读卡(母亲)
			protected function readCard_mother(event:MouseEvent):void
			{
				try
				{
					var str:String = ExternalInterface.call("parent.readCard");
					if(str != null && str.length != 0){
						
						var array:Array = str.split(",");
						var sex:String = array[1];//性别
						if(sex=="女"){
							this.F301_02.text = array[0];//姓名
							this.F301_05.text = array[5];//身份证号
						}else{
							Alert.show("请读孕产妇信息！","系统提示");
						}
					}else{
						Alert.show("读卡失败！");
					}
				} 
				catch(error:Error) 
				{
					Alert.show("读卡失败！");
				}
			}
			
			//读卡(父亲)
			protected function readCard_father(event:MouseEvent):void
			{
				try
				{
					//readCard是调用index.js下的函数，读卡涉及index.jsp和index.js两个文件
					var str:String = ExternalInterface.call("parent.readCard");
					if(str != null && str.length != 0){
						
						var array:Array = str.split(",");
						var sex:String = array[1];//性别
						if(sex=="男"){
							this.F301_18.text = array[0];//姓名
							this.F301_21.text = array[5];//身份证号
						}else{
							Alert.show("请读父亲信息！","系统提示");
						}
					}else{
						Alert.show("读卡失败！");
					}
				} 
				catch(error:Error) 
				{
					Alert.show("读卡失败！");
				}
			}
			//妇女检查查询信息
			private function queryF303(event:MouseEvent):void
			{
				if(this.vf301 == null){
					Alert.show(" ");
					return;
				}else{
					var querywindow:QueryWindow = new QueryWindow();
					querywindow.vf301 = this.vf301;
					CompMethod.popUpTitleWindow(querywindow,this,true);
				}
			}

			/**
			 *
			 */
			private function hasTextVal():Boolean
			{
				if(F301_17.text||F301_02.text||
					F301_05.text||F301_18.text||
					F301_21.text)	
					return true;
				else
					return false;
			}
			
			private function query(event:MouseEvent):void
			{
						
				this.initQueryParam();
				f301Request.parameterPageindex = 1;
				f301Request.parameterPagesize = 20;
				this.f301Service.queryF301(f301Request);
			}
			private function initQueryParam():void{
				f301Request = new F301Request();//------Guo----------
				try{
					
					if(hasTextVal()){
						f301Request.f30131Start = null;
						f301Request.f30131End = null;
						f301Request.f30149Start = null;
						f301Request.f30149End = null;
						f301Request.f30117 = this.F301_17.text;
						f301Request.f30102 = this.F301_02.text;
						f301Request.f30105 = this.F301_05.text;
						f301Request.f30118 = this.F301_18.text;
						f301Request.f30121 = this.F301_21.text;
					}else{
						var timeStr:Date=DateField.stringToDate(timeStart.text,'YYYY-MM-DD');
						var timeEnd:Date=DateField.stringToDate(timeEnd.text,'YYYY-MM-DD');

						if(this.deliveryTime.selected){
							f301Request.f30131Start = timeStr;
							f301Request.f30131End = timeEnd;
							f301Request.f30149Start = null;
							f301Request.f30149End = null;
						}else if(this.systemTime.selected){
							f301Request.f30131Start = null;
							f301Request.f30131End = null;
							//e301Request.e30131Start = this.systemTimeStart.selectedDate;
							//e301Request.e30131End = this.systemTimeEnd.selectedDate;
							f301Request.f30149Start = timeStr;
							f301Request.f30149End = timeEnd;
						}
						if(this.f30136_.selected){
							f301Request.f30136 = this.f301_36.getAreaCode();
							f301Request.f30135 = null;
						}else if(this.f30135_.selected){
							f301Request.f30135 = this.f301_35.getAreaCode();
							f301Request.f30136 = null;
						}
						if(this.Yes.selected){
							f301Request.f30146 = "1";
						}else if(this.No.selected){
							f301Request.f30146 = "2";
						}
					}
				}catch(error:Error){		
				}
				
			}
			
			protected function queryF301Handler(event:ResultEvent):void
			{
				var f301Response:Object = event.result;
				var flag:String = f301Response.flag;
				var listVF301:ArrayCollection = f301Response.vf301s;
				var rowCount:Number = f301Response.rowCount;
				if(f301Response.errorMessage == null)
				{ 
					this.pagerBar.dataGrid = this.certificateDataGrid;
					this.pagerBar.rowCount = rowCount;
					this.pagerBar.resultData = listVF301;
					this.pagerBar.dataBind();
					this.pagerBar.pagerFunction = pagerFunction;
					if(rowCount > 0) {
						this.pagerBar.enabled = true;
					}
				} else {
					Alert.show(f301Response.errorMessage, "系统提示");
				}
			}
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				f301Request = new F301Request();
				this.initQueryParam();
				f301Request.parameterPageindex = currentPageIndex;
				f301Request.parameterPagesize = pageSize;
				this.f301Service.queryF301(f301Request);
			}
			private function queryAll(event:MouseEvent):void{
				if(this.vf301 == null){
					Alert.show("请选择要操作的行");
					return;
				}
				var titleFnAll:titleFnAllDetails = new titleFnAllDetails();
				titleFnAll.vf301 = this.vf301;
				CompMethod.popUpTitleWindow(titleFnAll,this,true);
			}
		]]>
	</fx:Script>
