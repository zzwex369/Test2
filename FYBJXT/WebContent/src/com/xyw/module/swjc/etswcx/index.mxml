							<s:Label  paddingLeft="15" text="户籍"/>
							<s:DropDownList id="SW301_14" width="130"/>
							<s:Label paddingLeft="15"  text="分类编号" />
							<s:DropDownList id="SW301_30" width="162"/>-->
						</s:HGroup>
						
						<s:HGroup width="100%" height="100%" paddingLeft="10"  paddingBottom="5" verticalAlign="middle">
							<s:Label text="母亲姓名"/>
							<s:TextInput id="SW301_07" width="130" />
