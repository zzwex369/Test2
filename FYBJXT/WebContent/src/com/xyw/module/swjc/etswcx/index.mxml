							<s:Label paddingLeft="15" text="保健卡号"/>
							<s:TextInput id="SW301_05" width="164" />
							
						</s:HGroup>  
						<s:HGroup width="100%" height="100%" paddingLeft="10"  paddingBottom="5" verticalAlign="middle">
							
							<s:Label text="父亲姓名"/>
							<s:TextInput id="SW301_10" width="130" />
							<s:Label paddingLeft="15" text="父亲身份证号"/>
							<s:TextInput id="SW301_12" width="179" />
							<s:Button click="queryVsw301(event)"  label="查询"/>
							<s:Button click="operationSw301(updateSw301)"  label="修改"/>
