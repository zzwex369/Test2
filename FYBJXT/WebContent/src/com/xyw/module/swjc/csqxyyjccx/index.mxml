<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" 
		  xmlns:component="com.xyw.sys.custom.component.*"
		  width="100%" height="100%" creationComplete="creationCompleteHandler(event)">
	<fx:Declarations>
		<s:RemoteObject id="sw302Service" destination="sw302Service" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="query" result="queryHandler(event)" />
			<s:method name="delSw302" result="delSw302Handler(event)" />
		</s:RemoteObject>
		
	
	</fx:Declarations>
	<fx:Style>

		@namespace s "library://ns.adobe.com/flex/spark";
		s|DataGrid
		{
			borderAlpha:"0.3";
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDataGridSkin");
			alternatingRowColors:"[#FFFFFF,#EEEEEE]"; 
		}
		
		s|DropDownList
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDropDownListSkin");
			selectionColor:#DDDDDD;
			rollOverColor:#EEEEEE;	
		}
		s|Button
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomButtonSkin");
		} 
		s|Label
		{
			fontSize:12;
		}
		.myLabel
		{
			fontSize:12px;
			paddingTop:4px;
		}
		.pf10
		{
			paddingLeft:10px;
		} 
	</fx:Style>
	<fx:Script>
		<![CDATA[
			import com.xyw.module.swjc.model.Sw301;
			import com.xyw.module.swjc.model.Sw301Request;
			import com.xyw.module.swjc.model.Sw302;
			import com.xyw.module.swjc.model.Sw302Request;
			import com.xyw.sys.custom.component.CompMethod;
			import com.xyw.sys.model.ComboBoxDataRequest;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.controls.DateField;
			import mx.events.FlexEvent;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			import mx.utils.StringUtil;
			
			import spark.events.GridSelectionEvent;
			private var sw302:Sw302;
			private var vSw302:Object;
			private var sw302Request:Sw302Request;
			private var systemUser:SystemUser =null;
			private var comboBoxDataRequest:ComboBoxDataRequest;
			private function creationCompleteHandler(event:FlexEvent):void
			{
				//sw302Service.saveSw302(new Sw302());
				this.systemUser = this.parentApplication.systemUser;
			}
			
			private function onSelected(event:GridSelectionEvent):void
			{
				this.vSw302= DataGrid(event.target).selectedItem;
			}
			
			/**
			 * 
			 */
			private function getTextVal():Boolean
			{
				sw302=new Sw302();
				var status:Boolean=false;
				sw302.sw30206=StringUtil.trim(SW302_06.text);
				sw302.sw30207=StringUtil.trim(SW302_07.text);
				sw302.sw30209=StringUtil.trim(SW302_09.text);
				sw302.sw30211=StringUtil.trim(SW302_11.text);
				if(sw302.sw30206||sw302.sw30207||
					sw302.sw30209||sw302.sw30211)
					status=true;
			
				return status;
			}
			
			
			
			/**
			 *
			 */
			private function getTimeSql():String
			{
				 var dateField:String=CompMethod.getRadioButtonValue([dateGroup]);
				 var timeSql:String=" and to_char("+dateField+",'yyyy-mm-dd')>='"+
					 timeStart.text+"' and to_char("+dateField+",'yyyy-mm-dd')<='"
					 +timeEnd.text+"'";
				 return timeSql;
			}
			
			
			
			private function initQueryParam():void
			{
				
				sw302Request =new Sw302Request();
				try{	
				
					if(!getTextVal())
					{
						if(CompMethod.getTimeSpace(timeStart.text,timeEnd.text))
						{
							Alert.show("开始时间不能大于结束时间","系统提示");
							return;
						}
						sw302.sw30225=CompMethod.getRadioButtonValue([SW302_25]);
						sw302Request.suffixSql=getTimeSql();
					}
					
					var type:String = this.SW302_82.getLastSelectedInstitution();
					var sw30282:String = this.SW302_82.getLastSelectedInstitutionCode();
					sw302.sw30282 = (type == "10")?sw30282:sw30282.substring(0,Number(type));
					sw302Request.sw302=sw302;
				}catch(error:Error) {		
					
				}
			}
			
			/**
			 *
			 */
			private function query(currentPageIndex:int,pageSize:int):void
			{
				sw302Request= new Sw302Request();
				this.initQueryParam();
				sw302Request.parameterPageindex=currentPageIndex;
				sw302Request.parameterPagesize=pageSize;
				this.sw302Service.query(sw302Request);
			}
			
			public function refresh():void
			{
				query(this.pagerBar.currentPageIndex,20);
			}
			
			private function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				query(currentPageIndex,pageSize);	
			}		
			
			private function queryVsw302(event:MouseEvent):void
			{
				query(1,20);
			}
			
			private function queryHandler(event:ResultEvent):void
			{
				var sw302Response:Object = event.result;
				var vsw302s:ArrayCollection =sw302Response.vSw302s;
				var rowCount:Number = sw302Response.rowCount;
				this.pagerBar.pageSize = 20;
				this.pagerBar.dataGrid = this.certificateDataGrid;  
				this.pagerBar.rowCount = rowCount;
				this.pagerBar.resultData = vsw302s;
				this.pagerBar.dataBind();
				this.pagerBar.pagerFunction = pagerFunction;
				if(!sw302Response.state){
					Alert.show(sw302Response.errorMessage,"系统提示");
				}
				if(rowCount > 0) {
					this.pagerBar.enabled = true;
				}else
					Alert.show("暂无数据");
			}
		
			/**
			 *
			 */
			private function operationSw302(method:Function,del:Boolean=false):void
			{
				if(!vSw302)
				{
					Alert.show("请选择一条信息","系统提示");
					return;
				}
				if(del)
					CompMethod.delConfirm(method);
				else
					method();
			}
			
			/**
			 *
			 */
			private function updateSw302():void
			{
				var window:title = new title();
				CompMethod.popUpTitleWindow(window,this,true);
				window.creationCompleteHandler(this.vSw302);
			}
			
			/**
			 *
			 */
			private function delSw302():void
			{
				this.sw302Service.delSw302(vSw302.sw30201);

			}
			
			/**
			 *
			 */
			private function delSw302Handler(event:ResultEvent):void
			{
				var sw302Response:Object = event.result;
				if(sw302Response.state){
					this.refresh();
					Alert.show("删除成功", "系统提示");
				} else {
					Alert.show(sw302Response.errorMessage, "系统提示");
				}
			}
			
		
		]]>
	</fx:Script>
	<s:Scroller width="1200" height="100%" horizontalScrollPolicy="auto" verticalScrollPolicy="auto">
		<s:VGroup>
			<mx:TabNavigator id="tab" width="1200">
				<s:NavigatorContent width="100%" label="综合查询" buttonMode="true">
					<s:VGroup>
						<s:HGroup width="100%" paddingBottom="0" paddingLeft="10" paddingRight="10"
								  verticalAlign="middle">
							<s:Label text="录入单位"/>
							<component:InstitutionComboBox id="SW302_82" width="896" villageVisible="true" buttonMode="true"/>
						</s:HGroup>
						
						
						<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10"
								  verticalAlign="middle" id="dateGroup">
							<s:RadioButton buttonMode="true" label="录入时间" groupName="dateGroup" value="sw302_81"  selected="true" />
							<s:RadioButton buttonMode="true" label="出生时间" groupName="dateGroup" value="sw302_21"  />
							<component:CustomRangeDateField  id="timeStart" isSelectFirst="true" width="130"/>
							<s:Label text="至"/>
							<component:CustomRangeDateField  id="timeEnd" isSelectNow="true" width="130"/>
							<s:HGroup  paddingLeft="15" id="SW302_25" verticalAlign="baseline">
								<s:Label text="结局"/>
								<s:RadioButton buttonMode="true" label="全部" groupName="SW302_25" value=""  selected="true" />
								<s:RadioButton buttonMode="true" label="存活" groupName="SW302_25" value="1" />
								<s:RadioButton buttonMode="true" label="死胎死产" groupName="SW302_25" value="2" />
								<s:RadioButton buttonMode="true" label="7天内死亡" groupName="SW302_25" value="3" />
							</s:HGroup >
						</s:HGroup>
						
						<s:HGroup width="100%" height="100%" paddingLeft="10"  paddingBottom="5" verticalAlign="middle">
							<s:Label text="母亲姓名"/>
							<s:TextInput id="SW302_07" width="130" />
							<s:Label paddingLeft="15" text="母亲证件号码"/>
							<s:TextInput id="SW302_09" width="179" />
							<s:Label paddingLeft="15" text="联系方式"/>
							<s:TextInput id="SW302_11" width="130" />
							<s:Label paddingLeft="15" text="住院号"/>
							<s:TextInput id="SW302_06" width="130" />
							
							
						</s:HGroup>  
						<s:HGroup width="100%" height="100%" paddingLeft="10"  paddingBottom="5" verticalAlign="middle">
							
							<s:Button click="queryVsw302(event)"  label="查询"/>
							<s:Button click="operationSw302(updateSw302)"  label="修改"/>
							<s:Button click="operationSw302(delSw302,true)" label="删除"/>
						</s:HGroup>  
						
					</s:VGroup>
				</s:NavigatorContent>
			</mx:TabNavigator>
			<s:DataGrid id="certificateDataGrid" width="100%" height="340"
						alternatingRowColors="[#FFFFFF,#EEEEEE]" borderAlpha="0.3" editable="false"
						rowHeight="23" skinClass="com.xyw.sys.custom.skin.CustomDataGridSkin"
						selectionChange="onSelected(event)">
				<s:columns>     
					<s:ArrayList>
					
						<s:GridColumn width="40" editable="false" headerText="序号"
									  itemRenderer="com.xyw.sys.custom.itemrenderer.CustomGridColumnItemRenderer"/>
						<s:GridColumn width="100" dataField="sw30206" headerText="住院号"/>
						<s:GridColumn width="140" dataField="sw30207" headerText="母亲姓名"/>
						<s:GridColumn width="117" dataField="sw30209" headerText="母亲证件号码"/>
						<s:GridColumn width="125" dataField="sw30211" headerText="联系方式"/>
						<s:GridColumn width="100" dataField="sw30284" headerText="第几子"/>
						<s:GridColumn width="100" dataField="sw30220zh" headerText="性别"/>
						<s:GridColumn width="100" dataField="sw30225zh" headerText="结局"/>
						<s:GridColumn width="200" dataField="sw30226zh" headerText="诊断为出生缺陷后治疗性引产"/>
						<s:GridColumn width="100" dataField="sw30227zh" headerText="诊断依据"/>
						<s:GridColumn width="100" dataField="sw30228zh" headerText="畸形确诊时间"/>
						<s:GridColumn width="100" dataField="sw30281" headerText="录入时间" labelFunction="CompMethod.setStrDate"/>
						<s:GridColumn width="200" dataField="sw30282zh" headerText="录入单位"/>
					</s:ArrayList>
				</s:columns>
			</s:DataGrid> 
			<component:PagerBar id="pagerBar" enabled="false" isExcel="false" isExcel2="false"
								isPrinter="false"/>
		</s:VGroup>
	</s:Scroller>
</s:Module>
