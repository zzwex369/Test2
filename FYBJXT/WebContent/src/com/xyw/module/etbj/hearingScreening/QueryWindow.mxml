<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   xmlns:component = "com.xyw.sys.custom.component.*"
			   title="分娩信息加载" backgroundColor="#FFFFFF"
			   chromeColor="#5CACEE" close="removeWindow()"
			   width="1024" height="246"
			   creationComplete="init()">
	<fx:Declarations>
		<s:RemoteObject id="deliveryService" destination="deliveryService" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="queryDeliveryRegist" result="queryDeliveryRegistHandler(event)"/>
		</s:RemoteObject>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			/**
			 * @author libo
			 * 创建时间：Jun 17, 2017 11:45:43 AM
			 */
			import com.xyw.module.csyxzm.model.QueryBirthRequest;
			import mx.controls.Alert;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			
			import spark.events.GridSelectionEvent;
			
			public var d30416:String;
			public var d30418:String;
			public var d30422:String;
			public var d30424:String;
			public var d30411:String;
			public var d601:Object;			
			public function init():void {
				try{
					var queryBirthRequest:QueryBirthRequest  = new QueryBirthRequest();
					queryBirthRequest.d601_05 = this.d30416;
					queryBirthRequest.d601_65 = this.d30418;
					queryBirthRequest.d601_72 = this.d30422;
					queryBirthRequest.d601_75 = this.d30424;
					queryBirthRequest.d601_02 = this.d30411;
					this.deliveryService.queryDeliveryRegist(queryBirthRequest);
					this.certificateDataGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE, onSelected);
				}catch(error:Error){
					this.removeWindow();
					Alert.show("网络繁忙，请重试!","系统提示");
				}
			}
			
			public function queryDeliveryRegistHandler(event:ResultEvent):void {
				var queryBirthResponse:Object = event.result;
				if(queryBirthResponse.state){
					certificateDataGrid.dataProvider=queryBirthResponse.d601s;
				}else{
					Alert.show(queryBirthResponse.errorMessage,"系统提示");
				}
			}
			
			private function onSelected(event:Event):void{
				this.removeWindow();
				this.d601 = DataGrid(event.target).selectedItem as Object;
				if(this.d601.d60101 != 0){
					var sfdjbindex:index=this.owner as index;
					sfdjbindex.queryDeliveryRegistHandler(d601);
				}else{
					Alert.show("请选择要加载的数据！","系统提示");
					this.d601 = null;
				}
			}
			
			public function removeWindow():void
			{ 
				PopUpManager.removePopUp(this);
			}
			
		]]>
	</fx:Script>
	<s:VGroup width="100%" horizontalAlign="center" verticalAlign="middle">
		<s:HGroup paddingBottom="5" paddingLeft="15" paddingTop="10"  paddingRight="5" width="100%" height="100%" chromeColor="#F6F8FA" contentBackgroundColor="#FFFFFF" verticalAlign="middle">
			<s:DataGrid id="certificateDataGrid" alternatingRowColors="[#FFFFFF,#EEEEEE]" chromeColor="#5CACEE" editable="true" rowHeight="25" width="980" height="158">
				<s:columns>
					<s:ArrayList>
						<s:GridColumn dataField="d60155" headerText="婴儿姓名" width="70"/>
						<s:GridColumn dataField="d60103" headerText="分娩日期" width="120"/>
						<s:GridColumn dataField="d60105" headerText="产妇姓名" width="70"/>
						<s:GridColumn dataField="d60165" headerText="产妇身份证" width="140"/>
						<s:GridColumn dataField="d60172" headerText="丈夫姓名" width="70"/>
						<s:GridColumn dataField="d60175" headerText="丈夫身份证" width="140"/>
						<s:GridColumn dataField="d60102ZH" headerText="助产机构" width="140"/>
						<s:GridColumn dataField="d60157ZH" headerText="签发机构"/>
					</s:ArrayList>
				</s:columns>
			</s:DataGrid>					
		</s:HGroup>
		
		<s:HGroup contentBackgroundColor="#FF0000" verticalAlign="middle" horizontalAlign="right" paddingBottom="20" paddingTop="10" paddingLeft="10" paddingRight="20" width="100%" height="30">
			<s:Button label="关闭" click="removeWindow();"/>
		</s:HGroup>
	</s:VGroup>
	
</s:TitleWindow>