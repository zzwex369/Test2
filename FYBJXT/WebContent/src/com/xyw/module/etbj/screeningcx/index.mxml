	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		
		
		s|DropDownList
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDropDownListSkin");
			selectionColor:#DDDDDD;
			rollOverColor:#EEEEEE;	
		}
		s|Button
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomButtonSkin");
		}
		s|Label
		{
			fontSize:13;
		}
		s|DataGrid
		{
			borderAlpha:"0.3";
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDataGridSkin");
			alternatingRowColors:"[#FFFFFF,#EEEEEE]";
		}
	</fx:Style>
	<fx:Script>
		<![CDATA[
			import com.xyw.module.etbj.model.E302Request;
			import com.xyw.module.etbj.model.E302Response;
			import com.xyw.module.etbj.model.VE302;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.formatters.DateFormatter;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			
			import spark.events.GridSelectionEvent;
			
			public var ve302:VE302 = null;
			public var e302Request:E302Request=null;
			public var systemUser:SystemUser =null;
			
			private function moduleCreationCompleteHandler(event:FlexEvent):void
			{
				this.systemUser = this.parentApplication.systemUser;
				//检查读卡权限
				if(this.systemUser.duka == "1"){
					this.duka1.enabled = true;
				} 
				
				var dateStr:String = DateField.dateToString(new Date(),"YYYY-MM-01");
				this.timeStart.selectedDate = DateFormatter.parseDateString(dateStr);
				this.timeEnd.selectedDate = new Date();
				this.e302Data.addEventListener(GridSelectionEvent.SELECTION_CHANGE,onSelected);
			}
			
			private function onSelected(event:GridSelectionEvent):void
			{
				this.ve302= DataGrid(event.target).selectedItem as VE302;
			}
			
			private function initQueryParam():void
			{
				e302Request = new E302Request();
				try{	
					var type:String = this.e302_37.getLastSelectedInstitution();
					var e302_37_:String = this.e302_37.getLastSelectedInstitutionCode();
					if(this.systemUser.institutionType == "1")
						e302Request.e30237 = this.systemUser.institutionCode;
					else
						e302Request.e30237 = (type == "10")?e302_37_:e302_37_.substring(0,Number(type));
					
					
					e302Request.e30231Start = this.timeStart.selectedDate;
					e302Request.e30231End = this.timeEnd.selectedDate;
					e302Request.e30103 = this.e301_03.text;
					e302Request.e30113 = this.e301_13.text;
					e302Request.e30117 = this.e301_17.text;
					
					e302Request.f30102 = this.F301_02.text;
					e302Request.f30105 = this.F301_05.text; 
				}catch(error:Error) {		
					
				}
			}
			//读卡(母亲)
			protected function readCard_mother(event:MouseEvent):void
			{
				try
				{
					//readCard是调用index.js下的函数，读卡涉及index.jsp和index.js两个文件
					var str:String = ExternalInterface.call("parent.readCard");
					if(str != null && str.length != 0){
						
						var array:Array = str.split(",");
						var sex:String = array[1];//性别
						if(sex=="女"){
							this.F301_02.text = array[0];//姓名
							this.F301_05.text = array[5];//身份证号
						}else{
							Alert.show("请读妇女信息！","系统提示");
						}
					}else{
						Alert.show("读卡失败！");
					}
				} 
				catch(error:Error) 
				{
					Alert.show("读卡失败！");
				}
			} 
			public function querye302(event:MouseEvent):void
			{
				e302Request = new E302Request();
				this.initQueryParam();
				e302Request.parameterPageindex=1;
				e302Request.parameterPagesize=20;
				this.e302Service.queryE302(e302Request);
			}
			private function queryE302Handler(event:ResultEvent):void{
				var e302Response:Object = event.result;
				var e302s:ArrayCollection =e302Response.ve302s;
				var rowCount:Number = e302Response.rowCount;
				this.e302Data.dataProvider=e302s;
				this.pagerBar.pageSize = 20;
				this.pagerBar.dataGrid = this.e302Data;  
				this.pagerBar.rowCount = rowCount;
				this.pagerBar.resultData = e302s;
				this.pagerBar.dataBind();
				this.pagerBar.pagerFunction = pagerFunction;
				if(rowCount > 0) {
					this.pagerBar.enabled = true;
				}	
			}
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				//var e302Request:E302Request = new E302Request();
				e302Request = new E302Request();
				this.initQueryParam();
				e302Request.parameterPageindex=currentPageIndex;
				e302Request.parameterPagesize=pageSize;
				this.e302Service.queryE302(e302Request);		
			}
			public function refresh():void
			{
				e302Request = new E302Request();
				this.initQueryParam();
				e302Request.parameterPageindex = this.pagerBar.currentPageIndex;
				e302Request.parameterPagesize = 20;
				this.e302Service.queryE302(e302Request);
			}
			
			public function update302(event:MouseEvent):void{
				if(this.ve302 == null){
					Alert.show("请选择要操作的行！","系统提示");
					return;
				}
				var window:title = new title();
				window.owner = this;
				window.ve302 = this.ve302;
				PopUpManager.addPopUp(window,this);
				var x:Number = (this.parentApplication.mdiCanvas.width - window.width)/2;
				var y:Number = (this.parentApplication.mdiCanvas.height - window.height)/2;
				window.move(x,y);
			}
			public function delete302(event:MouseEvent):void
			{
				if(this.ve302 == null){  
					Alert.show("请选择要操作的行");
					return;
				}
				
				e302Request.e30201 =this.ve302.e30201;
				e302Request.e30202 =this.ve302.e30202;
				e302Request.e30208 = this.ve302.e30208;
				e302Request.e30231 =this.ve302.e30231;
				e302Request.e30237 =this.ve302.e30237;
				e302Request.e30238 =this.ve302.e30238;
				this.e302Service.deleteE302(e302Request);
			}
			public function deleteE302Handler(event:ResultEvent):void
			{
				var e302Response:Object = event.result;
				if(e302Response.errorMessage == null){
					if(e302Response.promptMessage != null){
						Alert.show(e302Response.promptMessage, "系统提示");
					}
					refresh();
				} else {
					Alert.show(e302Response.errorMessage, "系统提示");
				}
			}
		]]>
	</fx:Script>
	<mx:TabNavigator height="118" width="100%" chromeColor="#ffffff" creationPolicy="all">
