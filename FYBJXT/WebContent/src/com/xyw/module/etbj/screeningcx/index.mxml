	<fx:Declarations>
		<s:RemoteObject id="e302Service" destination="e302Service" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="queryE302" result="queryE302Handler(event)"/>
			<s:method name="deleteE302" result="deleteE302Handler(event)"/>
		</s:RemoteObject>
