	<fx:Script>
		<![CDATA[
			import com.xyw.module.delivery.model.D606;
			import com.xyw.module.delivery.model.D606Request;
			import com.xyw.module.delivery.model.D606Response;
			import com.xyw.module.delivery.model.VD606;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.CloseEvent;
			import mx.events.FlexEvent;
			import mx.formatters.DateFormatter;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			
			import spark.events.GridSelectionEvent;
			
			public var vd606:VD606 = null;
			public var d606Request:D606Request = null;
			public var systemUser:SystemUser = null;
			
			private function moduleCreationCompleteHandler(event:FlexEvent):void
			{
				this.systemUser = this.parentApplication.systemUser;
				//检查读卡权限
				if(this.systemUser.duka == "1"){
					this.duka1.enabled = true;
				}
				
				var dateStr:String = DateField.dateToString(new Date(),"YYYY-MM-01");
				this.timeStart.selectedDate = DateFormatter.parseDateString(dateStr);
				this.timeEnd.selectedDate = new Date();
				
				this.certificateDataGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE,onSelected);
			}
			
			private function onSelected(event:GridSelectionEvent):void
			{
				this.vd606 = DataGrid(event.target).selectedItem as VD606;
			}
			
			//读卡(母亲)
			protected function readCard_mother(event:MouseEvent):void
			{
				try
				{
					//readCard是调用index.js下的函数，读卡涉及index.jsp和index.js两个文件
					var str:String = ExternalInterface.call("parent.readCard");
					if(str != null && str.length != 0){
						
						var array:Array = str.split(",");
						var sex:String = array[1];//性别
						if(sex=="女"){
							this.D606_04.text = array[0];//姓名
							this.D606_07.text = array[5];//身份证号
						}else{
							Alert.show("请读妇女信息！","系统提示");
						}
					}else{
						Alert.show("读卡失败！");
					}
				} 
				catch(error:Error) 
				{
					Alert.show("读卡失败！");
				}
			}
			public function query(event:MouseEvent):void
			{  
				var d606Request:D606Request = new D606Request();
				var type:String = this.D606_51.getLastSelectedInstitution();
				var d606_51_:String = this.D606_51.getLastSelectedInstitutionCode();
			
				d606Request.d60651 = (type == "10")?d606_51_:d606_51_.substring(0,Number(type));
				
				d606Request.d60604 = this.D606_04.text;
				d606Request.d60607 = this.D606_07.text;
				d606Request.d60616 = this.D606_16.text;
				d606Request.d60653Start = this.timeStart.selectedDate;
				d606Request.d60653End = this.timeEnd.selectedDate;
				d606Request.pageIndex = 1;
				d606Request.pageSize = 20;
				this.csqxrService.pagerD606(d606Request);
			}
			
			public function pagerD606Handler(event:ResultEvent):void
			{ 
				var d606Response:Object = event.result;
				var vd606s:ArrayCollection = d606Response.vD606s;
				var rowCount:Number = d606Response.rowCount;
				this.certificateDataGrid.dataProvider = vd606s;
				if(d606Response.errorMessage == null)
				{
					this.pagerBar.pageSize = 20;
					this.pagerBar.dataGrid = this.certificateDataGrid;
					this.pagerBar.rowCount = rowCount;
					this.pagerBar.resultData = vd606s;
					this.pagerBar.dataBind();
					this.pagerBar.pagerFunction = pagerFunction;
					if(rowCount > 0) {
						this.pagerBar.enabled = true;
					}
				} else {
					Alert.show(d606Response.errorMessage, "系统提示");
				}
			}
			
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				var d606Request:D606Request = new D606Request();
				d606Request.pageIndex = currentPageIndex;
				d606Request.pageSize = pageSize;
				
				this.csqxrService.pagerD606(d606Request);
			}
			public function update(event:MouseEvent):void{
				if(this.vd606 == null){
					Alert.show("请选择要操作的行");
					return;
				}else{
					var window:tittle = new tittle();
					window.vd606 = this.vd606;
					PopUpManager.addPopUp(window,this);
					var x:Number = (this.parentApplication.mdiCanvas.width - window.width) / 2;
					var y:Number = (this.parentApplication.mdiCanvas.height - window.height) / 2;
					window.move(x, y);
				}
			}
			public function deleteD606(event:MouseEvent):void{
				if(this.vd606 == null){
					Alert.show("请选择要操作的行");
					return;
				}
				Alert.yesLabel = "确定";
				Alert.noLabel = "取消";
				Alert.show("确定要删除所选的行吗？", "系统提示", (Alert.YES|Alert.NO), this, alertCallBack);
			}
			public function alertCallBack(event:CloseEvent):void{
				var d606Request:D606Request = new D606Request();
				d606Request.d60601 = this.vd606.d60601;
				d606Request.d60604 = this.D606_04.text;
				d606Request.d60607 = this.D606_07.text;
				d606Request.d60616 = this.D606_16.text;
				d606Request.d60617 = this.vd606.d60617;
				d606Request.d60661 = this.vd606.d60661;
				d606Request.d60662 = this.vd606.d60662;
				if(event.detail == Alert.YES){
					this.csqxrService.deleteD606(d606Request);
				}
			}
			public function deleteD606Handler(event:ResultEvent):void{
				var d606Response:D606Response = event.result as D606Response;
				if(d606Response.errorMessage == null){
					this.query(null);
					Alert.okLabel = "确认";
					Alert.show(d606Response.promptMessage, "系统提示");
				}else{
					Alert.show(d606Response.errorMessage, "系统提示");
				}
			}
			private function printCertificate(event:MouseEvent):void
			{
				if(this.vd606 == null){
					Alert.show("请选择要操作的行!","系统提示");
					return;
				}
				this.systemParametersService.queryById("18");
			}
			private function queryByIdHandler(event:ResultEvent):void
			{
				var flag:String = event.result as String;
				var urlRequest:URLRequest = null;
				if(flag == "1") {
					urlRequest = new URLRequest(this.parentApplication.contextRoot + "/CsqxrServlet?flagF=1&d60607=" + this.vd606.d60607+"&d60616=" + encodeURIComponent(this.vd606.d60616));
				} else if(flag == "0") {
					urlRequest = new URLRequest(this.parentApplication.contextRoot + "/CsqxrServlet?flagF=0&d60607=" + this.vd606.d60607+"&d60616=" + encodeURIComponent(this.vd606.d60616));
				}
				navigateToURL(urlRequest,"_blank");
			}
		]]>
	</fx:Script>	
