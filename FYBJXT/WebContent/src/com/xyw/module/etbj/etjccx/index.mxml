			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.CloseEvent;
			import mx.events.FlexEvent;
			import mx.formatters.DateFormatter;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			import mx.utils.StringUtil;
			
			import spark.events.GridSelectionEvent;
			
			public var ve304:Object = null;
			public var e304Request:E304Request=null;
			public var systemUser:SystemUser =null;
			private var e30402Range:Array=['1','3','6','8','12','14','16','18','20','24','28','32'];
			private function moduleCreationCompleteHandler(event:FlexEvent):void
			{
				this.systemUser = this.parentApplication.systemUser;
				//检查读卡权限
				if(this.systemUser.duka == "1"){
					this.duka1.enabled = true;
				} 
				
				var dateStr:String = DateField.dateToString(new Date(),"YYYY-MM-01");
				this.timeStart.selectedDate = DateFormatter.parseDateString(dateStr);
				this.timeEnd.selectedDate = new Date();
				this.e304Data.addEventListener(GridSelectionEvent.SELECTION_CHANGE,onSelected);
				this.E304_49.addEventListener(FocusEvent.FOCUS_OUT,validateCard);
			}
			
			public function validateCard(event:Event):void{
				var IC:String = this.E304_49.text;
				if(IC.length>=15){
					if(IC.length != 15 && IC.length != 18){
						Alert.show("身份证号长度是15或18位","系统提示");
						return;
					}else{
						var n:String = IC.substring(IC.length-1,IC.length);
						if((n>='a'&&n<='z')){
							IC.replace(n,n.toLowerCase());
							this.E304_49.text = IC.substring(0,IC.length-1)+n.toUpperCase();
						}
					}
				}
			}
			
			
			
			
			
			private function onSelected(event:GridSelectionEvent):void
			{
				this.ve304= DataGrid(event.target).selectedItem ;
			}
			
			private function initQueryParam():void
			{
				var e304:E304=new E304();
				e304Request =new E304Request();
				try{	
					var type:String = this.e304_45.getLastSelectedInstitution();
					var e30445:String = this.e304_45.getLastSelectedInstitutionCode();
					e304.e30445 = (type == "10")?e30445:e30445.substring(0,Number(type));
					var e30449:String=StringUtil.trim(E304_49.text);
					var e30450:String=StringUtil.trim(E304_50.text);
					var e30457:String=StringUtil.trim(E304_57.text);
					var e30403:String=StringUtil.trim(E304_03.text);
					var e30458:String=StringUtil.trim(E304_58.text);
					if(e30449||e30450||e30457
						||e30403||e30458)
					{
						e304.e30449 = e30449;
						e304.e30450 = e30450;
						e304.e30457 = e30457;
						e304.e30403 = e30403;
						e304.e30458 = e30458;
					}else
					{
						if(CompMethod.getTimeSpace(timeStart,timeEnd))
						{
							return;
						}
						e304Request.sql=getSqlSuffix();
						e304.e30402 = CompMethod.getRadioButtonValue([E304_02]);
					}
					e304Request.e304=e304;
				}catch(error:Error) {		
					
				}
			}
			
			/**
			 *
			 */
			private function getSqlSuffix():String
			{
				
				var dateField:String=CompMethod.getRadioButtonValue([time]);
				var sql:String=" and to_char("+dateField+",'yyyy-mm-dd')>='" +timeStart.text+ "' ";
				sql+=" and to_char("+dateField+",'yyyy-mm-dd')<='" +timeEnd.text+ "' ";
				return sql;
			}
			
			//读卡(母亲)
			protected function readCard_mother(event:MouseEvent):void
			{
				try
				{
					//readCard是调用index.js下的函数，读卡涉及index.jsp和index.js两个文件
					var str:String = ExternalInterface.call("parent.readCard");
					if(str != null && str.length != 0){
						
						var array:Array = str.split(",");
						var sex:String = array[1];//性别
						if(sex=="女"){
							this.E304_49.text = array[0];//姓名
							this.E304_50.text = array[5];//身份证号
							querye304(null);
						}else{
							Alert.show("请读妇女信息！","系统提示");
						}
					}else{
						Alert.show("读卡失败！");
					}
				} 
				catch(error:Error) 
				{
					Alert.show("读卡失败！");
				}
			} 
			
			public function querye304(event:MouseEvent):void
			{
				
				this.initQueryParam();
				e304Request.parameterPageindex=1;
				e304Request.parameterPagesize=20;
				this.e304Service.queryPhasesE304(e304Request);
			}
			
			private function queryPhasesE304Handler(event:ResultEvent):void{
				var e304Response:Object = event.result;
				var e304s:ArrayCollection =e304Response.ve304s;
				var rowCount:Number = e304Response.rowCount;
				this.e304Data.dataProvider=e304s;
				this.pagerBar.pageSize = 20;
				this.pagerBar.dataGrid = this.e304Data;  
				this.pagerBar.rowCount = rowCount;
				this.pagerBar.resultData = e304s;
				this.pagerBar.dataBind();
				this.pagerBar.pagerFunction = pagerFunction;
				if(e304Response.errorMessage !=null){
					Alert.show(e304Response.errorMessage,"系统提示");
					return;
				}
				if(rowCount > 0) {
					this.pagerBar.enabled = true;
				}	
			}
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				initQueryParam();	
				e304Request.parameterPageindex=currentPageIndex;
				e304Request.parameterPagesize=pageSize;
				this.e304Service.queryPhasesE304(e304Request);
			}		
			public function update304(event:MouseEvent):void{
				if(!this.ve304){
					Alert.show("请选择要操作的行！","系统提示");
					return;
				}
				if(!verificaE30402())
				{
					Alert.show("此查询只能修改月龄（年龄）范围为满月，三月，六月，八月，十二，十八，二十四，三十，三岁，四岁，五岁，六岁","系统提示");
					return;
				}
				var window:etjcxg = new etjcxg();
				window.creationCompleteHandler(this.ve304);
				CompMethod.popUpTitleWindow(window,this,true);
			}
			public function delete304(event:MouseEvent):void
			{
				if(!this.ve304){  
					Alert.show("请选择要操作的行");
					return;
				}
				e304Request= new E304Request();
				var e304:E304=new E304();
				e304.e30401 =this.ve304.e30401;
				e304Request.e304=e304;
				CompMethod.delConfirm(deleteValidate);
			
			}
			protected function deleteValidate():void
			{
				
				this.e304Service.deleteE304(e304Request);
			}
			public function deleteE304Handler(event:ResultEvent):void
			{
				var e304Response:Object = event.result;
				if(e304Response.errorMessage == null){
					if(e304Response.promptMessage != null){
						this.refresh();
						Alert.show(e304Response.promptMessage, "系统提示");
					}
				} else {
					Alert.show(e304Response.errorMessage, "系统提示");
				}
				
			}
			public function refresh():void
			{
				this.initQueryParam();
				e304Request.parameterPageindex = this.pagerBar.currentPageIndex;
				e304Request.parameterPagesize = 20;
				this.e304Service.queryPhasesE304(e304Request);
			}
			
			public function detailse304(event:MouseEvent):void{
				/*if(this.ve304 == null){
				 	Alert.show("请选择要操作的行！","系统提示");
					return;
				}
				var window:title1 = new title1();
				window.ve304 =this.ve304;
				CompMethod.popUpTitleWindow(window,this,true); */
			}
			
			/**
			 *验证是否月龄在修改范围
			 * 
			 */
			private function verificaE30402():Boolean
			{
				var status:Boolean=false;
				for(var i:String in e30402Range)
				{
					if(e30402Range[i]==ve304.e30402)
					{
						status=true;
						break;
					}
				}
				return status;
			}
			
			/**
			 *
			 */
			private function queryAll(event:MouseEvent):void
			{
				
				if(!this.ve304){
					Alert.show("请选择要操作的行");
					return;
				}
				var querywindow:zhTitle = new zhTitle();
				querywindow.ve304 = this.ve304;
				querywindow.e30101 = this.ve304.e30440;
				querywindow.creationMoveWindow(this);
			}
		]]>
	</fx:Script>
