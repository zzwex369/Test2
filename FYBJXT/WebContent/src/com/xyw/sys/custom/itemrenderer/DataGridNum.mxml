<?xml version="1.0" encoding="utf-8"?>
<s:MXDataGridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009"
						  xmlns:s="library://ns.adobe.com/flex/spark"
						  xmlns:mx="library://ns.adobe.com/flex/mx"
						  autoDrawBackground="false" chromeColor="#CCCCCC"
						  clipAndEnableScrolling="true" focusEnabled="false">
	
	<fx:Script>
		<![CDATA[
			import mx.controls.listClasses.BaseListData;
			import mx.controls.listClasses.ListBase;
			override public function set listData(value:BaseListData):void{  
				super.listData = value;  
				lblData.label = ((value.owner as ListBase).itemRendererToIndex(this) + 1).toString();  
			}  
		]]>
	</fx:Script>
	<s:VGroup width="100%" height="100%" horizontalAlign="center">
		<s:Button cornerRadius="0" id="lblData" width="40" height="20" mouseChildren="false" skinClass="com.xyw.sys.custom.skin.CustomButtonSkin"/>
	</s:VGroup>
</s:MXDataGridItemRenderer>
