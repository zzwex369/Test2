<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" 
		  width="100%" height="100%"
		  creationComplete="moduleCreationCompleteHandler(event)"
		  xmlns:component="com.xyw.sys.custom.component.*">
	<fx:Declarations>
		<s:RemoteObject id="e702Service" destination="e702Service" 
						endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="queryE702"  result="queryE702Handler(event)"/>
			<s:method name="deleteE702"  result="deleteE702Handler(event)"/>
			
		</s:RemoteObject>
	</fx:Declarations>
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		mx|GridItem
		{
			horizontalAlign:left;
			verticalAlign:middle;
		}
		s|TextInput
		{
			fontFamily:微软雅黑;
		}
		
		s|DropDownList
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDropDownListSkin");
			selectionColor:#DDDDDD;
			rollOverColor:#EEEEEE;	
		}
		s|Button
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomButtonSkin");
		}
		s|Label
		{
			fontSize:13;
		}
		s|DataGrid
		{
			borderAlpha:"0.3";
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDataGridSkin");
			alternatingRowColors:"[#FFFFFF,#EEEEEE]";
		}
		s|ComboBox{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomComboBoxSkin");
			
		}
		
		s|TextInput:normalWithPrompt {
			color: #D60505;
			fontStyle:normal;
		}
		mx|ToolTip
		{
			fontSize:15;  
			color:#FF6699; 
		}
		
	</fx:Style>
	<fx:Script>
		<![CDATA[
			import com.xyw.module.etbj.etsl.etjc.ccjc.jccx.cjTitle;
			import com.xyw.module.etbj.etsl.model.E702;
			import com.xyw.module.etbj.etsl.model.E702Request;
			import com.xyw.module.etbj.etsl.model.E702Response;
			import com.xyw.module.msss.fnbj.cz.cqzdsh.cqzdshTitle;
			import com.xyw.module.msss.fnbj.model.F605;
			import com.xyw.module.msss.fnbj.model.F605Request;
			import com.xyw.sys.custom.component.CompMethod;
			import com.xyw.sys.custom.component.CustomIcon;
			import com.xyw.sys.custom.component.SecurityControler;
			import com.xyw.sys.model.ComboBoxData;
			import com.xyw.sys.model.ComboBoxDataRequest;
			import com.xyw.sys.model.ComboBoxDataResponse;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.controls.DateField;
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			import mx.utils.StringUtil;
			
			import spark.events.GridSelectionEvent;
			private var systemUser:SystemUser ;
			private var e702Request:E702Request;
			private var e702Reponse:E702Response;
			private var e702:E702;
			[Bindable]
			private var ve702:Object;
			
			
			
			private function moduleCreationCompleteHandler(event:FlexEvent):void
			{
				//security();
				this.systemUser = this.parentApplication.systemUser;
				//检查读卡权限
				if(this.systemUser.duka == "1"){
					this.duka1.enabled = true;
				}
			}
			
			private function onSelected(event:GridSelectionEvent):void
			{
				this.ve702 = DataGrid(event.target).selectedItem;
			}
			
			/**
			 *
			 */
			private function getText():Boolean
			{
				e702=new E702();
				if(E701_06.text||parent_name.text||parent_idcard.text||parent_phone.text)
				{
					
					e702.e70207=StringUtil.trim(E701_06.text);
					e702Request.parent_name=StringUtil.trim(parent_name.text);
					e702Request.parent_phone=StringUtil.trim(parent_phone.text);
					e702Request.parent_idcard=StringUtil.trim(parent_idcard.text);
					
					return true;
				}
				return false;
			}
			
			/*----------获取查询条件数据---------*/
			private function initQueryParam():void
			{
				try
				{
					e702Request = new E702Request();
					var field:Object=new Object();
					e702Request.institution = code.getInstitutionCode();
					field.codeField=CompMethod.getRadioButtonValue(codeField);
					if(getText())
						field.dateField=null;
					else
					{
						if(CompMethod.getTimeSpace(timeStart,timeEnd))
							return;
						
						field.dateField=CompMethod.getRadioButtonValue(date);
						e702Request.timeStr = DateField.stringToDate(this.timeStart.text,"YYYY-MM-DD");
						e702Request.timeEnd = DateField.stringToDate(this.timeEnd.text,"YYYY-MM-DD");
						e702.e70208=CompMethod.getRadioButtonValue(E702_08);
						e702.e70209=CompMethod.getRadioButtonValue(E702_09);
						e702.e70260=CompMethod.getRadioButtonValue(E702_60);
						e702.e70261=CompMethod.getRadioButtonValue(E702_61);
						
					}
					e702Request.fieldMap=field;
					e702Request.e702=e702;
				}catch(error:Error){
					Alert.show("出错了"+error.getStackTrace());
					Alert.show("出错了"+error.message);
				}
			}
			
			private function query():void
			{
				_query(1);
			}
			
			private function queryE702Handler(event:ResultEvent):void
			{
				var e702Response:Object = event.result;
				var rowCount:Number = e702Response.rowCount;
				this.certificateDataGrid.dataProvider=null;
				if(e702Response.errorMessage == null)
				{
					var listVE702:ArrayCollection = e702Response.ve702s;
					this.pagerBar.dataGrid = this.certificateDataGrid;
					this.pagerBar.rowCount = rowCount;
					this.pagerBar.resultData = listVE702;
					this.pagerBar.dataBind();
					this.pagerBar.pagerFunction = pagerFunction;
					if(rowCount > 0) 
						this.pagerBar.enabled = true;
					else
						Alert.show("暂无数据！","系统提示");
					this.ve702=null;
				} else {
					Alert.show(e702Response.errorMessage, "系统提示");
				}
			}
			
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				_query(currentPageIndex,pageSize);
			}
			
			public function refresh():void
			{
				_query(pagerBar.currentPageIndex);
			}
			
			private function _query(currentPageIndex:int,pageSize:int=20):void
			{
				this.initQueryParam();
				e702Request.parameterPageindex = currentPageIndex;
				e702Request.parameterPagesize = pageSize;
				this.e702Service.queryE702(e702Request);
			}
			
			/**
			 *
			 */
			private function readCard():void
			{
				var arr:Array = CompMethod.read_card();
				if(!arr)
					return ;
				parent_name.text=arr[0];
				parent_idcard.text=arr[5];
				query();
			}
			
			/**
			 *
			 */
			private function operation(del:Boolean=true):void
			{
				if(CompMethod.isSameInstitution(ve702.e70271))
					del?deleteE702():update();
			}
			
			private function update():void
			{
				var window:cjTitle = new cjTitle();
				window.ve702= this.ve702;
				window.registrationType=1;
				CompMethod.popUpTitleWindow(window,this,true);
				
			} 
			
			
			private function deleteE702():void
			{
				
				e702Request.e70201 = ve702.e70201;
				this.e702Service.deleteE702(e702Request);
			}
			
			private function  deleteE702Handler(event:ResultEvent):void{
				var e702Response:Object = event.result;
				if(e702Response.state){
					Alert.show("删除成功！", "系统提示");
					refresh();
				} else {
					Alert.show(e702Response.errorMessage, "系统提示");
				}
			}
			
			public static function setE70264(item:Object, column:GridColumn):String
			{
				return item[column.dataField]=='1'?'有':'无';
			}
			
			
			public function plint(even:Event):void{
				if(ve702==null){
					Alert.show("请选择诊断信息","系统提示");
					return;
				}
				
				
				var suffixPath:String='etslfzbgddy';
				
				var urlRequest:URLRequest = new URLRequest();
				var variables:URLVariables = new URLVariables();
				variables.e70201=encodeURIComponent(ve702.e70201);
				urlRequest.data=variables;
				urlRequest.method=URLRequestMethod.POST;
				urlRequest.url=this.parentApplication.contextRoot +
					"/print_new/etbj/etsl/"+suffixPath+".jsp";
				navigateToURL(urlRequest);
			}
		
			/**
			 *
			 */
			private function E702_08LabelFunction(item:Object,column:GridColumn):String
			{
				
				var label:String=item[column.dataField];
				var month:int=Number(label.substring(0,label.length-1));
				if(!isNaN(month)&&month>8)
				{
					label=label.substring(0,label.length-1);
					label=Number(label)/12+'岁';
				}
				return label;
				
			}
		]]>
	</fx:Script>
	<s:VGroup width="100%">
		<mx:TabNavigator  width="100%" chromeColor="#ffffff" creationPolicy="all">
			<s:NavigatorContent  label="综合查询" width="100%">
				<s:VGroup>
					<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10" verticalAlign="middle" id="codeField">
						
						<s:RadioButton buttonMode="true" groupName="codeField" label="录入单位" value="E702_71" selected="true"/>
						<s:RadioButton buttonMode="true" groupName="codeField" label="检查单位" value="E702_68"/>
						<component:InstitutionComboBox id="code" width="100%"  villageVisible="true"/>
					</s:HGroup>
					
					<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" id="E702_08"
							  paddingRight="10" verticalAlign="middle" gap="25">
						<s:Label text="月龄"/>
						<s:RadioButton groupName="E702_08" label="全部" value="" buttonMode="true" selected="true"/>
						<s:RadioButton groupName="E702_08" label="新生儿" value="0" buttonMode="true"/>
						<s:RadioButton groupName="E702_08" label="1月龄" value="1" buttonMode="true"/>
						<s:RadioButton groupName="E702_08" label="3月龄" value="3" buttonMode="true"/>
						<s:RadioButton groupName="E702_08" label="6月龄" value="6" buttonMode="true"/>
						<s:RadioButton groupName="E702_08" label="8月龄" value="8" buttonMode="true"/>
						<s:RadioButton groupName="E702_08" label="1岁" value="12" buttonMode="true"/>
						<s:RadioButton groupName="E702_08" label="1.5岁" value="14" buttonMode="true"/>
						<s:RadioButton groupName="E702_08" label="2岁" value="16" buttonMode="true"/>
						<s:RadioButton groupName="E702_08" label="2.5岁" value="18" buttonMode="true"/>
						<s:RadioButton groupName="E702_08" label="3岁" value="20" buttonMode="true"/>
						<s:RadioButton groupName="E702_08" label="4岁" value="24" buttonMode="true"/>
						<s:RadioButton groupName="E702_08" label="5岁" value="28" buttonMode="true"/>
						<s:RadioButton groupName="E702_08" label="6岁" value="32" buttonMode="true"/>
					</s:HGroup>
					<s:HGroup width="100%" height="100%" >
						
						<s:HGroup width="278" paddingBottom="5" paddingLeft="10" paddingRight="10"
								  id="E702_60" gap="10" verticalAlign="baseline">
							<s:Label text="检查结果"/>
							<s:RadioButton buttonMode="true" groupName="E702_60" label="全部" value="" selected="true"/>
							<s:RadioButton buttonMode="true" groupName="E702_60" label="正常" value="3"/>
							<s:RadioButton buttonMode="true" groupName="E702_60" label="异常" value="2" />
							
						</s:HGroup>
						
						<s:HGroup  paddingBottom="5" paddingLeft="10" paddingRight="10"
								   id="E702_61" gap="10" verticalAlign="baseline">
							<s:Label text="处理"/>
							<s:RadioButton buttonMode="true" groupName="E702_61" label="全部" value="" selected="true"/>
							<s:RadioButton buttonMode="true" groupName="E702_61" label="定期检查" value="1"/>
							<s:RadioButton buttonMode="true" groupName="E702_61" label="随访" value="2" />
							<s:RadioButton buttonMode="true" groupName="E702_61" label="转诊" value="3" />
							
						</s:HGroup>
						
						<s:HGroup  paddingBottom="5" paddingLeft="10" paddingRight="10"
								   id="E702_09" gap="10" verticalAlign="baseline" enabled="false">
							<s:Label text="筛查类型"/>
							<s:RadioButton buttonMode="true" groupName="E702_09" label="初筛" value="1" />
							<s:RadioButton buttonMode="true" groupName="E702_09" label="诊断" value="2" selected="true" />
							
							
						</s:HGroup>
					</s:HGroup>  
					
					
					
					<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10" verticalAlign="middle"  id="date">
						<s:Label text="时间选择"/>
						<s:RadioButton value="E702_73" label="录入时间" buttonMode="true" groupName="date" selected="true"/>
						<s:RadioButton value="E702_70" label="检查时间" buttonMode="true" groupName="date" />
						<s:RadioButton value="E702_67" label="下次检查时间" buttonMode="true" groupName="date"/>
						<component:CustomRangeDateField  id="timeStart" isSelectFirst="true" />
						
						<s:Label text="至"/>
						<component:CustomRangeDateField  id="timeEnd"  isSelectNow="true"/>
						<s:Label id="notice" color="#FD0909" fontSize="16"
								 text="!  注意：若输入内容，查询不受日期条件限制，有读卡功能的直接读卡就可以查询"/>
					</s:HGroup>
					<s:HGroup width="100%" paddingBottom="0" paddingLeft="10" paddingRight="10" verticalAlign="middle">
						<s:Label paddingLeft="8" text="儿童姓名"/><s:TextInput id="E701_06"/>
						<s:Label paddingLeft="8" text="家长姓名"/><s:TextInput id="parent_name"/>
						<s:Label text="证件号码"/><s:TextInput id="parent_idcard" width="140"/>
						<s:Label text="电话号码" /><s:TextInput id="parent_phone" width="140"/>
						
						<s:Button id="duka1" label="读卡" 
													click="readCard()" enabled="false"
													icon="{CustomIcon.READCARD}"/>
						
					</s:HGroup>
					<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10" verticalAlign="middle">
						
						
						<s:Button label="查询" click="query()" icon="{CustomIcon.QUERY}"/>
						<s:Button label="修改" click="callLater(operation,[false])" 
													enabled="{ve702!=null&amp;&amp;!ve702.e70316}"
													icon="{CustomIcon.MODYFY}"/>
						<s:Button label="删除" click="CompMethod.delConfirm(operation,true)"
													enabled="{ve702!=null&amp;&amp;!ve702.e70316}"
													icon="{CustomIcon.DEL}"/>
						<s:Button label="打印诊治报告单" click="plint(event)" icon="{CustomIcon.PRINTER}"/>
					</s:HGroup>
				</s:VGroup>
			</s:NavigatorContent>
			
		</mx:TabNavigator>
		<s:DataGrid id="certificateDataGrid" editable="false" rowHeight="22" width="100%" height="330"
					alternatingRowColors="[#FFFFFF,#EEEEEE]" skinClass="com.xyw.sys.custom.skin.CustomDataGridSkin"
					selectionChange="onSelected(event)">
			<s:columns>
				<s:ArrayList>
					<s:GridColumn width="40"  headerText="序号" itemRenderer="com.xyw.sys.custom.itemrenderer.CustomGridColumnItemRenderer"/>
					<s:GridColumn width="100" dataField="e70106" headerText="姓名"/>
					<s:GridColumn width="80" dataField="e70208zh" headerText="月龄" labelFunction="E702_08LabelFunction"/>
					<s:GridColumn width="200" dataField="e70105" headerText="视力编号"/>
					<s:GridColumn width="80" dataField="e70117" headerText="母亲姓名"/>
					<s:GridColumn width="150" dataField="e70119" headerText="母亲身份证号"/>
					<s:GridColumn width="80" dataField="e70121" headerText="父亲姓名"/>
					<s:GridColumn width="150" dataField="e70123" headerText="父亲身份证号"/>
					<s:GridColumn width="80" dataField="e70209zh" headerText="筛查类型"/>
					<s:GridColumn width="80" dataField="e70260zh" headerText="检查结果"/>
					<s:GridColumn width="80" dataField="e70261zh" headerText="检查建议"/>
					<s:GridColumn width="100" dataField="e70264" headerText="眼病家族史" labelFunction="setE70264"/>
					<s:GridColumn width="100" dataField="e70270" headerText="检查时间" labelFunction="CompMethod.setStrDate"/>
					<s:GridColumn width="150" dataField="e70273" headerText="录入时间" labelFunction="CompMethod.setStrDate"/>
					<s:GridColumn width="200" dataField="e70271zh" headerText="录入机构" />
				</s:ArrayList>
			</s:columns>
		</s:DataGrid>
		<component:PagerBar id="pagerBar" enabled="false" />
	</s:VGroup>
</s:Module>