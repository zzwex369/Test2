<?xml version="1.0" encoding="utf-8"?>
<s:GridItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
					xmlns:s="library://ns.adobe.com/flex/spark" 
					xmlns:mx="library://ns.adobe.com/flex/mx" 
					clipAndEnableScrolling="true" >
	<fx:Script>
		<![CDATA[
			import mx.controls.Alert;
		
			
			override public function prepare(hasBeenRecycled:Boolean):void
			{
				
				if(data)
				{	
				
						if(data[column.dataField])
						{
							var dataField:String =data[column.dataField];
							lblData.text=dataField=="1"?"是":"否";
							lblData.setStyle("color",dataField=="1"?"black":"red");
						}
				
				}

			}
			
		]]>
	</fx:Script>
	
	<s:Label id="lblData" verticalAlign="bottom" width="100%" height="100%" textAlign="center"/>
	
</s:GridItemRenderer>
