	<s:Scroller y="156" width="100%" height="100%" horizontalScrollPolicy="auto"
				verticalScrollPolicy="auto">
		<s:VGroup width="100%" paddingBottom="10">
			<s:DataGrid id="e504Data" width="100%" height="300"
						alternatingRowColors="[#FFFFFF,#EEEEEE]" editable="true" rowHeight="22" textAlign="center">
				<s:columns>     
					<s:ArrayList>
						<s:GridColumn visible="false" dataField="e50401" headerText="主键"/>
						<s:GridColumn width="40" editable="false" headerText="序号"
									  itemRenderer="com.xyw.sys.custom.itemrenderer.CustomGridColumnItemRenderer"/>
					
						<s:GridColumn  width="150" dataField="e50406" headerText="母亲姓名"/>
						<s:GridColumn  width="150" dataField="e50407" headerText="身份证号"/>
						<s:GridColumn  width="100" dataField="e50415Zh" headerText="新生儿性别 "/>
						<s:GridColumn  width="200" dataField="e50457Zh" headerText="新生儿出生医院 "/>
						<s:GridColumn  width="250" dataField="e50409Zh" headerText="现住址"/>
						<s:GridColumn  width="250" dataField="e50461Zh" headerText="户口地址"/>
						<s:GridColumn  dataField="e50459Str" headerText="检查时间"/>
					</s:ArrayList>
				</s:columns>
			</s:DataGrid> 
