							  color="#43CD80"/>-->
					<!--<s:Button label="详细" click="detailse504(event)"/>-->
				</s:HGroup>
				
				
				<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10"
						  verticalAlign="middle">
					<s:Label text="产妇姓名"/><s:TextInput id="E504_06"/>
					<s:Label text="证件号码"/><s:TextInput id="E504_07" width="200"/>
					<s:Button id="duka1" width="70" label="读卡" click="readCard_mother()"
							  enabled="{systemUser.duka=='1'}" icon="{CustomIcon.READCARD}" />
