<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  xmlns:component="com.xyw.sys.custom.component.*"
		  width="100%" height="100%" creationComplete="init()">
	<fx:Declarations>
		<s:RemoteObject id="l301Service" destination="l301Service"
						endpoint="{this.parentApplication.contextRoot}/messagebroker/amf"
						showBusyCursor="true">
			<s:method name="queryL301" result="queryL301Handler(event)"/>
			<s:method name="delL301" result="delL301Handler(event)"/>
		</s:RemoteObject>
	</fx:Declarations>
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
	 s|DataGrid
		{
			borderAlpha:"0.3";
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDataGridSkin");
		 	alternatingRowColors:"[#FFFFFF,#EEEEEE]"; 
		}
		
		s|DropDownList
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDropDownListSkin");
			selectionColor:#DDDDDD;
			rollOverColor:#EEEEEE;	
		}
	 	s|Button
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomButtonSkin");
		} 
		s|Label
		{
			fontSize:13;
		}
		.myLabel
		{
			fontSize:12px;
			paddingTop:4px;
		}
		.pf10
		{
			paddingLeft:10px;
		} 
	</fx:Style>
	<fx:Script>
		<![CDATA[
			import com.xyw.module.msss.la.model.L301;
			import com.xyw.module.msss.la.model.L301Request;
			import com.xyw.module.msss.la.model.VL301;
			import com.xyw.sys.custom.component.CompMethod;
			import com.xyw.sys.custom.component.DataGridEvent;
			import com.xyw.sys.custom.component.LoadPicWindow;
			import com.xyw.sys.custom.component.LoadPicWindow2;
			import com.xyw.sys.model.ComboBoxDataRequest;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.controls.DateField;
			import mx.events.CloseEvent;
			import mx.formatters.DateFormatter;
			import mx.managers.PopUpManager;
			import mx.rpc.AbstractOperation;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			import mx.rpc.remoting.Operation;
			import mx.utils.StringUtil;
			
			import spark.events.GridCaretEvent;
			import spark.events.GridSelectionEvent;
			[Bindable]
			private var systemUser:SystemUser =null;
			private var l301:L301=null;
			[Bindable]
			public var vl301:Object=null;
			private var l301Request:L301Request=null;
		
			private function init():void
			{
				this.systemUser = this.parentApplication.systemUser;
				this.certificateDataGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE,onSelected);
			}
			private function onSelected(event:GridSelectionEvent):void
			{
				this.vl301= DataGrid(event.target).selectedItem;
			}
			/*----------获取查询条件数据---------*/
			private function initQueryParam():void
			{
				l301=new L301();
				l301Request = new L301Request();
				try{
					
					var type:String = L301_17.getLastSelectedInstitution();
					var l301_17:String = L301_17.getLastSelectedInstitutionCode();
					
					l301.l30117 =type=="8"?l301_17:l301_17.substring(0,Number(type));
					var l30102:String=StringUtil.trim(L301_02.text);
					var l30104:String=StringUtil.trim(L301_04.text);
					if(l30102||l30104)
					{
						l301.l30102=StringUtil.trim(L301_02.text);
						l301.l30104=StringUtil.trim(L301_04.text);
					}else{
						l301.l30129=getRadioButtonValue(L301_29);
						l301.l30130=getRadioButtonValue(L301_30);
						l301.l30133=getRadioButtonValue(L301_33);
						l301.l30134=getRadioButtonValue(L301_34);
						l301.l30137=getRadioButtonValue(L301_35);//是否宫颈结案
						l301.l30138=getRadioButtonValue(L301_36);//是否乳腺结案
						l301Request.timeStr=DateField.stringToDate(timeStart.text,'YYYY-MM-DD');
						l301Request.timeEnd=DateField.stringToDate(timeEnd.text,'YYYY-MM-DD');
					}
				
					l301Request.l301=l301;
					vl301=null;
				}catch(e:Error)
				{
					Alert.show("查询异常","系统提示");
				}
			}
			
			public function queryL301():void
			{
				_query(1,20);
			}
			
			public function queryL301Handler(event:ResultEvent):void
			{
				var l301Response:Object = event.result;
				var vl301s:ArrayCollection =l301Response.vl301s;
				var rowCount:Number = l301Response.rowCount;
				this.certificateDataGrid.dataProvider=vl301s;
				this.pagerBar.dataGrid = this.certificateDataGrid;  
				this.pagerBar.rowCount = rowCount;
				this.pagerBar.resultData = vl301s;
				this.pagerBar.dataBind();
				this.pagerBar.pagerFunction = pagerFunction;
				if(rowCount > 0) {
					this.pagerBar.enabled = true;
				}
				if(!l301Response.state)
				{
					Alert.show(l301Response.errorMessage,"系统提示");
				}
			}
			
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				_query(currentPageIndex,pageSize);
			}
			
			public function refresh():void
			{
				_query(this.pagerBar.currentPageIndex,20);
			}
			
			private function _query(currentPageIndex:int,pageSize:int):void
			{
				this.initQueryParam();
				l301Request.parameterPageindex=currentPageIndex;
				l301Request.parameterPagesize=pageSize;
				this.l301Service.queryL301(l301Request);	
			}
			
			private function delL301():void
			{
				if(vl301.l30122!='3')
				{
					Alert.show("只有未上传至省平台的信息才能删除！","系统提示");
					return;
				}else if(vl301.l30133=="1"||vl301.l30134=="1")
				{
					Alert.show("已经登记检查，无法删除","系统提示");
					return;
				}else
					Alert.show("是否删除这条信息","系统提示",3,this,del);
			}
			
			private function delL301Handler(event:ResultEvent):void
			{
				var l301Response:Object=event.result;
				if(l301Response.state)
				{
					Alert.show(l301Response.promptMessage,"系统提示");
					queryL301();
				}else
				{
					Alert.show(l301Response.errorMessage,"系统提示");
				}
			}
			
			
			private function del(event:CloseEvent):void
			{
				l301Request=new L301Request();
				l301Request.l30101=vl301.l30101;
				if(event.detail==Alert.YES)
					l301Service.delL301(l301Request);
			}
			private function updateL301():void
			{
				if(vl301.l30133=="1"||vl301.l30134=="1")
				{
					Alert.show("已经登记检查，无法修改","系统提示");
					return;
					
				}else
				{
					var window:updateWindow= new updateWindow();
					window.vl301=this.vl301;
					CompMethod.popUpTitleWindow(window,this);
				}
			}
			/**
			 * 检查登记
			 **/
			private function register():void
			{
				if(vl301.l30135)
				{
					Alert.show("已经结案无法登记","系统提示");
					return;
				}
				var window:title = new title();
				window.vl301=vl301;
				CompMethod.popUpTitleWindow(window,this);
			}
			
			
			private function readCard():void
			{
				var arr:Array=CompMethod.readCard();
				if(arr!=null)
				{
					var boolean:Boolean=CompMethod.sex("女",arr[1]);
					if(boolean)
					{
						L301_02.text=arr[0];
						L301_04.text=arr[5];
						queryL301();
					}
				}else
				{					
					Alert.show("读卡失败","系统提示");
				}
			}
			
			
			private function printCertificate(event:MouseEvent,status:String):void
			{
				
				if(!this.vl301)
				{
					Alert.show("请选择要操作的行!","系统提示");
					return;
				}	///print_new/ms/gja/gjady.jsp 1  ///print_new/ms/rxa/rxady.jsp 2?
				var suffixPath:String=status=='1'?'gja/gjady':'rxa/rxady';
				navigateToURL(new URLRequest(this.parentApplication.contextRoot +
					"/print_new/ms/"+suffixPath+".jsp?l30101="+vl301.l30101+"&isL301=1"),null);
			}
			
			private function larwszdj():void
			{
				var window:larwsszTitle = new larwsszTitle();
				CompMethod.popUpTitleWindow(window,this);
				
			}
			
			/**
			 * 图片质控
			 **/
			private function tpzk():void
			{
				var window:zkTitle = new zkTitle();
				window.vl301=vl301;
				CompMethod.popUpTitleWindow(window,this);
			}
			
			private function getRadioButtonValue(id:Object):String
			{
				var radioButton:RadioButton;
				var value:String;
				for(var i:int =1;i<id.numElements;i++)
				{
					radioButton=id.getElementAt(i) as RadioButton;
					if(radioButton.selected)
					{
						value=radioButton.value.toString();
						break;
					}
				}
				return value;
			}
			
			
			private function finishCase():void
			{
				if(vl301.l30133=="2"&&vl301.l30134=="2")
				{
					Alert.show("未登记俩癌检查，无法结案","系统提示");
					return;
				}else if(vl301.l30133=="1"&&vl301.l30135
					&&vl301.l30134=="1"&&vl301.l30136)
				{
					Alert.show("宫颈癌与乳腺癌都已结案，无法重复结案","系统提示");
					return;
				}else
				{
					
					Alert.show("结案之后就无法修改对应检查信息，请确认","系统提示",3,this,popHandler);
					
				
				}
			}
			
			private function popHandler(event:CloseEvent):void
			{
				if(event.detail==1)
				{
					var window:finishCaseWindow=new finishCaseWindow();
					window.dataArr=new Array(vl301.l30101,vl301.l30102,vl301.l30104,
						vl301.l30116,!Boolean(vl301.l30135),
						!Boolean(vl301.l30136),true);
					CompMethod.popUpTitleWindow(window,this);
				}
			}
			
			
		
		]]>
	</fx:Script>
	<s:Scroller width="1200" height="100%" horizontalScrollPolicy="auto" verticalScrollPolicy="auto">
		<s:VGroup>
		<mx:TabNavigator id="tab" width="1150" chromeColor="#ffffff">
			<s:NavigatorContent width="100%" label="综合查询" buttonMode="true">
				<s:VGroup>
					<s:HGroup width="100%" paddingBottom="0" paddingLeft="10" paddingRight="10"
							  verticalAlign="middle">
						<s:Label text="录入单位"/>
						<component:InstitutionComboBox id="L301_17" width="896" buttonMode="true"/>
					</s:HGroup>
					<s:HGroup width="100%" height="100%">
						<s:HGroup id="L301_33" width="100%" gap="35" paddingBottom="5" paddingLeft="10"
								  paddingRight="10" verticalAlign="middle">
							<s:Label text="宫颈癌检查"/>
							<s:RadioButton label="全部" groupName="L301_33" selected="true" value=""/>
							<s:RadioButton label="已检查" groupName="L301_33" value="1"/>
							<s:RadioButton label="未检查" groupName="L301_33" value="2"/>
						</s:HGroup>
						
						
						<s:HGroup id="L301_34" width="100%" gap="35" paddingBottom="5" paddingLeft="10"
								  paddingRight="10" verticalAlign="middle">
							<s:Label text="乳腺癌检查"/>
							<s:RadioButton label="全部" groupName="L301_34" selected="true" value=""/>
							<s:RadioButton label="已检查" groupName="L301_34" value="1"/>
							<s:RadioButton label="未检查" groupName="L301_34" value="2"/>
						</s:HGroup>
						
						
					</s:HGroup>  
					
					<s:HGroup width="100%" height="100%" >
						<s:HGroup id="L301_35" width="100%" gap="35" paddingBottom="5" paddingLeft="10"
								  paddingRight="10" verticalAlign="middle">
							<s:Label text="宫颈癌结案"/>
							<s:RadioButton label="全部" groupName="L301_35" selected="true" value=""/>
							<s:RadioButton label="已结案" groupName="L301_35" value=" is not null "/>
							<s:RadioButton label="未结案" groupName="L301_35" value=" is null "/>
						</s:HGroup>
						
						
						<s:HGroup id="L301_36" width="100%" gap="35" paddingBottom="5" paddingLeft="10"
								  paddingRight="10" verticalAlign="middle">
							<s:Label text="乳腺癌结案"/>
							<s:RadioButton label="全部" groupName="L301_36" selected="true" value=""/>
							<s:RadioButton label="已结案" groupName="L301_36" value=" is not null "/>
							<s:RadioButton label="未结案" groupName="L301_36" value=" is null "/>
						</s:HGroup>
					</s:HGroup>  
					
					
					<s:HGroup width="100%" height="100%" >
						<s:HGroup id="L301_29" width="100%" gap="35" paddingBottom="5" paddingLeft="10"
								  paddingRight="10" verticalAlign="middle">
							<s:Label text="建卡贫困户"/>
							<s:RadioButton label="全部" groupName="L301_29" selected="true" value=""/>
							<s:RadioButton label="是" groupName="L301_29" value="1"/>
							<s:RadioButton label="否" groupName="L301_29" value="2"/>
						</s:HGroup>
						
						
						<s:HGroup id="L301_30" width="100%" gap="35" paddingBottom="5" paddingLeft="10"
								  paddingRight="10" verticalAlign="middle">
							<s:Label text="城市低保户"/>
							<s:RadioButton label="全部" groupName="L301_30" selected="true" value=""/>
							<s:RadioButton label="是" groupName="L301_30" value="1"/>
							<s:RadioButton label="否" groupName="L301_30" value="2"/>
						</s:HGroup>
					</s:HGroup>  
					
					
					<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10"
							  verticalAlign="middle">
						<s:Label text="登记时间"/>
						
						<component:CustomRangeDateField  id="timeStart" isSelectNow="true" isQuerySysDate="false" getRangesDate="{timeEnd.disabledRanges}"/>

						<s:Label text="至"/>
						
						<component:CustomRangeDateField  id="timeEnd"  isSelectNow="true"/>

						<s:Label text="姓名"/><s:TextInput id="L301_02"/>
						<s:Label text="证件号码"/><s:TextInput id="L301_04" width="140"/>
						<s:Button id="duka1" width="60" label="读卡" buttonMode="true"
								  click="readCard()" enabled="{systemUser.duka=='1'}"/>
					
					</s:HGroup>
					
					<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10"
							  verticalAlign="middle">
						<s:Button width="60" label="查询" buttonMode="true" click="queryL301()"/>
						<s:Button width="60" label="修改" buttonMode="true" click="updateL301()"
								  enabled="{vl301!=null}"/>
						<s:Button width="60" label="删除" buttonMode="true" click="delL301()"
								  enabled="{vl301!=null}"/>
						<s:Button label="打印宫颈个案信息" click="printCertificate(event,'1')"/>
						<s:Button label="打印乳腺个案信息" click="printCertificate(event,'2')"/>	
						<s:Button label="结案登记" buttonMode="true" click="finishCase()"
								  enabled="{vl301!=null}"/>
						<s:Button label="两癌任务数登记" buttonMode="true" click="larwszdj()"/>
						<s:Button visible="false" label="检查登记" buttonMode="true" click="register()"
								  enabled="{vl301!=null}"/>
						<s:Button visible="false" label="宫颈癌涂片质控登记" buttonMode="true" click="tpzk()"
								  enabled="{vl301!=null}"/>
					</s:HGroup>
						
				</s:VGroup>
			</s:NavigatorContent>
		</mx:TabNavigator>
		<s:DataGrid id="certificateDataGrid" width="1150" height="340"
					alternatingRowColors="[#FFFFFF,#EEEEEE]" borderAlpha="0.3" editable="false"
					rowHeight="23" skinClass="com.xyw.sys.custom.skin.CustomDataGridSkin">
			<s:columns>     
				<s:ArrayList>
					<s:GridColumn visible="false" dataField="l30101" headerText="主键"/>
					<s:GridColumn width="40" editable="false" headerText="序号"
								  itemRenderer="com.xyw.sys.custom.itemrenderer.CustomGridColumnItemRenderer"/>
					<s:GridColumn width="200" dataField="l30116" headerText="档案编号"/>
					<s:GridColumn width="100" dataField="l30102" headerText="姓名"/>
					<s:GridColumn width="140" dataField="l30104" headerText="证件号码"/>
					<s:GridColumn width="117" dataField="l30110" headerText="联系电话"/>
					<s:GridColumn width="125" dataField="l30105str" headerText="出生日期"/>
					<s:GridColumn width="200" dataField="l30117zh" headerText="录入单位"/>
					<s:GridColumn width="100" dataField="l30118" headerText="录入人员"/>
					<s:GridColumn dataField="l30119str" headerText="录入时间"/>
				</s:ArrayList>
			</s:columns>
		</s:DataGrid> 
		<component:PagerBar width="1150" id="pagerBar" enabled="false" isExcel="false" isExcel2="false"
							isPrinter="false"/>
	</s:VGroup>
	</s:Scroller>
</s:Module>
