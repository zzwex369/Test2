<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" width="100%" height="100%"
		  xmlns:component="com.xyw.sys.custom.component.*" creationComplete="creationCompleteHandler(event)">
	
	<fx:Declarations>
		<s:RemoteObject id="deliveryService" destination="deliveryService" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="saveD603Info" result="saveD603InfoResultHandler(event)"/>
		</s:RemoteObject>
		<s:RemoteObject id="systemService" destination="systemService" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="getComboBoxData" result="getComboBoxDataHandler(event)"/>
		</s:RemoteObject>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import com.xyw.module.delivery.model.D603;
			import com.xyw.sys.model.ComboBoxDataRequest;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.rpc.events.ResultEvent;
			import mx.utils.StringUtil;
			
			import spark.events.TextOperationEvent;
			
			private var comboBoxDataRequest:ComboBoxDataRequest;
			public var systemUser:SystemUser = null;
			public var d603:D603 = null;
			
			protected function creationCompleteHandler(event:FlexEvent):void
			{
				this.systemUser = this.parentApplication.systemUser;
				initComboBox();
				
				this.d603_05.addEventListener(FlexEvent.ENTER,getAgeHandler);
				this.d603_05.addEventListener(TextOperationEvent.CHANGING, getAgeHandler);
			}
			
			private function getAgeHandler(event:Event):void
			{
				var idCard:String = this.d603_05.text;
				if(idCard.length>=16){
					idCard=idCard.substring(6,10);
				}else
				{
					idCard='19' + idCard.substring(6,8);
				}
				
				var yesrStr:Number = (new Date()).fullYear;
				var age:Number = yesrStr - Number(idCard);
				this.d603_06.text = age.toString();
				
			}
			
			private function initComboBox():void
			{
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.sql = "select * from S301_01";
				comboBoxDataRequest.flag = "S301_01";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
				
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.sql = "select * from S601_01";
				comboBoxDataRequest.flag = "S601_01";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
				
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.sql = "select * from S602_02";
				comboBoxDataRequest.flag = "S602_02";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
				
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.sql = "select * from S603_01";
				comboBoxDataRequest.flag = "S603_01";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
				
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.sql = "select * from S603_02";
				comboBoxDataRequest.flag = "S603_02";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
				
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.sql = "select * from S603_03";
				comboBoxDataRequest.flag = "S603_03";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
			}
			
			private function getComboBoxDataHandler(event:ResultEvent):void
			{
				var comboBoxDataResponse:Object =  event.result;
				var flag:String = comboBoxDataResponse.flag;
				var comboBoxDataList:ArrayCollection = comboBoxDataResponse.comboBoxDataList;
				
				if(flag == "S301_01")
				{
					this.d603_04.dataProvider = comboBoxDataList;
					this.d603_04.selectedIndex = 0;
				}else if(flag == "S601_01")
				{
					this.d603_07.dataProvider = comboBoxDataList;
					this.d603_07.selectedIndex = 0;
				}else if(flag == "S602_02")
				{
					this.d603_12.dataProvider = comboBoxDataList;
					this.d603_12.selectedIndex = 0;
				}else if(flag == "S603_01")
				{
					this.d603_08.dataProvider = comboBoxDataList;
					this.d603_08.selectedIndex = 0;
				}
				else if(flag == "S603_02")
				{
					this.d603_09.dataProvider = comboBoxDataList;
					this.d603_09.selectedIndex = 0;
				}
				else if(flag == "S603_03")
				{
					this.d603_13.dataProvider = comboBoxDataList;
					this.d603_13.selectedIndex = 0;
				}
			}
			
			protected function saveD603ClickHandler(event:MouseEvent):void
			{
				var patternIdCard:RegExp = /^(\d{18,18}|\d{15,15}|\d{17,17}X|\d{17,17}x)$/g;
				if(StringUtil.trim(this.d603_03.text) == ""){
					Alert.show("请输入姓名!","系统提示");
					return;
				}
				if(this.d603_04.selectedItem.data == 0)
				{
					Alert.show("请选择性别!","系统提示");
					return;
				}
				if(StringUtil.trim(this.d603_05.text) == ""){
					Alert.show("请输入身份证号!","系统提示");
					return;
				}
				if(!patternIdCard.test(this.d603_05.text)){
					Alert.show("身份证号码有误!","系统提示");
					return;
				}
				if(StringUtil.trim(this.d603_06.text) == ""){
					Alert.show("请输入年龄!","系统提示");
					return;
				}
				if(Number(this.d603_06.text)<0 || Number(this.d603_06.text)>200 ){
					Alert.show("输入年龄不合法!","系统提示");
					return;
				}
				if(this.d603_07.selectedItem.data == 0)
				{
					Alert.show("请选择学历!","系统提示");
					return;
				}
				if(this.d603_08.selectedItem.data == 0)
				{
					Alert.show("请选择职称!","系统提示");
					return;
				}
				if(this.d603_09.selectedItem.data == 0)
				{
					Alert.show("请选择专业!","系统提示");
					return;
				}
				if(StringUtil.trim(this.d603_10.text) == ""){
					Alert.show("请输入工作年限!","系统提示");
					return;
				}
				if(StringUtil.trim(this.d603_11.text) == ""){
					Alert.show("请输选则培训日期!","系统提示");
					return;
				}
				if(this.d603_12.selectedItem.data == 0)
				{
					Alert.show("请选择审核项目!","系统提示");
					return;
				}
				if(this.d603_13.selectedItem.data == 0)
				{
					Alert.show("请选择考核结果!","系统提示");
					return;
				}
				if(StringUtil.trim(this.d603_14.text) == ""){
					Alert.show("请输入合格证号!","系统提示");
					return;
				}
				if(StringUtil.trim(this.d603_15.text) == ""){
					Alert.show("请选则发证日期!","系统提示");
					return;
				}
				
				d603 = new D603();
				d603.d60302 = this.d603_02.getLastSelectedInstitutionCode();
				d603.d60303 = this.d603_03.text;
				d603.d60304 = this.d603_04.selectedItem.data;
				d603.d60305 = this.d603_05.text;
				d603.d60306 = (int)(this.d603_06.text);
				d603.d60307 = this.d603_07.selectedItem.data;
				d603.d60308 = this.d603_08.selectedItem.data;
				d603.d60309 = this.d603_09.selectedItem.data;
				d603.d60310 = (int)(this.d603_10.text);
				d603.d60311 = this.d603_11.selectedDate;
				d603.d60312 = this.d603_12.selectedItem.data;
				d603.d60313 = this.d603_13.selectedItem.data;
				d603.d60314 = this.d603_14.text;
				d603.d60315 = this.d603_15.selectedDate;
				d603.d60316 = this.systemUser.areaCode;
				
				this.deliveryService.saveD603Info(d603);
			}
			
			protected function saveD603InfoResultHandler(event:ResultEvent):void
			{
				var queryBirthResponse:Object = event.result;
				if(!queryBirthResponse.state)
				{
					Alert.show(queryBirthResponse.getErrorMessage,"系统提示");
					return;
				}
				Alert.show("保存成功","系统提示");
				this.saveButton.enabled = false;
			}
			
		]]>
	</fx:Script>
	
	
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		mx|GridItem
		{
			verticalAlign:middle;
		}
		s|Button
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomButtonSkin");
		}
		s|Label
		{
			verticalAlign:middle;
		}
		s|DropDownList
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDropDownListSkin");
			selectionColor:#DDDDDD;
			rollOverColor:#EEEEEE;	
		}
	</fx:Style>
	<s:Scroller x="11" y="4" width="100%" height="100%" horizontalScrollPolicy="auto"
				verticalScrollPolicy="auto">
		<s:VGroup width="100%">
			<mx:TabNavigator chromeColor="#ffffff" creationPolicy="all" width="1050">
				<s:NavigatorContent label="母婴技术考核管理" width="100%">
					<s:VGroup paddingBottom="10" paddingLeft="10" paddingRight="10">
						<s:HGroup>
							<s:Label text="单位名称"/>
							<component:InstitutionComboBox id="d603_02"/>
						</s:HGroup>
						<mx:Grid>
							<mx:GridRow>
								<mx:GridItem>
									<s:Label text="姓　　名"/>
									<s:TextInput id="d603_03"/>
								</mx:GridItem>
								<mx:GridItem>
									<s:Label text="性　　别"/>
									<s:DropDownList id="d603_04"/>
								</mx:GridItem>
								<mx:GridItem>
									<s:Label text="学　　历"/>
									<s:DropDownList id="d603_07"/>
								</mx:GridItem>
								<mx:GridItem>
									<s:Label text="培训日期"/>
									<mx:DateField yearNavigationEnabled="true" id="d603_11" width="120" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
												  monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
												  formatString="YYYY-MM-DD"/>
								</mx:GridItem>
								<mx:GridItem>
									<s:Label text="身份证号"/>
									<s:TextInput id="d603_05" width="150"/>
								</mx:GridItem>
							</mx:GridRow>
							<mx:GridRow>
								<mx:GridItem>
									<s:Label text="年　　龄"/>
									<s:TextInput id="d603_06"/>
								</mx:GridItem>
								<mx:GridItem>
									<s:Label text="职　　称"/>
									<s:DropDownList id="d603_08"/>
								</mx:GridItem>
								<mx:GridItem>
									<s:Label text="专　　业"/>
									<s:DropDownList id="d603_09"/>
								</mx:GridItem>
								<mx:GridItem>
									<s:Label text="发证日期"/>
									<mx:DateField yearNavigationEnabled="true" id="d603_15" width="120" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
												  monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
												  formatString="YYYY-MM-DD"/>
								</mx:GridItem>
								<mx:GridItem>
									<s:Label text="合格证号"/>
									<s:TextInput id="d603_14" width="150"/>
								</mx:GridItem>
							</mx:GridRow>
							<mx:GridRow>
								<mx:GridItem>
									<s:Label text="工作年限"/>
									<s:TextInput id="d603_10"/>
								</mx:GridItem>
								<mx:GridItem>
									<s:Label text="申请项目"/>
									<s:DropDownList id="d603_12"/>
								</mx:GridItem>
								<mx:GridItem>
									<s:Label text="考核结果"/>
									<s:DropDownList id="d603_13"/>
								</mx:GridItem>
							</mx:GridRow>
						</mx:Grid>
					</s:VGroup>
				</s:NavigatorContent>
			</mx:TabNavigator>
			<s:HGroup contentBackgroundColor="#FF0000" verticalAlign="middle" horizontalAlign="right" paddingBottom="20" paddingTop="10" paddingLeft="10" width="65%" paddingRight="50" height="30">
				<s:Button label="确定" id="saveButton" click="saveD603ClickHandler(event)"/>
			</s:HGroup>
		</s:VGroup>
	</s:Scroller>
	
</s:Module>
