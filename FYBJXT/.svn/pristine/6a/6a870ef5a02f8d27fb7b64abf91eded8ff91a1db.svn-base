<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009" 
			   xmlns:s="library://ns.adobe.com/flex/spark" 
			   xmlns:mx="library://ns.adobe.com/flex/mx" 
			   xmlns:component = "com.xyw.sys.custom.component.*"
			   title="儿童（新生儿）听力筛（复）信息加载" backgroundColor="#FFFFFF"
			   chromeColor="#5CACEE" close="removeWindow()"
			   width="1024" height="246"
			   creationComplete="init()">
	<fx:Declarations>
		<s:RemoteObject id="e501Service" destination="e501Service" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="queryHearingScreening" result="queryHearingScreeningHandler(event)"/>
		</s:RemoteObject>
	</fx:Declarations>
	<fx:Script>
		<![CDATA[
			import com.xyw.module.etbj.model.E501;
			import com.xyw.module.etbj.model.E501Request;
			import mx.controls.Alert;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			
			import spark.events.GridSelectionEvent;
			public var e50103:String;
			public var e50104:String;
			public var ve501:Object;
			public function init():void {
				try{
					this.e501Service.queryHearingScreening(e50103,e50104);
					this.certificateDataGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE, onSelected);
				}catch(error:Error){
					this.removeWindow();
					Alert.show("网络繁忙，请重试!","系统提示");
				}
			}
			
			public function queryHearingScreeningHandler(event:ResultEvent):void {
				var e501Response:Object = event.result;
				if(e501Response.state){
					certificateDataGrid.dataProvider=e501Response.ve501;
				}else{
					Alert.show(e501Response.errorMessage,"系统提示");
				}
			}
			
			private function onSelected(event:Event):void{
				this.removeWindow();
				this.ve501 = DataGrid(event.target).selectedItem as Object;
				if(this.ve501.e50101 != 0){
					var sfdjbindex:index=this.owner as index;
					sfdjbindex._queryHearingScreeningHandler(ve501);
				}else{
					Alert.show("请选择要加载的数据！","系统提示");
					this.ve501 = null;
				}
			}
			
			public function removeWindow():void
			{ 
				PopUpManager.removePopUp(this);
			}
			
		]]>
	</fx:Script>
	<s:VGroup width="100%" horizontalAlign="center" verticalAlign="middle">
		<s:HGroup paddingBottom="5" paddingLeft="15" paddingTop="10"  paddingRight="5" width="100%" height="100%" chromeColor="#F6F8FA" contentBackgroundColor="#FFFFFF" verticalAlign="middle">
			<s:DataGrid id="certificateDataGrid" alternatingRowColors="[#FFFFFF,#EEEEEE]" chromeColor="#5CACEE" editable="true" rowHeight="25" width="980" height="158">
				<s:columns>
					<s:ArrayList>
						<s:GridColumn dataField="e50106" headerText="儿童（新生儿）姓名" width="125"/>
						<s:GridColumn dataField="e50108Str" headerText="出生日期" width="120"/>
						<s:GridColumn dataField="e50103" headerText="家长姓名" width="90"/>
						<s:GridColumn dataField="e50104" headerText="身份证号" width="140"/>
						<s:GridColumn dataField="e50117" headerText="筛查人" width="90"/>
						<s:GridColumn dataField="e50121" headerText="录入人员" width="90"/>
						<s:GridColumn dataField="e50122Str" headerText="录入时间" width="120"/>
						<s:GridColumn dataField="e50120" headerText="新生儿筛查编号"/>
					</s:ArrayList>
				</s:columns>
			</s:DataGrid>					
		</s:HGroup>
		
		<s:HGroup contentBackgroundColor="#FF0000" verticalAlign="middle" horizontalAlign="right" paddingBottom="20" paddingTop="10" paddingLeft="10" paddingRight="20" width="100%" height="30">
			<s:Button label="关闭" click="removeWindow();"/>
		</s:HGroup>
	</s:VGroup>
	
</s:TitleWindow>