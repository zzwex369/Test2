<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  width="100%" height="100%" backgroundColor="#FFFFFF"
		  xmlns:component="com.xyw.sys.custom.component.*"
		  creationComplete = "creationCompleteHandle(event)">
	
	<fx:Declarations>
		<s:RemoteObject id="signerService" destination="signerService" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="find" result="findHandler(event)" />
			<s:method name="del" result="delHandler(event)"/>
		</s:RemoteObject>
	</fx:Declarations>
	
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		
		s|DataGrid
		{
			borderAlpha:"0.3";
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDataGridSkin");
			alternatingRowColors:"[#FFFFFF,#EEEEEE]"; 
		}
		
		s|DropDownList
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDropDownListSkin");
			selectionColor:#DDDDDD;
			rollOverColor:#EEEEEE;	
		}
		s|Button
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomButtonSkin");
		} 
		s|Label
		{
			fontSize:13;
		}
	</fx:Style>
	
	<fx:Script>
		<![CDATA[
			import com.xyw.module.xtwh.model.D101Request;
			import com.xyw.module.xtwh.model.S301_10;
			import com.xyw.module.xtwh.model.S301_10Request;
			import com.xyw.module.xtwh.model.S301_10Response;
			import com.xyw.module.xtwh.model.VS301_10;
			import com.xyw.module.xtwh.signer.titleWindow;
			import com.xyw.sys.custom.component.ImageWindow;
			import com.xyw.sys.custom.component.PagerBar;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.CloseEvent;
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			
			import spark.events.GridSelectionEvent;
			[Bindable]
			public var vs301_10:Object;
			public var s301_10:S301_10;
			public var systemUser:SystemUser =null;
			public var s301_10Request:S301_10Request;
			private function creationCompleteHandle(event:FlexEvent):void
			{
				this.systemUser = this.parentApplication.systemUser;
				this.dataGridInfo.addEventListener(GridSelectionEvent.SELECTION_CHANGE,onSelectionChange);
			}
			
			private function onSelectionChange(event:GridSelectionEvent):void
			{
				this.vs301_10 = DataGrid(event.target).selectedItem;
			}
			
			private function initQueryParam(pageIndex:int,pageSize:int):void
			{
				s301_10 = new S301_10();
				s301_10Request = new S301_10Request();
				var type:String = institutionComboBox.getLastSelectedInstitution();
				var s3011003:String = institutionComboBox.getLastSelectedInstitutionCode();
				if(this.systemUser.institutionType == "1")
				{
					s301_10.s3011003 = this.systemUser.institutionCode;
				}else{
					if(type == "8")
					{
						s301_10.s3011003  = s3011003;
					}else if(type == "6")
					{
						s301_10.s3011003  = s3011003.substring(0,6);
					}else if(type == "4")
					{
						s301_10.s3011003  = s3011003.substring(0,4);
					}else if(type == "2")
					{
						s301_10.s3011003  = s3011003.substring(0,2);
					}
				}
				s301_10.s3011005='1';
				s301_10.s3011004=systemUser.userCode;
				s301_10Request.s301_10=s301_10;
				s301_10Request.pageIndex = pageIndex;
				s301_10Request.pageSize = pageSize;
			}
			
			private function queryVS301():void
			{
				query(1,20);
			}
			
			private function query(pageIndex:int,pageSize:int):void
			{
				initQueryParam(pageIndex,pageSize);
				this.signerService.find(s301_10Request);
			}
			
			private function findHandler(event:ResultEvent):void
			{  
				var s301_10Response:S301_10Response= event.result as S301_10Response;
				
				var rowCount:Number = s301_10Response.rowCount;
				var vs30110s:ArrayCollection = s301_10Response.vs301_10s;
				
				if(s301_10Response.errorMessage == null) {
					this.pagerBar.dataGrid = this.dataGridInfo;
					this.pagerBar.rowCount = rowCount;
					this.pagerBar.resultData = vs30110s;
					this.pagerBar.pagerFunction = pagerFunction;
					this.pagerBar.dataBind();
					if(rowCount > 0) {
						this.pagerBar.enabled = true;
					}
				} else {
					Alert.show(s301_10Response.errorMessage, "系统提示");
				}
			}
			
			private function pagerFunction(currentPageIndex:int,pageSize:int):void
			{
				query(currentPageIndex,pageSize);
			}
			
			
			public function refrashPage():void
			{	
				query(this.pagerBar.currentPageIndex,20);
			}
			
			private function add(event:MouseEvent):void
			{
				
				var window:titleWindow=new titleWindow();
				
				if(event.target==addButton)
				{
					window.title="添加录入人信息";				
					window.currentState=window.states[0].name;
				}
				else
				{
					if(!this.vs301_10){
						window=null;
						Alert.show("请选择要操作的行！", "系统提示");
						return;
					}
					window.title="修改录入人信息";		
					window.vs301_10=this.vs301_10;
					window.currentState=window.states[1].name;
				}
				
				window.s02="录入人";
				window.s05="1";
				window.owner = this;
				PopUpManager.addPopUp(window,this,true);
				var x:Number = (this.parentApplication.mdiCanvas.width - window.width) / 2;
				var y:Number = (this.parentApplication.mdiCanvas.height - window.height) / 2;
				window.move(x,y);
			}
			
			
			
			private function remove(event:MouseEvent):void
			{
				if(!this.vs301_10){
					Alert.show("请选择要操作的行！", "系统提示");
					return;
				}
				Alert.yesLabel = "确定";
				Alert.noLabel = "取消";
				Alert.show("确定要删除所选的行吗？", "系统提示", (Alert.YES|Alert.NO), this, alertCallBack);
			}
			
			private function alertCallBack(event:CloseEvent):void
			{
				var s301_10Request:S301_10Request =  new S301_10Request();
				var s301_10:S301_10 = new S301_10();
				s301_10.s3011001 = this.vs301_10.s3011001;
				s301_10Request.s301_10 = s301_10;
				
				if(event.detail == Alert.YES){
					this.signerService.del(s301_10Request);
				}
				
			}
			
			private function delHandler(event:ResultEvent):void
			{
				var s301_10Response:S301_10Response = event.result as S301_10Response;
				if(s301_10Response.errorMessage == null){
					this.refrashPage();
					Alert.okLabel = "确认";
					Alert.show(s301_10Response.promptMessage, "系统提示");
				}else{
					Alert.show(s301_10Response.errorMessage, "系统提示");
				}
			}
			
			private function setS3011007(item:Object, column:GridColumn):String
			{
				return item[column.dataField]?"有":"无";
			}
			
			
			/*---------------转换为图片----------------------*/
			private function loaderPic():void   
			{  
				var imgwindow:ImageWindow = new ImageWindow();
				imgwindow.owner = this;
				imgwindow.imageSource=vs301_10.s3011007 ;
				PopUpManager.addPopUp(imgwindow,this,true);
				var x:Number = (this.parentApplication.mdiCanvas.width - imgwindow.width) / 2 ;
				var y:Number = (this.parentApplication.mdiCanvas.height - imgwindow.height) / 2;
				imgwindow.move(x, y);
				imgwindow.init();
			}   
		]]>
	</fx:Script>
	
	
	<s:VGroup width="100%" height="150" paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10">
		<mx:TabNavigator width="100%" paddingTop="0" creationPolicy="all" chromeColor="#ffffff">
			<s:NavigatorContent label="录入人维护" height="75">
				<s:VGroup width="100%">
					<s:HGroup paddingLeft="10" paddingBottom="5"  paddingTop="5" verticalAlign="middle">
						<s:Label text="所 在  医 院" />
						<component:InstitutionComboBox id="institutionComboBox" width="664" mouseChildren="false"/>
					</s:HGroup>
					<s:HGroup paddingLeft="10" paddingBottom="5"  paddingTop="5">
						<s:Button label="查询" id="queryButton" click="queryVS301()"/>
						<s:Button label="添加" id="addButton" click="add(event)"/>
						<s:Button label="修改" id="modifyButton" click="add(event)"/>
						<s:Button label="删除" id="removeButton" click="remove(event)"/>
						<s:Button label="预览图片" id="loadButton" click="loaderPic()" enabled="{vs301_10&amp;&amp;vs301_10.s3011007}"/>
					</s:HGroup>
				</s:VGroup>
			</s:NavigatorContent>
		</mx:TabNavigator>
		<s:VGroup width="100%" height="382">
			<s:DataGrid id="dataGridInfo" editable="false"  width="100%" height="350" 
						borderAlpha="0.3" alternatingRowColors="[#FFFFFF,#EEEEEE]" rowHeight="23" skinClass="com.xyw.sys.custom.skin.CustomDataGridSkin">
				<s:columns>
					<s:ArrayList>
						<s:GridColumn headerText="序号" width="45" itemRenderer="com.xyw.sys.custom.itemrenderer.CustomGridColumnItemRenderer" />
						<s:GridColumn dataField="s3011001" headerText="录入人编号" width="200"/>
						<s:GridColumn dataField="s3011002" headerText="录入人姓名" width="200"/>
						<s:GridColumn dataField="s3011006" headerText="身份证号码" width="200"/>
						<s:GridColumn dataField="s3011007" headerText="身份证图片" width="100" labelFunction="setS3011007"/>
						<s:GridColumn dataField="s3011003_zh" headerText="所在医院"/>
					</s:ArrayList>
				</s:columns>
			</s:DataGrid>
			<component:PagerBar id="pagerBar" enabled="false"/>
		</s:VGroup>
	</s:VGroup>		
</s:Module>
