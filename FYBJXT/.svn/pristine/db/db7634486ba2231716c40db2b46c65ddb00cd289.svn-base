<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  width="100%" height="100%" backgroundColor="#FFFFFF"
		  xmlns:component="com.xyw.sys.custom.component.*"
		  creationComplete="creationCompleteHandle(event)">
	
	<fx:Declarations>
		<s:RemoteObject id="jsywhService" destination="jsywhService" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="query" result="queryHandler(event)" />
			<s:method name="remove" result="removeHandler(event)"/>
		</s:RemoteObject>
	</fx:Declarations>
	
	<fx:Style>      
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		@namespace component "com.xyw.sys.custom.component.*";
	</fx:Style>
	
	<fx:Script>
		<![CDATA[
			import com.xyw.module.xtwh.model.D101Request;
			import com.xyw.module.xtwh.model.S30109;
			import com.xyw.module.xtwh.model.S30109Request;
			import com.xyw.module.xtwh.model.S30109Response;
			import com.xyw.module.xtwh.model.VS30109;
			import com.xyw.sys.custom.component.PagerBar;
			import com.xyw.sys.model.SystemUser;
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.CloseEvent;
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			
			import spark.events.GridSelectionEvent;
			
			public var pageIndex:int=0;
			public var pageSize:int=10;
			public var systemUser:SystemUser = null;
			public var s30109:S30109 = null;
			public var selectIndex:String;
			public var selectIndexName:String;
			public var vs30109:VS30109 = null;
			
			private function creationCompleteHandle(event:FlexEvent):void
			{
				this.dataGridInfo.addEventListener(GridSelectionEvent.SELECTION_CHANGE,onSelectionChangeHandler);
			}
			
			private function onSelectionChangeHandler(event:GridSelectionEvent):void
			{
				this.vs30109 = DataGrid(event.target).selectedItem as VS30109;
			}
			
			private function query(event:MouseEvent):void
			{
				this.systemUser = this.parentApplication.systemUser;
				var s30109Request:S30109Request = new S30109Request();
				s30109 = new S30109();
				s30109Request.systemCode = this.systemUser.institutionCode;
				//Alert.show(s30109Request.systemCode);
				
				s30109.s3010903 = this.institutionComboBox.getLastSelectedInstitutionCode();
				s30109Request.s30109 = s30109;
				
				s30109Request.pageIndex = 1;
				s30109Request.pageSize = 20;
				
				this.jsywhService.query(s30109Request);
			}
			
			private function queryHandler(event:ResultEvent):void
			{  
				var s30109Response:S30109Response = event.result as S30109Response;
				
				var rowCount:Number = s30109Response.rowCount;
				
				var d30109s:ArrayCollection = s30109Response.VS30109s;
				
				if(s30109Response.errorMessage == null) {
					this.pagerBar.dataGrid = this.dataGridInfo;
					this.pagerBar.rowCount = rowCount;
					this.pagerBar.resultData = d30109s;
					this.pagerBar.pagerFunction = pagerFunction;
					this.pagerBar.dataBind();
					if(rowCount > 0) {
						this.pagerBar.enabled = true;
					}
				} else {
					Alert.show(s30109Response.errorMessage, "系统提示");
				}
			}
			
			private function pagerFunction(currentPageIndex:int,pageSize:int):void
			{
				var s30109Request:S30109Request = new S30109Request();
				s30109 = new S30109();
				
				
				//s30109.s3010902 = s3010902.text;
				s30109Request.s30109 = s30109;
				s30109Request.pageIndex = currentPageIndex;
				s30109Request.pageSize = pageSize;
				
				this.jsywhService.query(s30109Request);
			}
			
			private function add(event:MouseEvent):void
			{
				
				var window:AddTitleWindow=new AddTitleWindow();
				window.owner = this;
				PopUpManager.addPopUp(window,this);
				var x:Number = (this.parentApplication.mdiCanvas.width - window.width) / 2;
				var y:Number = (this.parentApplication.mdiCanvas.height - window.height) / 2;
				window.move(x,y);
				
				//				window.d20102_text = area.getAreaCode();
				//				window.d20105_text = area.getAreaName();
			}
			
			private function modify(event:MouseEvent):void
			{
				if(this.vs30109 ==  null){
					Alert.show("请选择要操作的行!", "系统提示");
					return;
				}
				var window:ModifyTitleWindow = new ModifyTitleWindow();
				window.owner = this;
				window.vs30109 = this.vs30109;
				PopUpManager.addPopUp(window,this);
				var x:Number = (this.parentApplication.mdiCanvas.width - window.width) / 2;
				var y:Number = (this.parentApplication.mdiCanvas.height - window.height) / 2;
				window.move(x, y);
				//				window.d20105_text = area.getAreaName();
				//				window.areaCode = this.area.getAreaCode();
			}
			
			private function remove(event:MouseEvent):void
			{
				if(this.vs30109 == null){
					Alert.show("请选择要操作的行！", "系统提示");
					return;
				}
				Alert.yesLabel = "确定";
				Alert.noLabel = "取消";
				Alert.show("确定要删除所选的行吗？", "系统提示", (Alert.YES|Alert.NO), this, alertCallBack);
			}
			
			private function alertCallBack(event:CloseEvent):void
			{
				var s30109Request:S30109Request =  new S30109Request();
				var s30109:S30109 = new S30109();
				s30109.s3010901 = this.vs30109.s3010901;
				s30109Request.s30109 = s30109;
				
				if(event.detail == Alert.YES){
					this.jsywhService.remove(s30109Request);
				}
				
			}
			
			private function removeHandler(event:ResultEvent):void
			{
				var s30109Response:S30109Response = event.result as S30109Response;
				if(s30109Response.errorMessage == null){
					this.refrashPage();
					Alert.okLabel = "确认";
					Alert.show(s30109Response.promptMessage, "系统提示");
				}else{
					Alert.show(s30109Response.errorMessage, "系统提示");
				}
			}
			
			public function refrashPage():void
			{
				var s30109Request:S30109Request = new S30109Request();
				s30109 = new S30109();
				
				
				//s30109.s3010902 = s3010902.text;
				s30109Request.s30109 = s30109;
				s30109Request.systemCode = this.systemUser.institutionCode;
				s30109.s3010903 = this.institutionComboBox.getLastSelectedInstitutionCode();
				
				s30109Request.pageIndex = this.pagerBar.currentPageIndex;
				s30109Request.pageSize = 20;
				s30109Request.s30109 = s30109;
				
				this.jsywhService.query(s30109Request);
			}
			
			protected function init(event:FlexEvent):void
			{
				// TODO Auto-generated method stub
				
			}
			
		]]>
	</fx:Script>
	
	<!--<component:AreaComboBox id="area"/>-->
	<s:VGroup width="100%" height="100%" paddingBottom="10" paddingLeft="10" paddingRight="10" paddingTop="10">
		<mx:TabNavigator width="100%" paddingTop="0" creationPolicy="all" chromeColor="#ffffff">
			<s:NavigatorContent label="医生维护" height="75">
				<s:VGroup width="100%">
					<s:HGroup paddingLeft="20" paddingTop="10" verticalAlign="middle">
						<s:Label text="所在医院"/><component:InstitutionComboBox id="institutionComboBox"/>
					</s:HGroup>
					<s:HGroup paddingLeft="20" paddingTop="10" verticalAlign="middle" >
						
						<s:Button label="查询" id="queryButton" click="query(event)"/>
						<s:Button label="添加" id="addButton" click="add(event)"/>
						<s:Button label="修改" id="modifyButton" click="modify(event)"/>
						<s:Button label="删除" id="removeButton" click="remove(event)"/>
					</s:HGroup>
				</s:VGroup>
			</s:NavigatorContent>
		</mx:TabNavigator>
		
		<s:VGroup width="100%">
			<s:DataGrid id="dataGridInfo" editable="true" borderAlpha="0.3" width="100%" height="330" rowHeight="22" alternatingRowColors="[#FFFFFF,#EEEEEE]" skinClass="com.xyw.sys.custom.skin.CustomDataGridSkin">
				<s:columns>
					<s:ArrayList>
						<s:GridColumn headerText="序号" width="45" itemRenderer="com.xyw.sys.custom.itemrenderer.CustomGridColumnItemRenderer" editable="false"/>
						<s:GridColumn dataField="s3010901" headerText="接生员编号"/>
						<s:GridColumn dataField="s3010902" headerText="接生员姓名"/>
						<s:GridColumn dataField="s3010903" headerText="医院编号 " visible="false"/>
						<s:GridColumn dataField="s30109Zh" headerText="医院" />
						
						
					</s:ArrayList>
				</s:columns>
			</s:DataGrid>
			<component:PagerBar id="pagerBar" enabled="false"/>
		</s:VGroup>
	</s:VGroup>
</s:Module>
