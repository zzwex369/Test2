<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  xmlns:component="com.xyw.sys.custom.component.*"
		  width="100%" height="100%" creationComplete="moduleCreationCompleteHandler(event)">
	<fx:Declarations>
		<s:RemoteObject id="f304Service" destination="f304Service" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="queryF304" result="queryF304Handler(event)"/>
			<s:method name="deleteF304" result="deleteF304Handler(event)"/>
		</s:RemoteObject>
		
	</fx:Declarations>
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		
		
		s|DropDownList
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDropDownListSkin");
			selectionColor:#DDDDDD;
			rollOverColor:#EEEEEE;	
		}
		s|Button
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomButtonSkin");
		}
		s|Label
		{
			fontSize:13;
		}
		s|DataGrid
		{
			borderAlpha:"0.3";
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDataGridSkin");
			alternatingRowColors:"[#FFFFFF,#EEEEEE]";
		}
	</fx:Style>
	<fx:Script>
		<![CDATA[
			import com.xyw.module.fnbj.model.F304Request;
			import com.xyw.module.fnbj.model.VF304;
			import com.xyw.sys.custom.component.CompMethod;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.formatters.DateFormatter;
			import mx.managers.PopUpManager;
			import mx.messaging.AbstractConsumer;
			import mx.rpc.events.ResultEvent;
			import mx.utils.StringUtil;
			
			import spark.events.GridSelectionEvent;
			
			private var vf304:VF304 =null;
			public var f304Request:F304Request =null; 
			public var systemUser:SystemUser =null;
			
			private function moduleCreationCompleteHandler(event:FlexEvent):void
			{
				var dateStr:String = DateField.dateToString(new Date(),"YYYY-MM-01");
				this.timeStart.selectedDate = DateFormatter.parseDateString(dateStr);
				this.timeEnd.selectedDate = new Date();
				
				this.systemUser = this.parentApplication.systemUser;
				//检查读卡权限
				if(this.systemUser.duka == "1"){
					this.duka1.enabled = true;
				}
				
				this.certificateDataGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE,onSelected);
			}
			
			private function onSelected(event:GridSelectionEvent):void
			{
				this.vf304 = DataGrid(event.target).selectedItem as VF304;
			}
			
			/*----------获取查询条件数据---------*/
			private function initQueryParam():void
			{
				f304Request = new F304Request();
				try
				{	
					var type:String = this.F304_08.getLastSelectedInstitution();
					var F304_08_:String = this.F304_08.getLastSelectedInstitutionCode();
					if(this.systemUser.institutionType == "1")
						f304Request.f30408 = this.systemUser.institutionCode;
					else
						f304Request.f30408 = (type == "10")?F304_08_:F304_08_.substring(0,Number(type));
					
					
					f304Request.f30403Start = this.timeStart.selectedDate;
					f304Request.f30403End = this.timeEnd.selectedDate;
					f304Request.f30405 = StringUtil.trim(this.F304_05.text);
					f304Request.f30410 = StringUtil.trim(this.F304_10.text);
					f304Request.f30412 = StringUtil.trim(this.F304_12.text);
				} 
				catch(error:Error) 
				{		
				}
			}
			
			private function query(event:MouseEvent):void
			{
				f304Request = new F304Request();
				this.initQueryParam();
				f304Request.parameterPageindex = 1;
				f304Request.parameterPagesize = 20;
				this.f304Service.queryF304(f304Request);
			}
			protected function queryF304Handler(event:ResultEvent):void
			{
				var f304Response:Object = event.result;
				var flag:String = f304Response.flag;
				var listVF304:ArrayCollection = f304Response.vf304s;
				var rowCount:Number = f304Response.rowCount;
				if(f304Response.errorMessage == null)
				{ 
					this.pagerBar.dataGrid = this.certificateDataGrid;
					this.pagerBar.rowCount = rowCount;
					this.pagerBar.resultData = listVF304;
					this.pagerBar.dataBind();
					this.pagerBar.pagerFunction = pagerFunction;
					if(rowCount > 0) {
						this.pagerBar.enabled = true;
					}
				} else {
					Alert.show(f304Response.errorMessage, "系统提示");
				}
			}
			protected function deleteF304Handler(event:ResultEvent):void
			{
				var f304Response:Object = event.result;
				if(f304Response.errorMessage == null){
					if(f304Response.promptMessage != null){
						Alert.show(f304Response.promptMessage, "系统提示");
					}
					refresh();
				} else {
					Alert.show(f304Response.errorMessage, "系统提示");
				}
			}
			
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				f304Request = new F304Request();
				this.initQueryParam();
				f304Request.parameterPageindex = currentPageIndex;
				f304Request.parameterPagesize = pageSize;
				this.f304Service.queryF304(f304Request);
			}
			
			public function refresh():void
			{
				f304Request = new F304Request();
				this.initQueryParam();
				f304Request.parameterPageindex = this.pagerBar.currentPageIndex;
				f304Request.parameterPagesize = 20;
				this.f304Service.queryF304(f304Request);
			}
			public function update(event:MouseEvent):void
			{
				if(this.vf304 == null){
					Alert.show("请选择要操作的行");
					return;
				}else{
					var window:title =new title();
					window.vf304 = this.vf304;
					CompMethod.popUpTitleWindow(window,this,true);
				}
			}
			
			public function deleteF304(event:MouseEvent):void
			{
				if(this.vf304 == null){
					Alert.show("请选择要操作的行");
					return;
				}
				
				f304Request.f30401 = this.vf304.f30401;
				f304Request.f30402 = this.vf304.f30402;
				f304Request.f30405 = this.vf304.f30405;
				f304Request.f30410 = this.vf304.f30410;
				f304Request.f30412 = this.vf304.f30412;
				this.f304Service.deleteF304(f304Request);
			}
			
			
			//读卡(母亲)
			protected function readCard_mother(event:MouseEvent):void
			{
				try
				{
					//readCard是调用index.js下的函数，读卡涉及index.jsp和index.js两个文件
					var str:String = ExternalInterface.call("parent.readCard");
					if(str != null && str.length != 0){
						
						var array:Array = str.split(",");
						var sex:String = array[1];//性别
						if(sex=="女"){
							this.F304_10.text = array[0];//姓名
							this.F304_12.text = array[5];//身份证号
						}else{
							Alert.show("请读孕产妇信息！","系统提示");
						}
					}else{
						Alert.show("读卡失败！");
					}
				} 
				catch(error:Error) 
				{
					Alert.show("读卡失败！");
				}
			}
		]]>
	</fx:Script>
	<mx:TabNavigator width="100%" height="118" chromeColor="#ffffff" creationPolicy="all">
		<s:NavigatorContent width="100%" label="综合查询">
			<s:VGroup width="100%">
				<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10"
						  verticalAlign="middle">
					<s:Label text="建卡机构"/>
					<component:InstitutionComboBox id="F304_08"  width="730" villageVisible="true"/>
				</s:HGroup>
				<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10"
						  verticalAlign="middle">
					<s:Label text="发卡日期"/><mx:DateField id="timeStart" width="120"
														dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
														monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
														formatString="YYYY-MM-DD" yearNavigationEnabled="true"/>
					<s:Label text="至"/><mx:DateField id="timeEnd" width="120"
													 dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
													 monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
													 formatString="YYYY-MM-DD" yearNavigationEnabled="true"/>
					<s:Button label="查询" click="query(event)"/>
					<s:Button label="修改" click="update(event)"/>
					<s:Button label="删除" click="deleteF304(event)"/>
				</s:HGroup>
			</s:VGroup>
		</s:NavigatorContent>
		<s:NavigatorContent width="100%" label="精确查询">
			<s:VGroup>
				<s:HGroup width="100%" paddingBottom="0" paddingLeft="10" paddingRight="10"
						  verticalAlign="middle">
					<s:Label text="孕产妇姓名"/><s:TextInput id="F304_10"/>
					<s:Label text="证件号码"/><s:TextInput id="F304_12" width="200"/>
					<s:Button id="duka1" width="60" label="读卡" click="readCard_mother(event)" enabled="false"/>
				</s:HGroup>
				<s:HGroup width="100%" paddingBottom="0" paddingLeft="10" paddingRight="10" verticalAlign="middle">
					<s:Label text="生育联系卡"/><s:TextInput id="F304_05"/>
					<s:Button label="查询" click="query(event)"/>
					<s:Button label="修改" click="update(event)"/>
					<s:Button label="删除" click="deleteF304(event)"/>
				</s:HGroup>
			</s:VGroup>
		</s:NavigatorContent>
	</mx:TabNavigator>
	<s:Scroller y="126" width="100%" height="560" horizontalScrollPolicy="auto"
				verticalScrollPolicy="auto">
		<s:VGroup width="100%" paddingBottom="10">
			<s:DataGrid id="certificateDataGrid" width="100%" height="340" alternatingRowColors="[#FFFFFF,#EEEEEE]" editable="true" rowHeight="22" skinClass="com.xyw.sys.custom.skin.CustomDataGridSkin">
				<s:columns>
					<s:ArrayList>
						<s:GridColumn visible="false" dataField="f30401" headerText="主键"/>
						<s:GridColumn width="40" editable="false" headerText="序号" itemRenderer="com.xyw.sys.custom.itemrenderer.CustomGridColumnItemRenderer"/>
						<s:GridColumn width="80" dataField="f30410" headerText="孕产妇姓名"/>
						<s:GridColumn width="150" dataField="f30412" headerText="证件号码"/>
						<s:GridColumn width="140" dataField="f30117" headerText="保健卡号"/>
						<s:GridColumn width="100" dataField="f30405" headerText="生育联系卡"/>
						<s:GridColumn width="150" dataField="f30404" headerText="街道生育科电话"/>
						<s:GridColumn width="150" dataField="f30409" headerText="孕产妇所在居委会"/>
						<s:GridColumn width="200" dataField="f30406Zh" headerText="居委会地址 "/>
						<s:GridColumn width="150" dataField="f30407" headerText="村名"/>
						<s:GridColumn width="80" dataField="f30403Str" headerText="发卡日期"/>
						<s:GridColumn width="150" dataField="f30408Zh" headerText="建卡单位"/>
					</s:ArrayList>
				</s:columns>
			</s:DataGrid>
			<component:PagerBar id="pagerBar" enabled="false" isExcel="false" isExcel2="false" isPrinter="false"/>
			
		</s:VGroup>	
	</s:Scroller>	
</s:Module>


