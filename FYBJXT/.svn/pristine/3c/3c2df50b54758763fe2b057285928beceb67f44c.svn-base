<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" 
		  width="100%" height="100%"
		  creationComplete="moduleCreationCompleteHandler(event)"
		  xmlns:component="com.xyw.sys.custom.component.*">
	<fx:Declarations>
		<s:RemoteObject id="d307Service" destination="d307Service" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="queryVD307" result="queryVD307Handler(event)"/>
			<s:method name="deleteD307" result="deleteD307Handler(event)"/>
		</s:RemoteObject>
	</fx:Declarations>
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		
		
		s|DropDownList
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDropDownListSkin");
			selectionColor:#DDDDDD;
			rollOverColor:#EEEEEE;	
		}
		s|Button
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomButtonSkin");
		}
		s|Label
		{
			fontSize:13;
		}
		s|DataGrid
		{
			borderAlpha:"0.3";
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDataGridSkin");
			alternatingRowColors:"[#FFFFFF,#EEEEEE]";
		}
	</fx:Style>
	<fx:Script>
		<![CDATA[
			import com.xyw.module.csyxzm.model.D307Request;
			import com.xyw.module.csyxzm.model.VD307;
			import com.xyw.sys.custom.component.ExportExcel;
			import com.xyw.sys.custom.component.SecurityControler;
			import com.xyw.sys.model.ComboBoxData;
			import com.xyw.sys.model.ComboBoxDataRequest;
			import com.xyw.sys.model.ComboBoxDataResponse;
			import com.xyw.sys.model.SystemUser;
			
			import com.xyw.module.csyxzm.csyxzmqfsqcx.tittle;
			import mx.managers.PopUpManager;
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.rpc.events.ResultEvent;
			
			import spark.events.GridSelectionEvent;
			
			public var systemUser:SystemUser = null;
			public var d307Request:D307Request;
			public var vD307:VD307 = null;
			
			//**************启动权限控制**************//
			private function security():void{
				SecurityControler.start(null,'visible');
				SecurityControler.addAllPerms(this.parentApplication.permissionList);
				this.duka1.enabled=SecurityControler.isPermitted('duka.swf');
				this.duka2.enabled=SecurityControler.isPermitted('duka.swf');
			}
			
			private function moduleCreationCompleteHandler(event:FlexEvent):void
			{
				//security();
				this.systemUser = this.parentApplication.systemUser;
				//检查读卡权限
				if(this.systemUser.duka == "1"){
					this.duka1.enabled = true;
					this.duka2.enabled = true;
				}
				this.timeStart.text=DateField.dateToString(new Date(),"YYYY-MM-01");
				this.timeEnd.text=DateField.dateToString(new Date(),"YYYY-MM-DD");
				//this.pagerBar.exportEXCEL = exportEXCEL;
				this.certificateDataGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE,onSelected);
			}
			
			private function onSelected(event:GridSelectionEvent):void
			{	
				this.vD307 = DataGrid(event.target).selectedItem as VD307;
			}
			
			private function exportEXCEL():void
			{
				ExportExcel.loadDGInExcel(this.certificateDataGrid,"机构外首次签发申请信息",this.parentApplication.contextRoot + '/print/ExcelExport.jsp');
			}
			
			/*----------获取查询条件数据---------*/
			private function initQueryParam():void
			{
				d307Request = new D307Request();
				try{ 
					var type:String = this.d307_24.getLastSelectedInstitution();
					var d307_24_:String = this.d307_24.getLastSelectedInstitutionCode();
					
					if(this.systemUser.institutionType == "1")
					{
						d307Request.d30724 = this.systemUser.institutionCode;
					}else{
						if(type == "8")
						{
							d307Request.d30724 = d307_24_;
						}else if(type == "6")
						{
							d307Request.d30724 = d307_24_.substring(0,6);
						}else if(type == "4")
						{
							d307Request.d30724 = d307_24_.substring(0,4);
						}else if(type == "2")
						{
							d307Request.d30724 = d307_24_.substring(0,2);
						}
					} 
					d307Request.d30705 = this.d307_05.getAreaCode();
					d307Request.timeStr = DateField.stringToDate(this.timeStart.text,"YYYY-MM-DD");
					d307Request.timeEnd = DateField.stringToDate(this.timeEnd.text,"YYYY-MM-DD");
					d307Request.d30702 = this.d307_02.text;
					d307Request.d30706 = this.d307_06.text;
					d307Request.d30708 = this.d307_08.text;
					d307Request.d30712 = this.d307_12.text;
					d307Request.d30714 = this.d307_14.text;
				}catch(error:Error) {
					
				}
			}
			
			private function query(event:MouseEvent):void
			{
				d307Request = new D307Request();
				this.initQueryParam();
				d307Request.parameterPageindex = 1;
				d307Request.parameterPagesize = 20;
				this.d307Service.queryVD307(d307Request);
			}
			
			private function queryVD307Handler(event:ResultEvent):void
			{
				var d307Response:Object = event.result;
				var listVD307:ArrayCollection = d307Response.vd307s;
				var rowCount:Number = d307Response.rowCount;
				if(d307Response.errorMessage == null)
				{
					this.pagerBar.pageSize = 20;
					this.pagerBar.dataGrid = this.certificateDataGrid;
					this.pagerBar.rowCount = rowCount;
					this.pagerBar.resultData = listVD307;
					this.pagerBar.dataBind();
					this.pagerBar.pagerFunction = pagerFunction;
					if(rowCount > 0) {
						this.pagerBar.enabled = true;
					}
				} else {
					Alert.show(d307Response.errorMessage, "系统提示");
				}
			}
			
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				d307Request = new D307Request();
				this.initQueryParam();
				d307Request.parameterPageindex = currentPageIndex;
				d307Request.parameterPagesize = pageSize;
				this.d307Service.queryVD307(d307Request);
			}
			public function deleteD307(event:MouseEvent):void
			{
				if(this.vD307 == null){
					Alert.show("请选择要操作的行");
					return;
				}
				d307Request.d30701 = this.vD307.d30701;
				this.d307Service.deleteD307(d307Request);
			}
			protected function deleteD307Handler(event:ResultEvent):void
			{
				var d307Response:Object = event.result;
				if(d307Response.errorMessage == null){
					if(d307Response.promptMessage != null){
						Alert.show(d307Response.promptMessage, "系统提示");
					}
					refresh();
				} else {
					Alert.show(d307Response.errorMessage, "系统提示");
				}
			}
			public function refresh():void
			{
				d307Request = new D307Request();
				this.initQueryParam();
				d307Request.parameterPageindex = this.pagerBar.currentPageIndex;
				d307Request.parameterPagesize = 20;
				this.d307Service.queryVD307(d307Request);
			}
			public function update(event:MouseEvent):void
			{
				if(this.vD307 == null){
					Alert.show("请选择要操作的行");
					return;
				}else{
					var window:tittle = new tittle();
					window.vd307 = this.vD307;
					PopUpManager.addPopUp(window,this);
					var x:Number = (this.parentApplication.mdiCanvas.width - window.width) / 2;
					var y:Number = (this.parentApplication.mdiCanvas.height - window.height) / 2;
					window.move(x, y);
				}
			}
			private function printD307(event:MouseEvent):void
			{
				if(this.vD307 == null){
					Alert.show("请选择要操作的行");
					return;
				}
				var urlRequest:URLRequest = null;
				var selectD30701:Number = vD307.d30701;
				var selectD30706:String = vD307.d30706;
				var selectD30708:String = vD307.d30708;
				
				/* var url:String = this.parentApplication.contextRoot + "/CsyxzmqfsqbServlet?flagF=0&d30701=" + selectD30701 + "&d30706=" + selectD30706 + "&d30708=" + selectD30708; */
				var url:String = this.parentApplication.contextRoot + "/CsyxzmqfsqbServlet?flagF=0&d30701=" + selectD30701;
				navigateToURL(new URLRequest(url), null);
			}
			
			//读卡(母亲)
			protected function readCard_mother(event:MouseEvent):void
			{
				try{
					var str:String = ExternalInterface.call("parent.readCard");
					if(str != null && str.length != 0){
						
						var array:Array = str.split(",");
						var sex:String = array[1];//性别
						if(sex=="女"){
							this.d307_06.text = array[0];//姓名
							this.d307_08.text = array[5];//身份证号
						}else{
							Alert.show("请读母亲信息！","系统提示");
						}
					}else{
						Alert.show("读卡失败！");
					}
				} 
				catch(error:Error) {
					Alert.show("读卡失败！");
				}
			}
			//读卡(父亲)
			protected function readCard_father(event:MouseEvent):void
			{
				try{
					var str:String = ExternalInterface.call("parent.readCard");
					if(str != null && str.length != 0){
						
						var array:Array = str.split(",");
						var sex:String = array[1];//性别
						if(sex=="男"){
							this.d307_12.text = array[0];//姓名
							this.d307_14.text = array[5];//身份证号
						}else{
							Alert.show("请读父亲信息！","系统提示");
						}
					}else{
						Alert.show("读卡失败！");
					}
				} 
				catch(error:Error) {
					Alert.show("读卡失败！");
				}
			}
		]]>
	</fx:Script>
	<s:Scroller width="100%" height="100%" horizontalScrollPolicy="auto"
				verticalScrollPolicy="auto">
		<s:VGroup width="100%">
			<mx:TabNavigator  width="100%" chromeColor="#ffffff" creationPolicy="all">
				<s:NavigatorContent  label="综合查询" width="100%">
					<s:VGroup>
						<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10" verticalAlign="middle">
							<s:Label text="出生地"/>
							<component:AreaComboBoxCommon id="d307_05" width="100%" paddingBottom="0" paddingTop="5" horizontalAlign="left"/>
						</s:HGroup>
						<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10" verticalAlign="middle">
							<s:Label text="签发机构"/>
							<component:InstitutionComboBox id="d307_24"/>
						</s:HGroup>
						<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10" verticalAlign="middle">
							<s:Label text="签发时间"/><mx:DateField yearNavigationEnabled="true" id="timeStart" width="120" dayNames='["日","一","二","三","四","五","六"]'
																monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
																formatString="YYYY-MM-DD"/>
							<s:Label text="至"/><mx:DateField yearNavigationEnabled="true" id="timeEnd" width="120" dayNames='["日","一","二","三","四","五","六"]'
															 monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
															 formatString="YYYY-MM-DD"/>
							<s:Button label="查询" click="query(event)"/>
							<s:Button label="打印" click="printD307(event)"/>
							<s:Button label="修改" click="update(event)"/>
							<s:Button label="删除" click="deleteD307(event)"/>
						</s:HGroup>
					</s:VGroup>
				</s:NavigatorContent>
				<s:NavigatorContent label="精确查询" width="100%">
					<s:VGroup>
						<s:HGroup width="100%" paddingBottom="0" paddingLeft="10" paddingRight="10" verticalAlign="middle">
							<s:Label text="母亲姓名"/><s:TextInput id="d307_06"/>
							<s:Label text="母亲身份证号"/><s:TextInput id="d307_08" width="140"/>
							<s:Button label="读卡" id="duka1" enabled="false" width="60" click="readCard_mother(event)"/>
						</s:HGroup>
						<s:HGroup width="100%" paddingBottom="0" paddingLeft="10" paddingRight="10" verticalAlign="middle">
							<s:Label text="父亲姓名"/><s:TextInput id="d307_12"/>
							<s:Label text="父亲身份证号"/><s:TextInput id="d307_14" width="140"/>
							<s:Button label="读卡" id="duka2" enabled="false" width="60" click="readCard_father(event)"/>
						</s:HGroup>
						<s:HGroup width="100%" paddingBottom="10" paddingLeft="10" paddingRight="10" verticalAlign="middle">
							<s:Label text="婴儿姓名"/><s:TextInput id="d307_02"/>
							<s:Button label="查询" click="query(event)"/>
							<s:Button label="打印" click="printD307(event)"/>
							<s:Button label="修改" click="update(event)"/>
							<s:Button label="删除" click="deleteD307(event)"/>
						</s:HGroup>
					</s:VGroup>
				</s:NavigatorContent>
			</mx:TabNavigator>
			<s:DataGrid id="certificateDataGrid" editable="true" rowHeight="22" width="100%" height="330" alternatingRowColors="[#FFFFFF,#EEEEEE]" skinClass="com.xyw.sys.custom.skin.CustomDataGridSkin">
				<s:columns>
					<s:ArrayList>
						<s:GridColumn dataField="d30701" headerText="主键" visible="false"/>
						<s:GridColumn headerText="序号" width="40" itemRenderer="com.xyw.sys.custom.itemrenderer.CustomGridColumnItemRenderer" editable="false"/>
						<s:GridColumn dataField="d30702" headerText="姓名" width="60"/>
						<s:GridColumn dataField="d30703Zh" headerText="性别" width="40"/>
						<s:GridColumn dataField="d30704Str" headerText="出生日期" width="80"/>
						<s:GridColumn dataField="d30706" headerText="母亲姓名" width="80"/>
						<s:GridColumn dataField="d30708" headerText="母亲证件号" width="150"/>
						<s:GridColumn dataField="d30712" headerText="父亲姓名" width="80"/>
						<s:GridColumn dataField="d30714" headerText="父亲证件号" width="150"/>
						<s:GridColumn dataField="d30718" headerText="领证人" width="60"/>
						<s:GridColumn dataField="d30719Zh" headerText="与新生儿关系" visible="false"/>
						<s:GridColumn dataField="d30720Zh" headerText="领证人有效证件类别" visible="false"/>
						<s:GridColumn dataField="d30721" headerText="领证人证件号" width="150"/>
						<s:GridColumn dataField="d30722" headerText="联系电话" width="100"/>
						<s:GridColumn dataField="d30723Str" headerText="签发时间" width="80"/>
						<s:GridColumn dataField="d30724Zh" headerText="签发机构" width="140"/>
					</s:ArrayList>
				</s:columns>
			</s:DataGrid>
			<component:PagerBar id="pagerBar" enabled="false"/>
		</s:VGroup>
	</s:Scroller>
</s:Module>