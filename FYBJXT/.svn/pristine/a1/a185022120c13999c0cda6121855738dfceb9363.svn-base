			private function onSelected(event:GridSelectionEvent):void
			{
				this.vD601 = DataGrid(event.target).selectedItem as VD601;
			}
			
			/*----------获取查询条件数据---------*/
			private function initQueryParam():Boolean
			{
				queryBirthRequest = new QueryBirthRequest();
				try
				{	
					var result:Boolean=true;
					var type:String = this.d601_02.getLastSelectedInstitution();
					var d60102:String = this.d601_02.getLastSelectedInstitutionCode();
					queryBirthRequest.d601_02 = type == "8"?d60102:d60102.substring(0,Number(type));
					if(d601_05.text||d601_55.text||d601_56.text||d601_65.text||d601_72.text||d601_75.text)
					{
						queryBirthRequest.d601_05 = StringUtil.trim(this.d601_05.text);
						queryBirthRequest.d601_55 = StringUtil.trim(this.d601_55.text);
						queryBirthRequest.d601_56 = StringUtil.trim(this.d601_56.text);
						queryBirthRequest.d601_65 = StringUtil.trim(this.d601_65.text);
						queryBirthRequest.d601_72 = StringUtil.trim(this.d601_72.text);
						queryBirthRequest.d601_75 = StringUtil.trim(this.d601_75.text);
					}else
					{
						if(CompMethod.getTimeSpace(timeStart,timeEnd))
							result=false;
						queryBirthRequest.d60103End = this.timeEnd.selectedDate;
						queryBirthRequest.d60103Start = this.timeStart.selectedDate;
					}
					
				} 
				catch(error:Error) 
				{
					
				}
				return result;
			}
			
			private function query(event:MouseEvent):void
			{
				queryBirthRequest = new QueryBirthRequest();
				if(!this.initQueryParam())
					return ;
				queryBirthRequest.flag = "now";
				queryBirthRequest.parameterPageindex = 1;
				queryBirthRequest.parameterPagesize = 20;
				this.deliveryService.queryDeliveryInfo(queryBirthRequest);
				
	/* 			queryBirthRequest = new QueryBirthRequest();
				this.initQueryParam();
				queryBirthRequest.flag = "all";
				queryBirthRequest.parameterPageindex = 1;
				queryBirthRequest.parameterPagesize = 100000;
				this.deliveryService.queryDeliveryInfo(queryBirthRequest); */
			}
			
			protected function queryHandler(event:ResultEvent):void
			{
				var queryBirthResponse:Object = event.result;
				var flag:String = queryBirthResponse.flag;
				var listVD601:ArrayCollection = queryBirthResponse.d601s;
				var rowCount:Number = queryBirthResponse.rowCount;
		//		this.certificateDataGridAll.dataProvider = listVD601;
				if(queryBirthResponse.errorMessage == null)
				{ 
				//	if(flag == "now"){
						this.pagerBar.pageSize = 20;
						this.pagerBar.dataGrid = this.certificateDataGrid;
						this.pagerBar.rowCount = rowCount;
						this.pagerBar.resultData = listVD601;
						this.pagerBar.dataBind();
						this.pagerBar.pagerFunction = pagerFunction;
						if(rowCount > 0) {
							this.pagerBar.enabled = true;
						}
					/* }else if(flag == "all"){
						this.certificateDataGridAll.dataProvider = listVD601;
						if(rowCount > 0) {
							this.pagerBar.enabled = true;
						}
					} */
				} else {
					Alert.show(queryBirthResponse.errorMessage, "系统提示");
				}
			}
			protected function deleteD601Handler(event:ResultEvent):void
			{
				var queryBirthResponse:Object = event.result;
				if(queryBirthResponse.errorMessage == null){
					if(queryBirthResponse.promptMessage != null){
						Alert.show(queryBirthResponse.promptMessage, "系统提示");
					}
					refresh();
				} else {
					Alert.show(queryBirthResponse.errorMessage, "系统提示");
				}
			}
			
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				queryBirthRequest = new QueryBirthRequest();
				if(!this.initQueryParam())
					return ;
				queryBirthRequest.flag = "now";
				queryBirthRequest.parameterPageindex = currentPageIndex;
				queryBirthRequest.parameterPagesize = pageSize;
				
				this.deliveryService.queryDeliveryInfo(queryBirthRequest);
			}
			
			public function refresh():void
			{
				queryBirthRequest = new QueryBirthRequest();
				if(!this.initQueryParam())
					return ;
				queryBirthRequest.flag = "now";
				queryBirthRequest.parameterPageindex = this.pagerBar.currentPageIndex;
				queryBirthRequest.parameterPagesize = 20;
				this.deliveryService.queryDeliveryInfo(queryBirthRequest);
				
			/* 	queryBirthRequest = new QueryBirthRequest();
				this.initQueryParam();
				queryBirthRequest.flag= "";
				queryBirthRequest.parameterPageindex = this.pagerBar.currentPageIndex;
				queryBirthRequest.parameterPagesize = 20;
				this.deliveryService.queryDeliveryInfo(queryBirthRequest); */
			}
			public function update(event:MouseEvent):void
			{
				if(this.vD601 == null){
					Alert.show("请选择要操作的行");
					return;
				}else{
					var window:tittle = new tittle();
					window.vd601 = this.vD601;
					PopUpManager.addPopUp(window,this);
					var x:Number = (this.parentApplication.mdiCanvas.width - window.width) / 2;
					var y:Number = (this.parentApplication.mdiCanvas.height - window.height) / 2;
					window.move(x, y);
				}
			}
			
			public function deleteD601(event:MouseEvent):void
			{
				if(this.vD601 == null){
					Alert.show("请选择要操作的行");
					return;
				}
				
				queryBirthRequest.d601_01 = this.vD601.d60101;
				queryBirthRequest.d601_02 = this.vD601.d60102;
				queryBirthRequest.d601_05 = this.vD601.d60105;
				queryBirthRequest.d601_55 = this.vD601.d60155;
				this.deliveryService.deleteD601(queryBirthRequest);
			}
			
			//读卡(母亲)
			protected function readCard():void
			{
				try
				{
					var arr:Array = CompMethod.read_card(null);
					if(!arr)
						return ;

					if(arr[1]=='女')
					{
						this.d601_05.text = arr[0];//姓名
						this.d601_65.text = arr[5];//身份证号
					}else
					{
						this.d601_72.text = arr[0];//姓名
						this.d601_75.text = arr[5];//身份证号
					}
					this.query(null);
						
				} 
				catch(error:Error) 
				{
					Alert.show("读卡失败！");
				}
			}
		]]>
	</fx:Script>
