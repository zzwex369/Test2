	<fx:Script>
		<![CDATA[
			import com.xyw.module.csyxzm.model.D401;
			import com.xyw.module.csyxzm.model.D401Request;
			import com.xyw.module.csyxzm.model.D401Response;
			import com.xyw.module.csyxzm.model.VD401;
			import com.xyw.sys.constant.SystemConstant;
			import com.xyw.sys.event.RefreshParentWindowDataEvent;
			import com.xyw.sys.model.ComboBoxData;
			import com.xyw.sys.model.ComboBoxDataRequest;
			import com.xyw.sys.model.ComboBoxDataResponse;
			import com.xyw.sys.model.SessionException;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.events.ResizeEvent;
			import mx.formatters.DateFormatter;
			import mx.managers.PopUpManager;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			import spark.events.GridSelectionEvent;
			import spark.formatters.DateTimeFormatter;
			
			[Bindable]
			public var vd401:VD401 = null;
			
			public var d401:D401;
			
			public var d401Request:D401Request;
			
			public var systemUser:SystemUser = null;
			
			private function moduleCreationCompleteHandler(event:FlexEvent):void
			{
				this.systemUser = this.parentApplication.systemUser;
				//this.initilizeComboBox();
				this.certificateApplyDataGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE, onSelectionChange);
				
				var dateStr:String = DateField.dateToString(new Date(),"YYYY-MM-01");
				this.d401_08.selectedDate = DateFormatter.parseDateString(dateStr);
				this.d401_08End.selectedDate = new Date();
				
				this.d401_24.dataProvider = new ArrayCollection([{label:"选择", data:""},{label:"未处理", data:"0"},{label:"已处理", data:"1"}]);
				this.d401_24.selectedIndex = 0;
			}
			
			
			private function initQueryParam():void
			{
				try
				{
					var type:String = this.d401_10.getLastSelectedInstitution();
					var d401_10_:String = this.d401_10.getLastSelectedInstitutionCode();
					if(this.systemUser.institutionType == "1")
					{
						d401.d40110 = this.systemUser.institutionCode;
					}
					else
					{
						if(type == "8")
						{
							d401.d40110 = d401_10_;
						}else if(type == "6")
						{
							d401.d40110 = d401_10_.substring(0,6);
						}else if(type == "4")
						{
							d401.d40110 = d401_10_.substring(0,4);
						}else if(type == "2")
						{
							d401.d40110 = d401_10_.substring(0,2);
						}
					}
					d401.d40102 = this.d401_02.text;
					d401.d40105 =  this.d401_05.text;
					d401.d40108 = this.d401_08.selectedDate;
					d401.d40108_end = this.d401_08End.selectedDate;
					d401.d40124 = this.d401_24.selectedItem.data;
					d401Request.d401 = this.d401;
				}
				catch(error:Error) 
				{
					
				}
			}
			
			private function query(event:MouseEvent):void
			{
				d401Request = new D401Request();
				d401 = new D401();
				this.initQueryParam();
				
				d401Request.parameterPageindex = 1;
				d401Request.parameterPagesize = 20;
				
				//d401Request.d401 = d401;
				
				this.abandonCertificateService.query(d401Request);
			}
			
			private function queryHandler(event:ResultEvent):void
			{
				var d401Response:Object = event.result;
				var rowCount:Number = d401Response.rowCount;
				if(d401Response.errorMessage == null) {
					var vd401s:ArrayCollection = d401Response.vd401s;
					this.pagerBar.dataGrid = this.certificateApplyDataGrid;
					this.pagerBar.rowCount = rowCount;
					this.pagerBar.resultData = vd401s;
					this.pagerBar.dataBind();
					this.pagerBar.pagerFunction = this.pagerFunction;
					if(rowCount > 0) {
						this.pagerBar.enabled = true;
					} else {
						//Alert.show("暂无数据!", "系统提示");
					}
				} else {
					Alert.show(d401Response.errorMessage, "系统提示");
				}
			}
			
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				d401Request = new D401Request();
				d401 = new D401();
				this.initQueryParam();
				
				d401Request.parameterPageindex = currentPageIndex;
				d401Request.parameterPagesize = pageSize;
				this.abandonCertificateService.query(d401Request);
					
			}
			
			public function refresh():void
			{
				d401Request = new D401Request();
				d401 = new D401();
				this.initQueryParam();
				
				d401Request.parameterPageindex = this.pagerBar.currentPageIndex;
				d401Request.parameterPagesize = 20;
				
				d401Request.d401 = d401;
				
				this.abandonCertificateService.query(d401Request);
			}
			
			private function formatDateToStringD40104AndD40108(vd401:Object, column:GridColumn):String
			{
				var dateTimeFormatter:DateTimeFormatter = new DateTimeFormatter();
				dateTimeFormatter.dateTimePattern = "yyyy-MM-dd";
				var columnDataField:String = column.dataField;
				if("d40104" == columnDataField) {
					var date_D40104:Date = vd401.d40104;
					var date_D40104_Text:String = dateTimeFormatter.format(date_D40104);
					return date_D40104_Text;
				} else if("d40108" == columnDataField) {
					var date_D40108:Date = vd401.d40108;
					var date_D40108_Text:String = dateTimeFormatter.format(date_D40108);
					return date_D40108_Text;
				}
				return null;
			}
			
			private function onOperationSuccess(event:RefreshParentWindowDataEvent):void
			{
				this.refresh();
			}
			
			private function onSelectionChange(event:GridSelectionEvent):void
			{
				this.vd401 = DataGrid(event.target).selectedItem as VD401;
			}
			
			private function deal():void
			{
				if(this.vd401 == null)
				{
					Alert.show("请选择要操作的行!", "系统提示");
					return;
				}
				if(this.vd401.d40106 == "1" || this.vd401.d40106 == "2" || this.vd401.d40106 == "5" || this.vd401.d40106 == "9")
				{
					var window:PrintHandleTitleWindow = new PrintHandleTitleWindow();
					window.owner = this;
					PopUpManager.addPopUp(window,this);
					var x:Number = (this.parentApplication.mdiCanvas.width - window.width) / 2;
					var y:Number = (this.parentApplication.mdiCanvas.height - window.height) / 2;
					window.move(x, y);
					
					window.vd401 = this.vd401;
				}else if(this.vd401.d40106 == "3" || this.vd401.d40106 == "4" || this.vd401.d40106 == "10")
				{
					var titleWindow:LossHandleTitleWindow = new LossHandleTitleWindow();
					titleWindow.owner = this;
					PopUpManager.addPopUp(titleWindow,this);
					var m:Number = (this.parentApplication.mdiCanvas.width - titleWindow.width) / 2;
					var n:Number = (this.parentApplication.mdiCanvas.height - titleWindow.height) / 2;
					titleWindow.move(m, n);
					
					titleWindow.vd401 = this.vd401;
				}
			}
			
			private function faultHandler(event:FaultEvent):void
			{
				var sessionException:SessionException = event.fault.rootCause as SessionException;
				var errorCode:String = "";
				try {
					errorCode = sessionException.errorCode;
					if(errorCode == SystemConstant.LOGIN_USER_INFO_IS_NULL) {
						Alert.show(sessionException.errorMessage, "系统提示");
						return;
					}
				} catch(error:Error) {
					Alert.show("系统异常", "系统提示");
				}
			}
		]]>
	</fx:Script>
