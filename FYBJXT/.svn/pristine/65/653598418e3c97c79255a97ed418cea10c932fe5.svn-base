			import mx.controls.DateField;
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			import mx.utils.StringUtil;
			
			import spark.events.GridSelectionEvent;
			private var systemUser:SystemUser ;
			private var e702Request:E702Request;
			private var e702Reponse:E702Response;
			private var e702:E702;
			[Bindable]
			private var ve702:Object;
			
			
			
			private function moduleCreationCompleteHandler(event:FlexEvent):void
			{
				//security();
				this.systemUser = this.parentApplication.systemUser;
				//检查读卡权限
				
			}
			
			private function onSelected(event:GridSelectionEvent):void
			{
				/* this.ve702 = DataGrid(event.target).selectedItem; */
			}
			
			
			/*----------获取查询条件数据---------*/
			private function initQueryParam():void
			{
				try
				{
					e702Request = new E702Request();
					var type:String = this.code.getLastSelectedInstitution();
					var code:String = this.code.getLastSelectedInstitutionCode();
					var field:Object=new Object();
					e702Request.institution = type == "10"?code:code.substring(0,Number(type));
					field.codeField="e702_71";
					if(CompMethod.getTimeSpace(timeStart,timeEnd))
						return;
					
					field.dateField="e702_73";
					e702Request.timeStr = DateField.stringToDate(this.timeStart.text,"YYYY-MM-DD");
					e702Request.timeEnd = DateField.stringToDate(this.timeEnd.text,"YYYY-MM-DD");
					
					e702Request.fieldMap=field;
					e702Request.e702=e702;
				}catch(error:Error){
					Alert.show("出错了"+error.getStackTrace());
					Alert.show("出错了"+error.message);
				}
			}
			
			private function query():void
			{
				if(CompMethod.getTimeSpace(this.timeStart,this.timeEnd))
					return;
			
				var institution:String = this.code.getInstitutionCode();
				/* var institution:String = this.code.getLastSelectedInstitutionCode();
				var institutionType:String = this.code.getLastSelectedInstitution();	
				var date_status:String=null;
				var hospital:String=this.systemUser.institution;
				var address_status:String=null;
				var address:String=null;
				institution=institutionType == "10"?institution:
				institution.substring(0,Number(institutionType)); */
				institution=institution.length <=6?institution:
					institution.substring(0,Number(6));
				//Alert.show(String(institution.length),"系统提示!");
				var timeStr:String=this.timeStart.text;
				var timeEnd:String=this.timeEnd.text;
				if(Number(timeEnd)<Number(timeStr))
				{
					Alert.show("开始时间不能大于结束时间!","系统提示!");
					return;
				}
				
		/*		if(institution.length < 6){
					Alert.show("请选择到区级或者县级!","系统提示!");
					return;
				}
			*/	
				
				var urlRequest:URLRequest = new URLRequest();
				var variables:URLVariables = new URLVariables();
				
				variables.institution=encodeURIComponent(institution);
				variables.timeStr=encodeURIComponent(timeStr);
				variables.timeEnd=encodeURIComponent(timeEnd);
				//Alert.show(institution, "系统提示");
				
				urlRequest.data=variables;
				urlRequest.method=URLRequestMethod.POST;
				urlRequest.url=this.parentApplication.contextRoot + 
					"/report_new/jsp/etbj/et/etybjsljcfgl.jsp";
				navigateToURL(urlRequest);
				//	var url:String = this.parentApplication.contextRoot + "/report_new/jsp/etbj/et/etybjsljcdjb.jsp?&institution="+
				//		institution+"&e70208="+e70208+"&timeStr="+timeStr+"&timeEnd="+timeEnd;
				//	Alert.show(institution, "系统提示");
				
			}
			
			
		]]>
	</fx:Script>
	<s:VGroup width="100%">
