<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark" 
		  xmlns:mx="library://ns.adobe.com/flex/mx" 
		  xmlns:component="com.xyw.sys.custom.component.*"
		  width="100%" height="100%" creationComplete="creationCompleteHandler(event)">
	<fx:Declarations>
		<s:RemoteObject id="sw304Service" destination="sw304Service" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="querySw304" result="querySw304Handler(event)"/>
			<s:method name="delSw304" result="delSw304Handler(event)"/>
		</s:RemoteObject>
	
	</fx:Declarations>
	<fx:Style>

		@namespace s "library://ns.adobe.com/flex/spark";
		s|DataGrid
		{
			borderAlpha:"0.3";
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDataGridSkin");
			alternatingRowColors:"[#FFFFFF,#EEEEEE]"; 
		}
		
		s|DropDownList
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDropDownListSkin");
			selectionColor:#DDDDDD;
			rollOverColor:#EEEEEE;	
		}
		s|Button
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomButtonSkin");
		} 
		s|Label
		{
			fontSize:12;
		}
		.myLabel
		{
			fontSize:12px;
			paddingTop:4px;
		}
		.pf10
		{
			paddingLeft:10px;
		} 
	</fx:Style>
	<fx:Script>
		<![CDATA[
			import com.xyw.module.swjc.model.Sw304;
			import com.xyw.module.swjc.model.Sw304Request;
			import com.xyw.sys.custom.component.CompMethod;
			import com.xyw.sys.model.ComboBoxDataRequest;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.controls.DateField;
			import mx.events.FlexEvent;
			import mx.rpc.events.ResultEvent;
			import mx.utils.StringUtil;
			
			import spark.events.GridSelectionEvent;
			private var sw304:Sw304;
			private var vSw304:Object;
			private var sw304Request:Sw304Request;
			private var systemUser:SystemUser =null;
			private var comboBoxDataRequest:ComboBoxDataRequest;
			private function creationCompleteHandler(event:FlexEvent):void
			{
				this.systemUser = this.parentApplication.systemUser;
			}
			
			private function onSelected(event:GridSelectionEvent):void
			{
				this.vSw304= DataGrid(event.target).selectedItem;
			}
			/**
			 * 
			 */
			private function getTextVal():Boolean
			{
				sw304=new Sw304();
				var status:Boolean=false;
				sw304.sw30404=StringUtil.trim(SW304_04.text);
				sw304.sw30405=StringUtil.trim(SW304_05.text);
				sw304.sw30407=StringUtil.trim(SW304_07.text);
				sw304.sw30410=StringUtil.trim(SW304_10.text);
				if(sw304.sw30404||sw304.sw30405||
					sw304.sw30407||sw304.sw30410)
					status=true;
				
				return status;
			}
			
			
			
			/**
			 *
			 */
			private function getTimeSql():String
			{
				 var dateField:String=CompMethod.getRadioButtonValue([dateGroup]);
				 var timeSql:String=" and to_char("+dateField+",'yyyy-mm-dd')>='"+
					 timeStart.text+"' and to_char("+dateField+",'yyyy-mm-dd')<='"
					 +timeEnd.text+"'";
				 return timeSql;
			}
			
			
			
			private function initQueryParam():void
			{
				
				sw304Request =new Sw304Request();
				try{	
					
					if(!getTextVal())
					{
						if(CompMethod.getTimeSpace(timeStart.text,timeEnd.text))
						{
							Alert.show("开始时间不能大于结束时间","系统提示");
							return;
						}
						sw304Request.suffixSql=getTimeSql();
					}
					var type:String = this.SW304_59.getLastSelectedInstitution();
					var sw30459:String = this.SW304_59.getLastSelectedInstitutionCode();
					sw304.sw30459 = (type == "10")?sw30459:sw30459.substring(0,Number(type));
					sw304Request.sw304=sw304;
				}catch(error:Error) {		
					
				}
			}
			
			/**
			 *
			 */
			private function query(currentPageIndex:int,pageSize:int):void
			{
				sw304Request= new Sw304Request();
				this.initQueryParam();
				sw304Request.parameterPageindex=currentPageIndex;
				sw304Request.parameterPagesize=pageSize;
				this.sw304Service.querySw304(sw304Request);
			}
			
			public function refresh():void
			{
				query(this.pagerBar.currentPageIndex,20);
			}
			
			private function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				query(currentPageIndex,pageSize);	
			}		
			
			private function queryVsw304(event:MouseEvent):void
			{
				query(1,20);
			}
			
			private function querySw304Handler(event:ResultEvent):void{
				var sw304Response:Object = event.result;
				var vSw304s:ArrayCollection =sw304Response.vSw304s;
				var rowCount:Number = sw304Response.rowCount;
				this.pagerBar.pageSize = 20;
				this.pagerBar.dataGrid = this.certificateDataGrid;  
				this.pagerBar.rowCount = rowCount;
				this.pagerBar.resultData = vSw304s;
				this.pagerBar.dataBind();
				this.pagerBar.pagerFunction = pagerFunction;
				if(!sw304Response.state){
					Alert.show(sw304Response.errorMessage,"系统提示");
				}
				if(rowCount > 0) {
					this.pagerBar.enabled = true;
				}else
					Alert.show("暂无数据");
			}
			/**
			 *
			 */
			private function operationSw304(method:Function,del:Boolean=false):void
			{
				if(!vSw304)
				{
					Alert.show("请选择一条信息","系统提示");
					return;
				}
				if(del)
					CompMethod.delConfirm(method);
				else
					method();
			}
			
			/**
			 *
			 */
			private function updateSw304():void
			{
				var window:title = new title();
				CompMethod.popUpTitleWindow(window,this,true);
				window.creationCompleteHandler(this.vSw304);
			}
			
			/**
			 *
			 */
			private function delSw304():void
			{
				this.sw304Service.delSw304(vSw304.sw30401);
				
			}
			
			/**
			 *
			 */
			private function delSw304Handler(event:ResultEvent):void
			{
				var sw304Response:Object = event.result;
				if(sw304Response.state){
					this.refresh();
					Alert.show("删除成功", "系统提示");
				} else {
					Alert.show(sw304Response.errorMessage, "系统提示");
				}
			}
			
		]]>
	</fx:Script>
	<s:Scroller width="1200" height="100%" horizontalScrollPolicy="auto" verticalScrollPolicy="auto">
		<s:VGroup>
			<mx:TabNavigator id="tab" width="1200">
				<s:NavigatorContent width="100%" label="综合查询" buttonMode="true">
					<s:VGroup>
						<s:HGroup width="100%" paddingBottom="0" paddingLeft="10" paddingRight="10"
								  verticalAlign="middle">
							<s:Label text="录入单位"/>
							<component:InstitutionComboBox id="SW304_59" width="896" villageVisible="true" buttonMode="true"/>
						</s:HGroup>
						
						
						<s:HGroup width="100%" paddingBottom="5" paddingLeft="10" paddingRight="10"
								  verticalAlign="middle" id="dateGroup">
							<s:RadioButton buttonMode="true" label="录入时间" groupName="dateGroup" value="sw304_58"  selected="true" />
							<s:RadioButton buttonMode="true" label="分娩时间" groupName="dateGroup" value="sw304_23"  />
							<s:RadioButton buttonMode="true" label="死亡时间" groupName="dateGroup" value="sw304_24"/>
							<component:CustomRangeDateField  id="timeStart" isSelectFirst="true" width="130"/>
							<s:Label text="至"/>
							<component:CustomRangeDateField  id="timeEnd" isSelectNow="true" width="130"/>
							
						</s:HGroup>
						
						<s:HGroup width="100%" height="100%" paddingLeft="10"  paddingBottom="5" verticalAlign="middle">
							<s:Label text="孕产妇姓名"/>
							<s:TextInput id="SW304_05" width="130" />
							<s:Label paddingLeft="15" text="孕产妇身份证号"/>
							<s:TextInput id="SW304_07" width="179" />
							<s:Label paddingLeft="15" text="家属联系方式"/>
							<s:TextInput id="SW304_10" width="130" />
							<s:Label paddingLeft="15" text="保健卡号"/>
							<s:TextInput id="SW304_04" width="164" />
							
						</s:HGroup>  
						<s:HGroup width="100%" height="100%" paddingLeft="10"  paddingBottom="5" verticalAlign="middle">
							<s:Button click="queryVsw304(event)"  label="查询"/>
							<s:Button click="operationSw304(updateSw304)"  label="修改"/>
							<s:Button click="operationSw304(delSw304,true)" label="删除"/>
						</s:HGroup>  
						
					</s:VGroup>
				</s:NavigatorContent>
			</mx:TabNavigator>
			<s:DataGrid id="certificateDataGrid" width="100%" height="340"
						alternatingRowColors="[#FFFFFF,#EEEEEE]" borderAlpha="0.3" editable="false"
						rowHeight="23" skinClass="com.xyw.sys.custom.skin.CustomDataGridSkin"
						selectionChange="onSelected(event)">
				<s:columns>     
					<s:ArrayList>
						<s:GridColumn width="40" editable="false" headerText="序号"
									  itemRenderer="com.xyw.sys.custom.itemrenderer.CustomGridColumnItemRenderer"/>
						<s:GridColumn width="140" dataField="sw30405" headerText="母亲姓名"/>
						<s:GridColumn width="117" dataField="sw30407" headerText="证件号码"/>
						<s:GridColumn width="125" dataField="sw30410" headerText="家属联系方式"/>
						<s:GridColumn width="100" dataField="sw30413zh" headerText="户籍"/>
						<s:GridColumn width="100" dataField="sw30414zh" headerText="计划内外"/>
						<s:GridColumn width="100" dataField="sw30419zh" headerText="居住地区"/>
						<s:GridColumn width="100" dataField="sw30430zh" headerText="新法接生"/>
						<s:GridColumn width="100" dataField="sw30432zh" headerText="产前检查"/>
						<s:GridColumn width="100" dataField="sw30458" headerText="录入时间" labelFunction="CompMethod.setStrDate"/>
						<s:GridColumn width="200" dataField="sw30459zh" headerText="录入单位"/>
					</s:ArrayList>
				</s:columns>
			</s:DataGrid> 
			<component:PagerBar id="pagerBar" enabled="false" isExcel="false" isExcel2="false"
								isPrinter="false"/>
		</s:VGroup>
	</s:Scroller>
</s:Module>
