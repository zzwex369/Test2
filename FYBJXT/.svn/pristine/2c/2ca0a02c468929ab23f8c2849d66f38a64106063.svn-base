<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009"
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  xmlns:mx="library://ns.adobe.com/flex/mx"
		  xmlns:component="com.xyw.sys.custom.component.*"
		  width="100%" height="100%" creationComplete="moduleCreationComplete()">
	<fx:Declarations>
		<s:RemoteObject id="pregnancyDurService" destination="pregnancyDurService"
						endpoint="{this.parentApplication.contextRoot}/messagebroker/amf"
						showBusyCursor="true">
			<s:method name="saveF305" result="saveF305Handler(event)"/>
			<s:method name="queryF305" result="queryF305Handler(event)"/>
		</s:RemoteObject>
		<s:RemoteObject id="systemService" destination="systemService"
						endpoint="{this.parentApplication.contextRoot}/messagebroker/amf"
						showBusyCursor="true">
			<s:method name="getComboBoxData" result="getComboBoxDataHandler(event)"/>
		</s:RemoteObject>
	</fx:Declarations>
	
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		mx|GridItem
		{
			horizontalAlign:left;
			verticalAlign:middle;
		}
		
		s|TextInput
		{
			fontFamily:微软雅黑;
		}
		s|Button
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomButtonSkin");
		}
		s|DropDownList
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDropDownListSkin");
			selectionColor:#DDDDDD;
			rollOverColor:#EEEEEE;	
		}
		.must {
			color:red;
			fontSize:20px;
			fontWeight:bold;
			paddingTop:5px;
		}
	</fx:Style>
	<fx:Script>
		<![CDATA[
			import com.xyw.module.fnbj.model.F305;
			import com.xyw.module.fnbj.model.F305Request;
			import com.xyw.module.fnbj.model.F305Response;
			import com.xyw.module.fnbj.model.VF305;
			import com.xyw.sys.model.ComboBoxDataRequest;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			import mx.utils.StringUtil;
			
			private var f305:F305 =new F305();
			private var f305Request:F305Request;
			public var systemUser:SystemUser =null;
			public var array:Array = new Array();
			public var vf305s:ArrayCollection;
			private var comboBoxDataRequest:ComboBoxDataRequest;
			
			public function moduleCreationComplete():void
			{
				this.systemUser =this.parentApplication.systemUser;
				//检查读卡权限
				if(this.systemUser.duka =="1"){
					this.duka1.enabled =true;
				}
				this.F301_31.selectedDate = new Date();
				this.F305_03.selectedDate =new Date();
				this.F305_04.selectedDate =new Date();
				this.initializeComboBox();
			}
			//初始化数据，加载下拉列表值
			private function initializeComboBox():void
			{
				comboBoxDataRequest =new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt =true;
				comboBoxDataRequest.flag ="D101";
				comboBoxDataRequest.sql ="select t.d101_01, t.d101_02 from D101 t where t.d101_01 = '" + this.systemUser.institutionCode + "' or t.d101_11 ='" + this.systemUser.institutionCode +"'";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
				
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.flag = "Z301_01";
				comboBoxDataRequest.sql = "select * from Z301_01 t";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
				
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.flag = "S301_06";
				comboBoxDataRequest.sql = "select * from S301_06 t";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
				
			}
			private function getDroupDownListSelectedIndex(arrayCollection:ArrayCollection,defaultValue:String):int{
				var len:int =arrayCollection.length;
				var i:uint =0;
				var index:int =0;
				while(i<len){
					var comboBoxDataP:Object =arrayCollection.getItemAt(i);
					if(comboBoxDataP.data ==defaultValue){
						index =arrayCollection.getItemIndex(comboBoxDataP);
						break;
					}
					i++;
				}
				return index;
			}
			/*-----------------返回数据放到赋值到下拉菜单-----------------*/
			private function getComboBoxDataHandler(event:ResultEvent):void
			{
				var comboBoxDataResponse:Object =event.result;
				var flag:String =comboBoxDataResponse.flag;
				var comboBoxDataList:ArrayCollection =comboBoxDataResponse.comboBoxDataList;
				
				if(flag =="D101"){
					var f303_15Index:int =this.getDroupDownListSelectedIndex(comboBoxDataList,this.systemUser.institutionCode);
					this.F305_08.dataProvider =comboBoxDataList;
					this.F305_08.selectedIndex =f303_15Index;
				}else if(flag == "S301_06"){
					this.F301_04.dataProvider = comboBoxDataList;
					this.F301_04.selectedIndex = 1;
				}else if(flag == "Z301_01"){
					this.F301_12.dataProvider = comboBoxDataList;
					this.F301_12.selectedIndex = 2;
				}
			}
			protected function readCard_B(event:MouseEvent):void
			{
				try
				{
					var str:String = ExternalInterface.call("parent.readCard");
					if(str != null && str.length != 0){
						var array:Array = str.split(",");
						var sex:String = array[1];//性别
						if(sex=="女"){
							this.f30102.text = array[0];//姓名
							this.f30105.text = array[5];//身份证号
						}else{
							Alert.show("请读母亲信息！","系统提示");
						}
					}else{
						Alert.show("读卡失败！");
					}
				} 
				catch(error:Error) 
				{
					Alert.show("读卡失败！");
				}
			}
			//读卡(母亲)
			protected function readCard_mother(event:MouseEvent):void
			{
				try
				{
					var str:String = ExternalInterface.call("parent.readCard");
					if(str != null && str.length != 0){
						var array:Array = str.split(",");
						var sex:String = array[1];//性别
						if(sex=="女"){
							this.F301_02.text = array[0];//姓名
							this.F301_05.text = array[5];//身份证号
							this.F301_06.text = array[3];//出生日期
							
						}else{
							Alert.show("请读母亲信息！","系统提示");
						}
					}else{
						Alert.show("读卡失败！");
					}
				} 
				catch(error:Error) 
				{
					Alert.show("读卡失败！");
				}
			}
			private function queryfnwcdj():void
			{
				if((this.f30102.text ==""|| this.f30105.text =="") && (this.f30113.text =="")){
					Alert.show("请输入孕产妇姓名+者身份证号或者手机号","系统提示");
					return;
				}
				
				f305 = new F305();
				f305Request = new F305Request;
				f305Request.f30102 = this.f30102.text;
				f305Request.f30105 = this.f30105.text;
				f305Request.f30113 = this.f30113.text;
				f305Request.parameterPageindex = 1;
				f305Request.parameterPagesize = 20;
				this.pregnancyDurService.queryF305(f305Request);
			}
			private function setMontherBirthday(event:Event):void
			{
				if(this.F301_04.selectedItem.data == 1){
					var cardId:String = this.F301_05.text;
					if(cardId.length>=16){
						cardId=cardId.substring(6,14);
						this.F301_06.text = cardId.substring(0,4) + "-" + cardId.substring(4,6) + "-" + cardId.substring(6,8);
					}else{
						cardId=cardId.substring(6,12);
						this.F301_06.text = "19" + cardId.substring(0,2) + "-" + cardId.substring(2,4) + "-" + cardId.substring(4,6);
					}
				}
			}
			//验证信息
			public function validatePerinata():int
			{
				if(this.F301_02.text == null){
					return 1;
				}else if(this.F301_05.text == null){
					return 1;
				}else if(this.F301_04.selectedIndex == 0){
					return 1;
				}
				return 0;
			}
			public function queryF305Handler(event:ResultEvent):void
			{
				var f305Response:F305Response = event.result as F305Response;
				var rowCount:Number = f305Response.rowCount;
				var listVF305:ArrayCollection = f305Response.vf305s;
				if(listVF305.length != 0)
				{
					var vf305:VF305 = listVF305.getItemAt(0) as VF305;
					this.F301_02.text = vf305.f30102;
					var f30104dataProvide:ArrayCollection =ArrayCollection(this.F301_04.dataProvider);
					var f30104Index:int =this.getDroupDownListSelectedIndex(f30104dataProvide,vf305.f30104);
					this.F301_04.selectedIndex =f30104Index;
					this.F301_05.text = vf305.f30105;
					var f30112dataProvide:ArrayCollection =ArrayCollection(this.F301_12.dataProvider);
					var f30112Index:int =this.getDroupDownListSelectedIndex(f30112dataProvide,vf305.f30112);
					this.F301_12.selectedIndex =f30112Index;
					this.F301_17.text = vf305.f30117;//孕产妇档案编号(济源)只在页面上显示一下，不保存到数据库
					this.F301_31.text = vf305.f30131.substring(0,10);
					this.F301_06.text = vf305.f30106.substring(0,10);
					this.f305.f30502 = vf305.f30502;
					this.saF305.enabled =true;
				}
			}
			public function validate():void
			{
				if(this.F301_02.text == ""){
					Alert.show("请输入孕产妇姓名！","系统提示");
					return;
				}
				if(this.F301_04.selectedItem.data ==0){
					Alert.show("请选择证件类型！","系统提示");
					return;
				}
				if(this.F301_05.text ==""){
					Alert.show("请输入证件号码！","系统提示");
					return;
				}
				if(this.F301_17.text ==""){
					Alert.show("请输入建册编号！","系统提示");
					return;
				}
				if(this.F301_06.text ==""){
					Alert.show("请输入出生日期！","系统提示");
					return;
				}
				if(this.F301_12.selectedItem.data ==0){
					Alert.show("请选择婚姻状况","系统提示");
					return;
				}
				if(this.F301_31.text ==""){
					Alert.show("请输入建册日期！","系统提示");
					return;
				}
				if(this.F305_03.text ==""){
					Alert.show("请选择随访时间！","系统提示");
					return;
				}
				if(this.F305_05.text ==""){
					Alert.show("请输入登记人！","系统提示");
					return;
				}
				if(this.F305_08.selectedItem.data ==0){
					Alert.show("请选择登记单位！","系统提示");
					return;
				}
				if(this.F305_07.text.length>200){
					Alert.show("随访内容可能过长！","系统提示");
					return;
				}
				this.saveF305();
			}
			public function saveF305():void
			{
				if(this.F305_03.text ==null){
					this.f305.f30503 =null;
				}else{
					this.f305.f30503 = DateField.stringToDate(this.F305_03.text,'YYYY-MM-DD');
				}
				if(this.F305_04.text ==null){
					this.f305.f30504 =null;
				}else{
					this.f305.f30504 = DateField.stringToDate(this.F305_04.text,'YYYY-MM-DD');
				}
				this.f305.f30505 = this.F305_05.text;
				this.f305.f30506 = this.F305_06.text;
				this.f305.f30507 = this.F305_07.text;
				this.f305.f30508 = this.F305_08.selectedItem.data;
				this.f305.f30509 = this.F305_09.text;
				this.f305.f30510 = this.F305_10.text;
				this.f305.f30511 = this.F305_11.text;
				if(this.F305_12.text ==null){
					this.f305.f30512 =null;
				}else{
					this.f305.f30512 = DateField.stringToDate(this.F305_12.text,'YYYY-MM-DD');
				}
				this.f305.f30513 = this.F305_13.text;
				this.pregnancyDurService.saveF305(f305);
			}
			public function saveF305Handler(event:ResultEvent):void
			{
				var f305Response:Object =event.result;
				if(!f305Response.state){
					Alert.show(f305Response.errorMessage,"系统提示");
					return;
				}
				Alert.show("保存成功！ ","系统提示");
				this.saF305.enabled =false;
				removeRecord();
				//this.saF305.addEventListener(FlexEvent.CHANGING,openSave); 
			}
			private function removeRecord():void{
				this.F301_02.text ="";
				this.F301_04.selectedIndex =this.getDroupDownListSelectedIndex(ArrayCollection(this.F301_04.dataProvider),"1");
				this.F301_05.text ="";
				this.F301_12.selectedIndex =this.getDroupDownListSelectedIndex(ArrayCollection(this.F301_12.dataProvider),"2");
				this.F301_06.text =null;
				this.F301_17.text ="";
				this.F301_31.selectedDate =new Date();
				this.F305_03.selectedDate =new Date();
				this.F305_04.selectedDate =new Date();
				this.F305_05.text="";
				this.F305_06.text="";
				this.F305_07.text="";
				this.F305_08.selectedIndex=this.getDroupDownListSelectedIndex(ArrayCollection(this.F305_08.dataProvider),this.systemUser.institutionCode);
				this.F305_09.text="";
				this.F305_10.text="";
				this.F305_11.text="";
				this.F305_12.text=null;
				this.F305_13.text="";
				this.f30102.text="";
				this.f30105.text="";
				this.f30113.text="";
			}
			private function openSave(event:Event):void{
				this.saF305.enabled =true;
			} 
		]]>
	</fx:Script>
	<s:Scroller x="-6" y="1" width="100%" height="100%" horizontalScrollPolicy="auto" verticalScrollPolicy="auto">
		<s:VGroup paddingBottom="20" paddingLeft="10" paddingRight="10" paddingTop="10">
			<mx:TabNavigator width="1185" chromeColor="#ffffff" creationPolicy="all">
				<s:NavigatorContent width="100%" label="孕妇查询">			
					<s:VGroup paddingBottom="2" paddingLeft="10" paddingRight="10">	
						<s:HGroup width="100%" height="100%" paddingBottom="5" verticalAlign="middle">
							<s:Label styleName="mustQuery" text="请先查询孕妇档案信息"/>
							<s:HGroup id="fmload" visible="true" verticalAlign="middle">
								<s:Label paddingLeft="8" text="请输入孕妇姓名"/><s:TextInput id="f30102"/>
								<s:Label text="证件号码"/><s:TextInput id="f30105" width="140"/>
								<s:Label text="手机号码"/><s:TextInput id="f30113" width="140"/>
								<s:Button label="查询" click="queryfnwcdj()"/>	
								<s:Button id="duka1" width="60" label="读卡" click="readCard_B(event)" enabled="false"/>
							</s:HGroup>
						</s:HGroup>
					</s:VGroup>
				</s:NavigatorContent>
			</mx:TabNavigator>
			<mx:TabNavigator width="1185" chromeColor="#ffffff" creationPolicy="all">
				<s:NavigatorContent width="100%" label="基本情況">	
					<mx:Grid paddingBottom="10" paddingLeft="8">
						<mx:GridRow>
							<mx:GridItem>
								<s:Label text="孕 妇  姓 名"/>	
								<s:TextInput id="F301_02" width="130" enabled="false"/>	
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="5" text="证件类型" />
								<s:DropDownList id="F301_04" width="130" enabled="false"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="5" text="证件号码"/>
								<s:TextInput id="F301_05" width="140" enabled="false"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label text="建册编号" paddingLeft="5"/>	
								<s:TextInput id="F301_17" width="130" enabled="false"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="5" text="出 生 日期" paddingRight="5"/>
								<mx:DateField  id="F301_06" width="130" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
											   monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
											   formatString="YYYY-MM-DD" yearNavigationEnabled="true" enabled="false"/>
								<s:Label text="*" styleName="must"/>
								<s:Button id="duka2" label="读卡" click="readCard_mother(event)" enabled="false"/>
							</mx:GridItem>
						</mx:GridRow>
						<mx:GridRow>
							<mx:GridItem>
								<s:Label text="婚 姻  状 况"/>
								<s:DropDownList id="F301_12" width="130" enabled="false"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="5" text="建册日期" enabled="false"/>
								<mx:DateField  id="F301_31" width="130" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
											   monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
											   formatString="YYYY-MM-DD" yearNavigationEnabled="true" enabled="false"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="5" text="生育卡号"/>
								<s:TextInput id="F305_11" width="140"/>
							</mx:GridItem>	
							<mx:GridItem>
								<s:Label paddingLeft="5" text="预产日期"/>
								<mx:DateField  id="F305_12" width="130" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
											   monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
											   formatString="YYYY-MM-DD" yearNavigationEnabled="true"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="5" text="高 危 评分" paddingRight="5"/>
								<s:TextInput id="F305_09" width="130" restrict="0-9"/>
							</mx:GridItem>
						</mx:GridRow>
						<mx:GridRow>
							<mx:GridItem>
								<s:Label text="随 访  时 间"/>
								<mx:DateField  id="F305_03" width="130" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
											   monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
											   formatString="YYYY-MM-DD" yearNavigationEnabled="true"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem colSpan="5">
								<s:Label paddingLeft="4" text="高危原因"/>
								<s:TextInput id="F305_10" width="84%"/>
							</mx:GridItem>
						</mx:GridRow>
					</mx:Grid>
				</s:NavigatorContent>
			</mx:TabNavigator>
			<mx:TabNavigator width="1185" chromeColor="#ffffff" creationPolicy="all">
				<s:NavigatorContent width="100%" label="随访记录">	
					<mx:Grid paddingBottom="10" paddingLeft="8">
						<mx:GridRow>
							<mx:GridItem>
								<s:Label text="登记编号"/>
								<s:TextInput id="F305_13" width="130"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="15" text="登记时间"/>
								<mx:DateField  id="F305_04" width="130" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
											   monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
											   formatString="YYYY-MM-DD" yearNavigationEnabled="true"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="15" text="登  记 人 "/>
								<s:TextInput id="F305_05" width="140"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="15" text="复  核 人 "/>
								<s:TextInput id="F305_06" width="130"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="15" text="登记单位"/>
								<s:DropDownList id="F305_08" width="130" enabled="false"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
						</mx:GridRow>
						<mx:GridRow>
							<mx:GridItem>
								<s:Label text="随访内容"/>
								<s:TextInput visible="false" width="130"/>
							</mx:GridItem>
						</mx:GridRow>
						<mx:GridRow>
							<mx:GridItem colSpan="6">
								<s:TextArea id="F305_07" width="1140" height="200"/>
							</mx:GridItem>
						</mx:GridRow>
						<mx:GridRow>
							<mx:GridItem colSpan="4">
								<s:TextInput visible="false"/>
							</mx:GridItem>
							<mx:GridItem paddingLeft="180">
								<s:Button id="saF305" label="确定" click="validate()" enabled="false"/>
							</mx:GridItem>
						</mx:GridRow>
					</mx:Grid>
				</s:NavigatorContent>
			</mx:TabNavigator>
		</s:VGroup>
	</s:Scroller>
</s:Module>
