package com.xyw.sys.util;


public class StringUtil {
	public static boolean isBlankString(String str){
		boolean flag = false;
		if(str == null) {
			flag = true;
			return flag;
		}
		if(str.trim().equals("")) {
			flag = true;
			return flag;
		}
		return flag;
	}
	
	public static int parseInt(String arg) {
		if (arg != null) {
			arg = arg.trim();
		}
		try {
			return Integer.parseInt(arg);
		} catch (Exception e) {
			return 0;
		}

	}
}
