<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  creationComplete="moduleCreationCompleteHandler(event)"
		  xmlns:mx="library://ns.adobe.com/flex/mx" 
		  width="100%" height="100%" xmlns:component="com.xyw.sys.custom.component.*">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		mx|GridItem
		{
			verticalAlign:middle;
		}
		s|Button
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomButtonSkin");
		}
		s|DropDownList
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDropDownListSkin");
			selectionColor:#DDDDDD;
			rollOverColor:#EEEEEE;	
		}
	</fx:Style>
	
	<fx:Script>
		<![CDATA[
			import com.xyw.sys.constant.SystemConstant;
			import com.xyw.sys.model.ComboBoxData;
			import com.xyw.sys.model.ComboBoxDataRequest;
			import com.xyw.sys.model.ComboBoxDataResponse;
			import com.xyw.sys.model.SessionException;
			import com.xyw.sys.model.SystemUser;
			
			import flash.net.navigateToURL;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.formatters.DateFormatter;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			public var systemUser:SystemUser = null;
			private var code:String;
			protected function moduleCreationCompleteHandler(event:FlexEvent):void
			{
				this.systemUser = this.parentApplication.systemUser;
				institution.town.enabled = false;
				institution.country.enabled = false;
			}
			
			
			private function query():void
			{
				var code:String = this.institution.getAreaCode();	
				var _dateStr:Date=DateField.stringToDate(date_satrt.text,'YYYY-MM-DD');
				var _dateEnd:Date=DateField.stringToDate(date_end.text,'YYYY-MM-DD');
				
				if(this.date_satrt.text == "")
				{
					Alert.show("请选择开始时间!","系统提示!");
					return;
				}
				if(this.date_end.text == "")
				{
					Alert.show("请选择结束时间!","系统提示!");
					return;
				}
				if(Number(_dateEnd)<Number(_dateStr))
				{
					Alert.show("开始时间不能大于结束时间!","系统提示!");
					return;
				}
				
				if(code.substr(0,4)!="4113")
				{
					Alert.show("请选择到南阳市地区!","系统提示!");
					return;
				}
				if(code.length<4)
				{
					Alert.show("请选择到市级或者县级!","系统提示!");
					return;
				}
				var dateStr:String = this.date_satrt.text;
				var dateEnd:String = this.date_end.text;
				var date_Str:String = dateStr.substring(0,4);
				var date_End:String = dateEnd.substring(0,4);
				if(date_Str!=date_End){
					Alert.show("请选择到同一年中","系统提示!");
					return;
				}
				//Alert.show(date_Str,"系统提示!");
				
				
				var urlRequest:URLRequest = new URLRequest();
				var variables:URLVariables = new URLVariables();
				
				variables.code=encodeURIComponent(code);
				variables.dateStr=encodeURIComponent(dateStr);
				variables.dateEnd=encodeURIComponent(dateEnd);
				
				urlRequest.data=variables;
				urlRequest.method=URLRequestMethod.POST;
				urlRequest.url=this.parentApplication.contextRoot + 
					"/etdqsltjb_new/etbj/etsl/etdqsltjb.jsp?";
				navigateToURL(urlRequest);
				
		/*		var url:String = this.parentApplication.contextRoot + "/report_new/jsp/etbj/et/etdqsltjb.jsp?addType="+getRadioButtonValue(address)
					+"&code="+code+"&dateStr="+dateStr+"&dateEnd="+dateEnd;
				navigateToURL(new URLRequest(url), null);*/
			}
			
			private function radiobutton_clickHandler(label:Object,event:MouseEvent,status:String):void
			{
				label.text=event.target.label;
				
			}
			
			private function getRadioButtonValue(id:Object):String
			{
				var radioButton:RadioButton;
				var value:String;
				for(var i:int =0;i<id.numElements;i++)
				{
					radioButton=id.getElementAt(i) as RadioButton;
					if(radioButton.selected)
					{
						value=radioButton.value.toString();
						break;
					}
				}
				return value;
			}
		]]>
	</fx:Script>
	
	<s:VGroup>
		<mx:TabNavigator  width="1200" chromeColor="#ffffff" creationPolicy="all">
			<s:NavigatorContent  label="儿童地区视力统计表" width="100%">
				<s:VGroup paddingBottom="10" paddingLeft="10" paddingRight="10">
					<mx:Grid width="100%">
						
						<mx:GridRow>
							<mx:GridItem>
								<s:Label  text="地区查询"/>
								<s:HGroup width="100%" height="100%" gap="5" paddingLeft="10" id="address">
									<s:RadioButton buttonMode="true" label="所属医院" value="presentAdd" groupName="address" click="radiobutton_clickHandler(addr,event,'1')" selected="true"/>
									<s:RadioButton buttonMode="true" label="现在住址" value="presentAdd" groupName="address" click="radiobutton_clickHandler(addr,event,'2')"/>
									<s:RadioButton buttonMode="true" label="户口地址"  value="permanentAdd" groupName="address" click="radiobutton_clickHandler(addr,event,'3')"/>
								</s:HGroup>  
								
							</mx:GridItem>
						</mx:GridRow>		
						<mx:GridRow>
							<mx:GridItem>
								
								<s:HGroup width="100%" height="100%">
									<s:Label width="57" text="所属地区" id="addr" paddingTop="5"/>
									<component:AreaComboBoxVillageAuto id="institution" width="844" buttonMode="true" table="D201_MS" 
																	   areaCode="{this.parentApplication.systemUser.areaCode}"/>
								</s:HGroup>
							</mx:GridItem>
						</mx:GridRow>		
						
						<mx:GridRow>
							<mx:GridItem>
								<s:Label text="录入时间" width="75"/>
								<mx:DateField yearNavigationEnabled="true" id="date_satrt" width="120" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
											  monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
											  formatString="YYYY-MM-DD" text="{DateField.dateToString(new Date(),'YYYY-MM-01')}"/>
								<s:Label text="至"/>
								<mx:DateField yearNavigationEnabled="true" id="date_end" width="120" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
											  monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
											  formatString="YYYY-MM-DD" text="{DateField.dateToString(new Date(),'YYYY-MM-DD')}"/>
								<s:Button label="查询" id="loadBirth" click="query()"/>
							</mx:GridItem>
						</mx:GridRow>
					</mx:Grid>
				</s:VGroup>
			</s:NavigatorContent>
		</mx:TabNavigator>
	</s:VGroup>
</s:Module>