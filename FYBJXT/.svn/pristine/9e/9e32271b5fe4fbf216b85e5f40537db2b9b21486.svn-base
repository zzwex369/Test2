						<s:Label text="母亲姓名"/><s:TextInput id="d301_11"/>
						<s:Label text="母亲身份证号"/><s:TextInput id="d301_12" width="140"/>
						<s:Button label="读卡" id="duka1" enabled="false" width="60" click="readCard_mother(event)"/>
					</s:HGroup>
					<s:HGroup width="100%" paddingBottom="0" paddingLeft="10" paddingRight="10" verticalAlign="middle">
						<s:Label text="父亲姓名"/><s:TextInput id="d301_16"/>
						<s:Label text="父亲身份证号"/><s:TextInput id="d301_17" width="140"/>
						<s:Button label="读卡" id="duka2" enabled="false" width="60" click="readCard_father(event)"/>
					</s:HGroup>
					<s:HGroup width="100%" paddingBottom="10" paddingLeft="10" paddingRight="10" verticalAlign="middle">
						<s:Label text="婴儿姓名"/><s:TextInput id="d301_02"/>
						<s:Label text="出生证号"/><s:TextInput id="d301_10"/>
						<s:Button label="查询" click="query(event)"/>
						<s:Button label="打印" click="printCertificate(event)"/>
						<s:Button label="专用打印" id="dayin2" enabled="false" click="printCertificate2(event)"/>
					</s:HGroup>
				</s:VGroup>
			</s:NavigatorContent>
		</mx:TabNavigator>
