					return;
				}
				if(this.E303_13.selectedItem.data == 0){
					Alert.show("请输入检查机构!","系统提示");
					return;
				}
				if(StringUtil.trim(this.E303_15.selectedItem.data) == "6"&&StringUtil.trim(this.E303_20.text) == ""){
					Alert.show("请输入转归其他的内容!","系统提示");
					return;
				}
				
				this.savePerinata();
			}
			
