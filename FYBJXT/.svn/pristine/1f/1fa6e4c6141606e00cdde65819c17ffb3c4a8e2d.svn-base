				this.e303.e30320 = this.E303_20.text;
				this.childrenService.saveE303(e303);
			}
			public function saveE303Handler(event:ResultEvent):void
			{
				var E303Response:Object =event.result;
				if(!E303Response.state){
					Alert.show(E303Response.errorMessage,"系统提示");
					return;
				}
				Alert.show("保存成功！ ","系统提示");
				this.clean();
				this.saveE303.enabled =false;
				this.E303_03.addEventListener(FlexEvent.CHANGING,openSave);
			}
			
			public function clean():void{
				
				this.E303_03.text="";
				this.E303_04.selectedIndex=1;
				this.E303_05.text="";
				this.E303_06.text="";
				this.E303_07.text="";
				this.E303_08.text="";
				this.E303_09.text="";
				this.E303_10.text="";
				this.E303_11.text="";
				this.E303_12.text="";
				this.E303_13.selectedIndex=0;
				this.E303_14.text="";
				this.E303_15.selectedIndex=1;
				this.E303_17.text="";
				this.E303_18.text="";
				this.E303_19.text="";
				this.E303_20.text="";
			}		
			private function openSave(event:Event):void{
				this.saveE303.enabled =true;
			} 
