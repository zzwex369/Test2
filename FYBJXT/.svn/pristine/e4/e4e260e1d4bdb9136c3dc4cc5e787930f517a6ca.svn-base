<?xml version="1.0" encoding="utf-8"?>
<s:Module xmlns:fx="http://ns.adobe.com/mxml/2009" 
		  xmlns:s="library://ns.adobe.com/flex/spark"
		  creationComplete="moduleCreationCompleteHandler(event)"
		  xmlns:mx="library://ns.adobe.com/flex/mx" 
		  width="100%" height="100%" xmlns:component="com.xyw.sys.custom.component.*">
	<fx:Declarations>
		<!-- Place non-visual elements (e.g., services, value objects) here -->
	</fx:Declarations>
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		mx|GridItem
		{
			verticalAlign:middle;
		}
		s|Button
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomButtonSkin");
		}
		s|DropDownList
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDropDownListSkin");
			selectionColor:#DDDDDD;
			rollOverColor:#EEEEEE;	
		}
		mx|ToolTip
		{
			fontSize:15;  
			color:#FF6699; 
		}
	</fx:Style>
	
	<fx:Script>
		<![CDATA[
			import com.xyw.sys.constant.SystemConstant;
			import com.xyw.sys.custom.component.CompMethod;
			import com.xyw.sys.model.ComboBoxData;
			import com.xyw.sys.model.ComboBoxDataRequest;
			import com.xyw.sys.model.ComboBoxDataResponse;
			import com.xyw.sys.model.SessionException;
			import com.xyw.sys.model.SystemUser;
			import com.xyw.sys.custom.component.CustomIcon;
			import flash.net.navigateToURL;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.FlexEvent;
			import mx.formatters.DateFormatter;
			import mx.rpc.events.FaultEvent;
			import mx.rpc.events.ResultEvent;
			
			public var systemUser:SystemUser = null;
			private var code:String;
			protected function moduleCreationCompleteHandler(event:FlexEvent):void
			{
				this.systemUser = this.parentApplication.systemUser;
				institution.town.enabled = false;
				institution.country.enabled = false;
			}
			
			
			private function query():void
			{
				if(CompMethod.getTimeSpace(this.date_satrt,this.date_end))
					return;
				var code:String = this.institution.getAreaCode();	
			//	var _dateStr:Date=DateField.stringToDate(date_satrt.text,'YYYY-MM-DD');
			//	var _dateEnd:Date=DateField.stringToDate(date_end.text,'YYYY-MM-DD');
				
				if(this.date_satrt.text == "")
				{
					Alert.show("请选择开始时间!","系统提示!");
					return;
				}
				if(this.date_end.text == "")
				{
					Alert.show("请选择结束时间!","系统提示!");
					return;
				}
			/*	if(Number(_dateEnd)<Number(_dateStr))
				{
					Alert.show("开始时间不能大于结束时间!","系统提示!");
					return;
				}*/
				
				if(code.substr(0,4)!="4113")
				{
					Alert.show("请选择到南阳市地区!","系统提示!");
					return;
				}
				if(code.length<4)
				{
					Alert.show("请选择到市级或者县级!","系统提示!");
					return;
				}
				var dateStr:String = this.date_satrt.text;
				var dateEnd:String = this.date_end.text;
				var date_Str:String = dateStr.substring(0,4);
				var date_End:String = dateEnd.substring(0,4);
				if(date_Str!=date_End){
					Alert.show("请选择到同一年中","系统提示!");
					return;
				}
				//Alert.show(date_Str,"系统提示!");
				
				
				var urlRequest:URLRequest = new URLRequest();
				var variables:URLVariables = new URLVariables();
				
				variables.code=code;
				variables.dateStr=dateStr;
				variables.dateEnd=dateEnd;
				variables.codeType=CompMethod.getRadioButtonValue(address);
				variables.statisticalMode=CompMethod.getRadioButtonValue(statisticalMode);
				urlRequest.data=variables;
				urlRequest.method=URLRequestMethod.POST;
				urlRequest.url=this.parentApplication.contextRoot + 
					"/print_new/etbj/etsl/etdqsltjb.jsp";
				navigateToURL(urlRequest);
				
		
			}
			
			private function radiobutton_clickHandler(label:Object,event:MouseEvent,status:String):void
			{
				label.text=event.target.label;
				
			}
			
		]]>
	</fx:Script>
	
	<s:VGroup>
		<mx:TabNavigator  width="1200" chromeColor="#ffffff" creationPolicy="all">
			<s:NavigatorContent  label="儿童地区视力统计表" width="100%">
				<s:VGroup  width="100%">
						
							<s:HGroup paddingBottom="5" paddingLeft="10" paddingRight="10" verticalAlign="middle">
								<s:Label text="查询方式"/>
								<s:HGroup id="statisticalMode" width="157">
									<s:RadioButton buttonMode="true" label="人数查询" value="0" groupName="statisticalMode" selected="true"/>
									<s:RadioButton buttonMode="true" label="人次查询" value="1" groupName="statisticalMode" />
								</s:HGroup>  
								<s:Label  text="地区查询"/>
								<s:HGroup id="address">
									<s:RadioButton buttonMode="true" label="医院所属地区" value="2" groupName="address" click="radiobutton_clickHandler(addr,event,'1')" selected="true"/>
									<s:RadioButton buttonMode="true" label="现在住址" value="0" groupName="address" click="radiobutton_clickHandler(addr,event,'2')"/>
									<s:RadioButton width="77" label="户口地址" buttonMode="true"
												   click="radiobutton_clickHandler(addr,event,'3')"
												   groupName="address" value="1"/>
								</s:HGroup>  
							</s:HGroup>
							<s:HGroup width="100%" height="100%" paddingBottom="5" paddingLeft="10" paddingRight="10" verticalAlign="middle">
									<s:Label text="医院所属地区" id="addr" paddingTop="5"/>
									<component:AreaComboBoxVillageAuto id="institution"  buttonMode="true" table="D201_MS" 
																	   areaCode="{this.parentApplication.systemUser.areaCode}"/>
							</s:HGroup>
						
						<s:HGroup paddingBottom="5" paddingLeft="10" paddingRight="10" verticalAlign="middle">
								<s:Label text="录入时间" width="75"/>
							
								<component:CustomRangeDateField  id="date_satrt" isSelectNow="true" />
								
								<s:Label text="至"/>
								<component:CustomRangeDateField  id="date_end"  isSelectNow="true"/>
							
								<s:Button label="查询" id="loadBirth" click="query()" icon="{CustomIcon.QUERY}"/>
						</s:HGroup>
				</s:VGroup>
			</s:NavigatorContent>
		</mx:TabNavigator>
	</s:VGroup>
</s:Module>