	<fx:Script>
		<![CDATA[
			import com.xyw.module.etbj.model.E505;
			import com.xyw.module.etbj.model.VE504;
			import com.xyw.module.etbj.model.VE505;
			import com.xyw.sys.model.ComboBoxDataRequest;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.events.CloseEvent;
			import mx.events.IndexChangedEvent;
			import mx.managers.PopUpManager;
			import mx.rpc.events.ResultEvent;
			import mx.utils.StringUtil;
			
			import spark.events.IndexChangeEvent;
			private var  systemUser:SystemUser=null;
			private var comboBoxDataRequest:ComboBoxDataRequest;
			private var comboBoxDataList:ArrayCollection;
			public var _ve505:Object;
			private var e505:E505 = new E505();
			private var count:int=7;
			private function init():void{
				systemUser=this.parentApplication.systemUser;
				initializeComboBox();
				
			}
			private function initializeComboBox():void{
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.sql = "select t.d101_01, t.d101_02 from D101 t where t.D101_01 = " + this.systemUser.institutionCode + " or t.D101_11 = " + this.systemUser.institutionCode;
				comboBoxDataRequest.flag = "D101";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
				
				//性别
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.sql = "select * from S301_01 t"
				comboBoxDataRequest.flag = "S301_01";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
				
				//有无
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.sql = "select * from S601_03 t"
				comboBoxDataRequest.flag = "S601_03";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
			
				
				//通过，不通过
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.sql = "select * from Z501_05 t"
				comboBoxDataRequest.flag = "Z501_05";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
				
				//筛查结果:是否通过
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.sql = "select * from Z505_01 t"
				comboBoxDataRequest.flag = "Z505_01";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
				
				
				//检查人员
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = false;
				comboBoxDataRequest.sql = "select t.s_01,t.s_02 from S301_10 t where t.S_05='2' and t.S_04 ="+this.systemUser.userCode;
				comboBoxDataRequest.flag = "S301_10_01";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
				
				//录入人员维护
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = false;
				comboBoxDataRequest.sql = "select t.s_01,t.s_02 from S301_10 t where t.S_05='1' and t.S_04 ="+this.systemUser.userCode;
				comboBoxDataRequest.flag = "S301_10_02";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
			}
			
			private function getComboBoxDataHandler(event:ResultEvent):void{
				--count;
				var comboBoxDataResponse:Object =  event.result;
				var flag:String = comboBoxDataResponse.flag;
				comboBoxDataList= comboBoxDataResponse.comboBoxDataList;
				if(flag=="D101"){
					var index:int=this.getDropDownListSelectedIndex(comboBoxDataList,this.systemUser.institutionCode);
					this.E505_28.dataProvider = comboBoxDataList;
					this.E505_28.selectedIndex = index;
				} else if(flag=="S301_01"){
					this.E505_04.dataProvider =comboBoxDataList;
					this.E505_04.selectedIndex = 1;
				}else if(flag=="S601_03"){
					this.E505_08.dataProvider = comboBoxDataList;
					this.E505_08.selectedIndex = 1;
				}else if(flag=="Z501_05"){
					this.E505_11.dataProvider = comboBoxDataList;
					this.E505_13.dataProvider = comboBoxDataList;
					this.E505_11.selectedIndex = 1;
					this.E505_13.selectedIndex = 1;
				}else if(flag=="Z505_01"){
					this.E505_25.dataProvider = comboBoxDataList;
					this.E505_25.selectedIndex = 2;
				}else if(flag=="S301_10_01"){
					this.E505_27.dataProvider = comboBoxDataList;
					this.E505_27.selectedIndex = 0;
				}else if(flag=="S301_10_02"){
					this.E505_30.dataProvider = comboBoxDataList;
					this.E505_30.selectedIndex = 0;
				} 
				if(!count)
					load();
			}
			/*******************初筛数据加载************************/
			private function load():void{
				loadfirstE505_09();
				loadE50507(_ve505.e50507);
				this.E505_03.text = _ve505.e50503;
				this.E505_04.selectedIndex = Number(_ve505.e50504);
				this.E505_05.text = DateField.dateToString(_ve505.e50505,'YYYY-MM-DD');
				this.E505_06.text = _ve505.e50506;
				this.E505_08.selectedIndex= Number(_ve505.e50508)+1;
				this.E505_11.selectedIndex = Number(_ve505.e50511);
				this.E505_12.text = _ve505.e50512;
				this.E505_13.selectedIndex = Number(_ve505.e50513);
				this.E505_14.text = _ve505.e50514;
				this.E505_25.selectedIndex = Number(_ve505.e50525);
				this.E505_29.text = DateField.dateToString(_ve505.e50529,'YYYY-MM-DD');
				this.E505_31.text = DateField.dateToString(_ve505.e50531,'YYYY-MM-DD');
			}
			
			private function loadfirstE505_09():void{
				if(_ve505.e50509=="1"){
					this.E505_09_1.selected = true;
				}
				if(_ve505.e50509=="2"){
					this.E505_09_2.selected = true;
				}
				if(_ve505.e50509=="3"){
					this.E505_09_3.selected = true;
				}
			}
			private function loadE50507(e50507:String):void{
				var e50507_:Array = e50507.split(",");
				for(var i:int=0;i<e50507_.length;i++){
					if(e50507_[i]=="1"){
						this.E505_07_01.selected = true;
					}
					if(e50507_[i]=="2"){
						this.E505_07_02.selected = true;
					}
					if(e50507_[i]=="3"){
						this.E505_07_03.selected = true;
					}
					if(e50507_[i]=="4"){
						this.E505_07_04.selected = true;
					}
					if(e50507_[i]=="5"){
						this.E505_07_05.selected = true;
					}
					if(e50507_[i]=="6"){
						this.E505_07_06.selected = true;
					}
					if(e50507_[i]=="7"){
						this.E505_07_07.selected = true;
					}
					if(e50507_[i]=="8"){
						this.E505_07_08.selected = true;
					}
					if(e50507_[i]=="9"){
						this.E505_07_09.selected = true;
					}
					if(e50507_[i]=="10"){
						this.E505_07_10.selected = true;
					}
					if(e50507_[i]=="11"){
						this.E505_07_11.selected = true;
					}
					if(e50507_[i]=="12"){
						this.E505_07_12.selected = true;
					}
					if(e50507_[i]=="13"){
						this.E505_07_13.selected = true;
					}
				}
			}
			/****************选择对应的信息********************/
			private function getDropDownListSelectedIndex(arrayCollection:ArrayCollection, defaultValue:String):int
			{
				var len:uint = arrayCollection.length;
				var i:uint = 0;
				var index:int = 0;
				var comboBoxDataP:Object =new Object();
				while(i < len) {
					comboBoxDataP= arrayCollection.getItemAt(i);
					if(comboBoxDataP.data == defaultValue) {
						index = arrayCollection.getItemIndex(comboBoxDataP);
						break;
					}
					i++;
				}
				return index;
			}
			private function saveE505():void{
				/* if(this.E505_03.text==""){
					Alert.show("请输入婴儿姓名","系统提示");
					return;
				} */
				if(E505_12.text&&isNaN(Number(E505_12.text)))
				{
					Alert.show("左耳值为无效数字，请从新输入！","系统提示");
					return;
				}
				if(E505_14.text&&isNaN(Number(E505_14.text)))
				{
					Alert.show("右耳值为无效数字，请从新输入！","系统提示");
					return;
				}
				if(this.E505_30.text ==""){
					Alert.show("请输入操作员","系统提示");
					return;
				}
				saveE505_();
			}
			private function saveE505_():void{
				e505.e50502 = _ve505.e50502;
				e505.e50503 = StringUtil.trim(this.E505_03.text);
				e505.e50504 = this.E505_04.selectedItem.data;
				e505.e50505 = DateField.stringToDate(this.E505_05.text,'YYYY-MM-DD');
				e505.e50506 = StringUtil.trim(this.E505_06.text);
				E505_07();
				e505.e50508 = this.E505_08.selectedItem.data;
				clickE505_09();
				e505.e50511 = this.E505_11.selectedItem.data;
				e505.e50512 = StringUtil.trim(this.E505_12.text);
				e505.e50513 = this.E505_13.selectedItem.data;
				e505.e50514 = StringUtil.trim(this.E505_14.text);
				e505.e50525 = this.E505_25.selectedItem.data;
				e505.e50526 ="1";//0 代表初筛      1代表复筛
				e505.e50527 = StringUtil.trim(this.E505_27.text);
				e505.e50528 = this.E505_28.selectedItem.data;
				e505.e50529 = DateField.stringToDate(this.E505_29.text,'YYYY-MM-DD');
				e505.e50530 = StringUtil.trim(this.E505_30.text);
				e505.e50531 = DateField.stringToDate(this.E505_31.text,'YYYY-MM-DD');
				e505.e50532 = DateField.stringToDate(this.E505_31.text,'YYYY-MM-DD');
				this.e505Service.saveE505(e505);
			}
			
			private function clickE505_09():void{
				if(this.E505_09_1.selected){
					e505.e50509="1";
				}else if(this.E505_09_2.selected){
					e505.e50509="2";
				}else if(this.E505_09_3.selected){
					e505.e50509="3";
				}
			}
			
			protected function changeHandler(event:IndexChangeEvent):void
			{
				if(E505_11.selectedIndex==1 && E505_13.selectedIndex==1){
					this.E505_25.selectedIndex = 2;
				}else{
					if(E505_11.selectedIndex==2 || E505_13.selectedIndex==2){
						this.E505_25.selectedIndex = 1;
					}
				}
				
			}
			
			private function saveE505Handler(event:ResultEvent):void{
				var e505Result:Object = event.result;
				if(e505Result.errorMessage!=null){
					Alert.show(e505Result.errorMessage,"系统提示");
					return;
				}
				Alert.show("保存成功","系统提示",1,this,closeHandler);
			}
			
			
			private function closeHandler(event:CloseEvent):void
			{
				var ref:Object = this.owner;
				ref.refresh();
				closeWindow();
			}
			
			
			private function E505_07():void{
				var array:Array = new Array();
				this.E505_07_01.selected==true?array[701]="1,":array[701]="0,";
				this.E505_07_02.selected==true?array[702]="2,":array[702]="0,";
				this.E505_07_03.selected==true?array[703]="3,":array[703]="0,";
				this.E505_07_04.selected==true?array[704]="4,":array[704]="0,";
				this.E505_07_05.selected==true?array[705]="5,":array[705]="0,";
				this.E505_07_06.selected==true?array[706]="6,":array[706]="0,";
				this.E505_07_07.selected==true?array[707]="7,":array[707]="0,";
				this.E505_07_08.selected==true?array[708]="8,":array[708]="0,";
				this.E505_07_09.selected==true?array[709]="9,":array[709]="0,";
				this.E505_07_10.selected==true?array[710]="10,":array[710]="0,";
				this.E505_07_11.selected==true?array[711]="11,":array[711]="0,";
				this.E505_07_12.selected==true?array[712]="12,":array[712]="0,";
				this.E505_07_13.selected==true?array[713]="13,":array[713]="0,";
				e505.e50507 = array[701]+array[702]+array[703]+array[704]+
					array[705]+array[706]+array[707]+array[708]+
					array[708]+array[709]+array[710]+array[711]+
					array[712]+array[713];
			}
			private function closeWindow():void{
				PopUpManager.removePopUp(this);
			}
		]]>
	</fx:Script>
