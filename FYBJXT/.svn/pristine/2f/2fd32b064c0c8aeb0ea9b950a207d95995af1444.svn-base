			private function getDropDownListSelectedIndex(arrayCollection:ArrayCollection, defaultValue:String):int
			{
				var len:uint = arrayCollection.length;
				var i:uint = 0;
				var index:int = 0;
				while(i < len) {
					var comboBoxDataP:ComboBoxData = arrayCollection.getItemAt(i) as ComboBoxData;
					if(comboBoxDataP.data == defaultValue) {
						index = arrayCollection.getItemIndex(comboBoxDataP);
						break;
					}
					i++;
				}
				return index;
			}
			
			private function query():void
			{
				if(CompMethod.getTimeSpace(this.date_satrt,this.date_end))
					return;
				if(this.date_satrt.text == "")
				{
					Alert.show("请选择开始时间!","系统提示!");
					return;
				}else if(this.date_end.text == "")
				{
					Alert.show("请选择结束时间!","系统提示!");
					return;
				}
				var timeStr:String = this.date_satrt.text;
				var timeEnd:String = this.date_end.text;
				
				var institution:String = this.institution.getInstitutionCode();
				var time:String = CompMethod.getRadioButtonValue(time);
				var urlRequest:URLRequest = new URLRequest();
				var variables:URLVariables = new URLVariables();
				
				variables.institution=encodeURIComponent(institution);
				variables.timeStr=encodeURIComponent(timeStr);
				variables.timeEnd=encodeURIComponent(timeEnd);
				variables.time=encodeURIComponent(time);
				
				urlRequest.data=variables;
				urlRequest.method=URLRequestMethod.POST;
				urlRequest.url=this.parentApplication.contextRoot + 
					"/report_new/jsp/fmxxdjb.jsp";
				navigateToURL(urlRequest);
				//Alert.show(time,"系统提示!");
				
				
				
				
