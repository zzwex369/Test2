<?xml version="1.0" encoding="utf-8"?>
<s:TitleWindow xmlns:fx="http://ns.adobe.com/mxml/2009"
			   xmlns:s="library://ns.adobe.com/flex/spark"
			   xmlns:mx="library://ns.adobe.com/flex/mx"
			   xmlns:component="com.xyw.sys.custom.component.*"
			   xmlns:skin="com.xyw.sys.custom.skin.*"
			   width="1200" backgroundColor="white" chromeColor="#5CACEE" close="removeWindow()"
			   cornerRadius="5" creationComplete="moduleComplete()" horizontalCenter="0"
			   skinClass="com.xyw.sys.custom.skin.CustomTitleWindow" title="信息修改"
			   verticalCenter="0">
	<fx:Declarations>
		<s:RemoteObject id="childrenService" destination="childrenService" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="updateE303" result="updateE303Handler(event)"/>
		</s:RemoteObject>
		<s:RemoteObject id="systemService" destination="systemService" endpoint="{this.parentApplication.contextRoot}/messagebroker/amf" showBusyCursor="true">
			<s:method name="getComboBoxData" result="getComboBoxDataHandler(event)"/>
		</s:RemoteObject>
	</fx:Declarations>
	<fx:Style>
		@namespace s "library://ns.adobe.com/flex/spark";
		@namespace mx "library://ns.adobe.com/flex/mx";
		mx|GridItem
		{
			horizontalAlign:left;
			verticalAlign:middle;
		}
		s|TextInput
		{
			fontFamily:微软雅黑;
		}
		s|Button
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomButtonSkin");
		}
		s|DropDownList
		{
			skinClass:ClassReference("com.xyw.sys.custom.skin.CustomDropDownListSkin");
			selectionColor:#DDDDDD;
			rollOverColor:#EEEEEE;	
		}
		.must {
			color:red;
			fontSize:20px;
			fontWeight:bold;
			paddingTop:5px;
		}
	</fx:Style>
	<fx:Script>
		<![CDATA[
			import com.xyw.module.etbj.model.E303;
			import com.xyw.module.etbj.model.VE303;
			import com.xyw.sys.model.ComboBoxDataRequest;
			import com.xyw.sys.model.SystemUser;
			
			import mx.collections.ArrayCollection;
			import mx.controls.Alert;
			import mx.managers.PopUpManager;
			import mx.events.FlexEvent;
			import mx.rpc.events.ResultEvent;
			import mx.utils.StringUtil;
			import mx.formatters.DateFormatter;
			
			private var e303:E303 =new E303();
			public var ve303:VE303;
			public var systemUser:SystemUser = null;
			private var comboBoxDataRequest:ComboBoxDataRequest;
			
			private function moduleComplete():void
			{
				this.systemUser = this.parentApplication.systemUser;
				var now:Date =new Date();
				this.e303_06_Str.selectedDate =now;
				this.initializeComboBox();
			}
			
			private function initializeComboBox():void
			{
				this.comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.flag = "D101";//单位
				comboBoxDataRequest.sql = "select t.d101_01, t.d101_02 from D101 t";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
				
				this.comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.flag = "S301_01";//性别
				comboBoxDataRequest.sql = "select * from S301_01";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
				
				this.comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.flag = "SE303_01";//转归
				comboBoxDataRequest.sql = "select * from SE303_01";
				this.systemService.getComboBoxData(this.comboBoxDataRequest);
			}
			
			private function getComboBoxDataHandler(event:ResultEvent):void
			{
				var comboBoxDataResponse:Object =  event.result;
				var flag:String = comboBoxDataResponse.flag;
				var comboBoxDataList:ArrayCollection = comboBoxDataResponse.comboBoxDataList;
				if(flag == "S301_01")//性别
				{
					
					this.e303_04_Zh.dataProvider = comboBoxDataList;
					this.e303_04_Zh.selectedIndex = 1;
				}else if(flag == "D101")//单位
				{
					var index:int = this.getDropDownListSelectedIndex(comboBoxDataList, this.systemUser.institutionCode);
					this.e303_13_Zh.dataProvider = comboBoxDataList;
					this.e303_13_Zh.selectedIndex = index;
					this.e303_16_Zh.dataProvider = comboBoxDataList;
					this.e303_16_Zh.selectedIndex = index;
				}else if(flag == "SE303_01")//转归
				{
					//var index3:int = this.getDropDownListSelectedIndex(comboBoxDataList, this.systemUser.institutionCode);
					this.e303_15_Zh.dataProvider = comboBoxDataList;
					this.e303_15_Zh.selectedIndex = 1;	
				}
				this.putCard();
			}
			private function putCard():void{
				this.e303.e30301 =ve303.e30301;
				this.e303.e30302 =ve303.e30302;
				this.e303_03.text =ve303.e30303;
				
				var e30304dataProvide:ArrayCollection =ArrayCollection(this.e303_04_Zh.dataProvider);
				var e30304Index:int =this.getDropDownListSelectedIndex(e30304dataProvide,this.ve303.e30304);
				this.e303_04_Zh.selectedIndex =e30304Index;
				if(ve303.e30305Str !=null){
					this.e303_05_Str.text =ve303.e30305Str;
				}
				if(ve303.e30306Str !=null){
					this.e303_06_Str.text =ve303.e30306Str;	
				}			
				this.e303_07.text =ve303.e30307;				
				this.e303_08.text =ve303.e30308;
				this.e303_09.text =ve303.e30309;
				this.e303_10.text =ve303.e30310;
				this.e303_11.text =ve303.e30311;
				if(ve303.e30312Str !=null){
					this.e303_12.text =ve303.e30312Str;
				}
				
				var e30313dataProvide:ArrayCollection =ArrayCollection(this.e303_13_Zh.dataProvider);
				var e30313Index:int =this.getDropDownListSelectedIndex(e30313dataProvide,this.ve303.e30313);
				this.e303_13_Zh.selectedIndex =e30313Index;
				this.e303_14.text =ve303.e30314;
				
				var e30315dataProvide:ArrayCollection =ArrayCollection(this.e303_15_Zh.dataProvider);
				var e30315Index:int =this.getDropDownListSelectedIndex(e30315dataProvide,this.ve303.e30315);
				this.e303_15_Zh.selectedIndex =e30315Index;
				
				var e30316dataProvide:ArrayCollection =ArrayCollection(this.e303_16_Zh.dataProvider);
				var e30316Index:int =this.getDropDownListSelectedIndex(e30316dataProvide,this.ve303.e30316);
				this.e303_16_Zh.selectedIndex =e30316Index;
				this.e303_17.text =ve303.e30317;
				if(ve303.e30318Str !=null){
					this.e303_18_Str.text =ve303.e30318Str;
				}
				this.e303_19.text =ve303.e30319;
				this.e303_20.text =ve303.e30320;
			}
			/*----------建档单位-----------------*/
			private function getDropDownListSelectedIndex(arrayCollection:ArrayCollection, defaultValue:String):int
			{
				var len:uint = arrayCollection.length;
				var i:uint = 0;
				var index:int = 0;
				while(i < len) {
					var comboBoxDataP:Object = arrayCollection.getItemAt(i);
					if(comboBoxDataP.data == defaultValue) {
						index = arrayCollection.getItemIndex(comboBoxDataP);
						break;
					}
					i++;
				}	
				return index;
			}
			/*-----------------默认国籍 中国---------------------*/
			private function getCountrySelectedIndex(arrayCollection:ArrayCollection):int
			{
				var len:uint = arrayCollection.length;
				var i:uint = 0;
				var index:int = 0;
				while(i < len) {
					var comboBoxDataP:Object = arrayCollection.getItemAt(i);
					if(comboBoxDataP.data == "CHN") {
						index = arrayCollection.getItemIndex(comboBoxDataP);
						break;
					}
					i++;
				}
				return index;
			}
			
			//转归的选择事件
			private function zhuangui1():void{
				if(this.e303_15_Zh.selectedIndex == 6){
					this.zhuangui.enabled =true;
				}else{
					this.zhuangui.enabled =false;
				}
			}
			
			private function validate1():void
			{
				if(this.e303_19.text == ""){
					Alert.show("请输入保健卡号","系统提示");
					return;
				} 
				if(this.e303_03.text == ""){
					Alert.show("请输入儿童姓名!","系统提示");
					return;
				}
				if(this.e303_04_Zh.selectedItem.data == 0){
					Alert.show("请选择儿童性别!","系统提示");
					return;
				}
				
				var dateFormatter:DateFormatter= new DateFormatter();
				dateFormatter.formatString = "YYYY-MM-DD";
				var nowData:String= dateFormatter.format(new Date());
				if(this.e303_05_Str.text ==""){
					Alert.show("请输入出生日期（时）！","系统提示");
					return;
				}
				if(this.e303_05_Str.text>nowData){
					Alert.show("出生日期大于当前日期","系统提示");
					return;
				}
				if(this.e303_06_Str.text == ""){
					Alert.show("请输入检查时间!","系统提示");
					return;
				}
				if(this.e303_13_Zh.selectedItem.data == 0){
					Alert.show("请输入检查机构!","系统提示");
					return;
				}
				/* if(this.e303_14.text == ""){
				Alert.show("请输入检查医生!","系统提示");
				return;
				}
				if(this.e303_17.text == ""){
				Alert.show("请输入结案医师!","系统提示");
				return;
				} */
				if(this.e303_15_Zh.selectedItem.data == 0){
					Alert.show("请选择转归内容！","系统提示");
					return;
				}
				this.update();
			}
			
			public function update():void{
				this.e303.e30303 =this.e303_03.text;
				this.e303.e30304 =this.e303_04_Zh.selectedItem.data; 
				this.e303.e30305 =DateField.stringToDate(this.e303_05_Str.text, "YYYY-MM-DD");
				this.e303.e30306 =DateField.stringToDate(this.e303_06_Str.text, "YYYY-MM-DD"); 
				this.e303.e30307 =this.e303_07.text;
				this.e303.e30308 =this.e303_08.text;
				this.e303.e30309 =this.e303_09.text;
				this.e303.e30310 =this.e303_10.text;
				this.e303.e30311 =this.e303_11.text;
				this.e303.e30312 =DateField.stringToDate(this.e303_12.text, "YYYY-MM-DD");
				this.e303.e30313 =this.e303_13_Zh.selectedItem.data;
				this.e303.e30314 =this.e303_14.text;   
				this.e303.e30315 =this.e303_15_Zh.selectedItem.data;
				this.e303.e30316 =this.e303_16_Zh.selectedItem.data; 
				this.e303.e30317 =this.e303_17.text;
				this.e303.e30318 =DateField.stringToDate(this.e303_18_Str.text, "YYYY-MM-DD");
				this.e303.e30319 =this.e303_19.text;
				
				this.childrenService.updateE303(e303);
			}
			public function updateE303Handler(event:ResultEvent):void{
				var e303Response:Object =event.result;
				if(!e303Response.state){
					Alert.show(e303Response.errorMessage,"系统提示");
					return;
				}
				Alert.show("修改成功！ ","系统提示");
				this.removeWindow();
			}
			private function removeWindow():void
			{ 
				PopUpManager.removePopUp(this);
			}
		]]>
	</fx:Script>
	<s:Scroller width="100%" height="100%" horizontalScrollPolicy="auto" verticalScrollPolicy="auto">
		<s:VGroup paddingBottom="20" paddingLeft="10" paddingRight="10" paddingTop="10">
			<mx:TabNavigator width="1136" chromeColor="#ffffff" creationPolicy="all">
				<s:NavigatorContent label="基本情况" width="100%">	
					<mx:Grid paddingLeft="8" paddingBottom="10">
						<mx:GridRow>
							<mx:GridItem>
								<s:Label paddingLeft="10" text="保健卡号"/>	
								<s:TextInput id="e303_19" width="170" enabled="false"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="15" text="儿   童   姓  名" paddingRight="1"/>	
								<s:TextInput id="e303_03" width="170" enabled="false"/>	
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>							
							<mx:GridItem>
								<s:Label paddingLeft="15" text="儿   童   性  别"/>
								<s:DropDownList id="e303_04_Zh" width="170" enabled="false"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="15" text="出生日期"/>
								<mx:DateField  id="e303_05_Str" width="160" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
											   monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
											   formatString="YYYY-MM-DD" yearNavigationEnabled="true" enabled="false"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
						</mx:GridRow>
						<mx:GridRow>
							<mx:GridItem>
								<s:Label paddingLeft="10" text="随诊日期"/>
								<mx:DateField  id="e303_06_Str" width="170" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
											   monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
											   formatString="YYYY-MM-DD" yearNavigationEnabled="true"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="15" text="月         龄(周)" paddingRight="2"/>
								<s:TextInput id="e303_07" width="170"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="15" text="主   要   特  征"/>	
								<s:TextInput id="e303_08" width="170"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="15" text="阳体特征"/>	
								<s:TextInput id="e303_09" width="160"/>		
							</mx:GridItem>							
						</mx:GridRow>
						<mx:GridRow>
							<mx:GridItem>
								<s:Label paddingLeft="10" text="检查结果"/>
								<s:TextInput id="e303_10" width="170"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="15" text="处  理 及 指 导" paddingRight="1"/>
								<s:TextInput id="e303_11" width="170"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="15" text="预约 复诊时间 " paddingRight="1"/>
								<mx:DateField id="e303_12" width="170" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
											  monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
											  formatString="YYYY-MM-DD" yearNavigationEnabled="true"/>							
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="15" text="检查单位"/>
								<s:DropDownList id="e303_13_Zh" width="160"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
						</mx:GridRow>
						<mx:GridRow>							
							<mx:GridItem>
								<s:Label paddingLeft="10" text="检查医生"/>
								<s:TextInput id="e303_14" width="170"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="15" text="转               归"/>
								<s:DropDownList id="e303_15_Zh" width="170" change="zhuangui1()"/>
							</mx:GridItem>
							<mx:GridItem id="zhuangui" enabled="false">
								<s:Label paddingLeft="15" text="转   归   其  他"/>
								<s:TextInput id="e303_20" width="170"/>
							</mx:GridItem>
						</mx:GridRow>
						<mx:GridRow>
							<mx:GridItem>
								<s:Label paddingLeft="10" text="结案单位"/>
								<s:DropDownList id="e303_16_Zh" width="170"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="15" text="结案 医师 签名"/>
								<s:TextInput id="e303_17" width="170"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label paddingLeft="15" text="结   案   时  间"/>
								<mx:DateField  id="e303_18_Str" width="170" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
											   monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
											   formatString="YYYY-MM-DD" yearNavigationEnabled="true"/>							
							</mx:GridItem>
						</mx:GridRow>
						
					</mx:Grid>
				</s:NavigatorContent>
			</mx:TabNavigator>
			
			<s:HGroup paddingBottom="10" verticalAlign="middle" width="80%" horizontalAlign="right">
				<s:Button label="保存"  id="saveE301" click="validate1()"/>
			</s:HGroup>
		</s:VGroup>
	</s:Scroller>
</s:TitleWindow>


