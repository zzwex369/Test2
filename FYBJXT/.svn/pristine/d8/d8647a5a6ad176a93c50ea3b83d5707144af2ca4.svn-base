						<s:GridColumn dataField="d50250" headerText="备注" visible="false"/>
					</s:ArrayList>
				</s:columns>
			</s:DataGrid>
			<component:PagerBar3 id="pagerBar" enabled="false"/>
		</s:VGroup>
	</s:Scroller>
</s:Module>
