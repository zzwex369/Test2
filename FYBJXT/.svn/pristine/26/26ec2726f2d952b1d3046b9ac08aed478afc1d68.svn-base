			public function validate2():int{				
				if(this.F301_18.text ==""){			
					Alert.show("请输入配偶姓名！","系统提示");				
					return 1;		
				}	
				if(this.F301_20.selectedItem.data ==0){			
					Alert.show("请选择配偶证件类型！","系统提示");			
					return 1;			
				}		
				if(this.F301_21.text ==""){			
					Alert.show("请输入配偶证件号码！","系统提示");				
					return 1;			
				}		
				if(this.F301_22.text ==""){		
					Alert.show("请输入配偶出生日期！","系统提示");	
					return 1;			
				} 			
				if(this.F301_24.selectedItem.data ==0){			
					Alert.show("请选择配偶国籍！","系统提示");			
					return 1;	
				}			
				var patternFater:RegExp = /^(\d{18,18}|\d{15,15}|\d{17,17}X|\d{17,17}x)$/g;			
				if(this.F301_20.selectedItem.data == 1 && this.F301_24.selectedItem.data == "CHN" && !patternFater.test(this.F301_21.text))
				{	//只有在证件类别为身份证，国籍为中国的时候才验证身份证格式是否正确
					Alert.show("配偶的证件号码有误!","系统提示");		
					return 1;	
				}	
				if(this.F301_25.selectedItem.data ==0){
					Alert.show("请选择配偶民族！","系统提示");
					return 1;
				}
				if(this.F301_19.selectedItem.data ==0){	
					Alert.show("请选择配偶性别！","系统提示");	
					return 1;
				}	
				if(this.F301_26.text == ""){
					Alert.show("请输入配偶身份证地址!","系统提示");
					return 1;
				}
				
				if(this.F301_28.text ==""){	
					Alert.show("请输入配偶联系电话！","系统提示");	
					return 1;
				}
				if(!validateAreaCode12(this.F301_38.getAreaCode())){
					Alert.show("配偶现住地址要选到最下级！","系统提示");
					return 1;
				}
				if(!validateAreaCode(this.F301_39.getAreaCode())){
					Alert.show("配偶户口地址要选到最下级！","系统提示");
					return 1;
				}
				return 0;
			}
			public function saveRecord():void{
