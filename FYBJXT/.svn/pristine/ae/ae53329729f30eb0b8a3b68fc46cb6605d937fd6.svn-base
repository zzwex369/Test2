			private function moduleCreationCompleteHandler(event:FlexEvent):void
			{
				this.systemUser = this.parentApplication.systemUser;
				this.initilizeComboBox();
				this.certificateApplyDataGrid.addEventListener(GridSelectionEvent.SELECTION_CHANGE, onSelectionChange);
			}
			
			private function initilizeComboBox():void
			{
				var comboBoxDataRequest:ComboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.sql = "select t.d101_01, t.d101_02 from D101 t where t.D101_11 = '" + this.systemUser.institutionCode + "' or t.D101_01 = '" + this.systemUser.institutionCode + "'";
				comboBoxDataRequest.flag = "D101";
				
				this.systemService.getComboBoxData(comboBoxDataRequest);
				
				comboBoxDataRequest = new ComboBoxDataRequest();
				comboBoxDataRequest.showPrompt = true;
				comboBoxDataRequest.sql = "select t.S_01, t.S_02 from S505_01 t"
				comboBoxDataRequest.flag = "S505_01";
				
				this.systemService.getComboBoxData(comboBoxDataRequest);
			}
			
			private function getComboBoxDataHandler(event:ResultEvent):void
			{
				var comboBoxDataResponse:Object = event.result;
				var flag:String = comboBoxDataResponse.flag;
				var comboBoxDataList:ArrayCollection = comboBoxDataResponse.comboBoxDataList;
				/*if(flag == "D101") {
					this.d502_02.dataProvider = comboBoxDataList;
					if(this.systemUser.areaCode.length != 8) {
						this.d502_02.selectedIndex = 0;
					} else {
						var label:String = this.systemUser.institutionCode;
						var data:String = this.systemUser.institution;
						this.d502_02.dataProvider = new ArrayCollection([{label : data}]);
						this.d502_02.selectedIndex = 0;
					}
				}*/
				if(flag == "S505_01") {
					comboBoxDataList.addItemAt({label : "全部", data : "all"}, 0);
					comboBoxDataListT = comboBoxDataList
				}
			}
			
			private function getDropDownListSelectedIndex(arrayCollection:ArrayCollection, defaultValue:String):int
			{
				var len:uint = arrayCollection.length;
				var i:uint = 0;
				var index:int = 0;
				while(i < len) {
					var comboBoxDataP:Object = arrayCollection.getItemAt(i);
					if(comboBoxDataP.data == defaultValue) {
						index = arrayCollection.getItemIndex(comboBoxDataP);
						break;
					}
					i++;
				}
				return index;
			}
			
			private function query(event:MouseEvent):void
			{
				
				var d502Request:D502Request = new D502Request();
				var d502:D502 = new D502();
				//var comboBoxData:Object = this.d502_02.selectedItem;
				//d502.d50202 = comboBoxData.data;
				d502.d50202 = this.institutionComboBox.getLastSelectedInstitutionCode();
				d502.d50205 = this.d502_05.selectedDate;
				d502.d50205End = this.d502_05End.selectedDate;

				if(d502.d50205 != null && d502.d50205End != null) {
					var r:int = ObjectUtil.compare(d502.d50205, d502.d50205End);
					if(r == 1) {
						Alert.show("查询起始时间不能大于终止时间!", "系统提示");
						return;
					}
				}
				
				//d502.d50211 = this.d503_11.text;
				
				d502Request.parameterPageindex = 1;
				d502Request.parameterPagesize = 20;
				
				d502Request.d502 = d502;
				
				d502Request.institutionCode = this.systemUser.institutionCode;
				
				this.certificateRegistService.query(d502Request);
			}
			
			private function queryHandler(event:ResultEvent):void
			{
				var d502Response:Object = event.result;
				var rowCount:Number = d502Response.rowCount;
				if(d502Response.errorMessage == null) {
					var vd502s:ArrayCollection = d502Response.vd502s;
					this.pagerBar.dataGrid = this.certificateApplyDataGrid;
					this.pagerBar.rowCount = rowCount;
					this.pagerBar.resultData = vd502s;
					this.pagerBar.dataBind();
					this.pagerBar.pagerFunction = pagerFunction;
					if(rowCount > 0) {
						this.pagerBar.enabled = true;
					} else {
						Alert.show("暂无数据!", "系统提示");
					}
				} else {
					Alert.show(d502Response.errorMessage, "系统提示");
				}
			}
			
			public function pagerFunction(currentPageIndex:int, pageSize:int):void
			{
				var d502Request:D502Request = new D502Request();
				var d502:D502 = new D502();
				//var comboBoxData:Object = this.d502_02.selectedItem;
				//d502.d50202 = comboBoxData.data;
				d502.d50202 = this.institutionComboBox.getLastSelectedInstitutionCode();
				d502.d50205 = this.d502_05.selectedDate;
				d502.d50205End = this.d502_05End.selectedDate;
				d502Request.parameterPageindex = currentPageIndex;
				d502Request.parameterPagesize = pageSize;
				
				d502Request.d502 = d502;
				this.certificateRegistService.query(d502Request);
			}
			
			public function refresh():void
			{
				var d502Request:D502Request = new D502Request();
				var d502:D502 = new D502();
				//var comboBoxData:Object = this.d502_02.selectedItem;
				//d502.d50202 = comboBoxData.data;
				d502.d50202 = this.institutionComboBox.getLastSelectedInstitutionCode();
				d502.d50205 = this.d502_05.selectedDate;
				d502.d50205End = this.d502_05End.selectedDate;
				//d502.d50211 = this.d503_11.text;
				d502Request.d502 = d502;
				d502Request.parameterPageindex = this.pagerBar.currentPageIndex;
				d502Request.parameterPagesize = 20;
				
				this.certificateRegistService.query(d502Request);
				
			}
			
			private function formatDateToStringD50205(vd502:Object, column:GridColumn):String
			{
				var dateTimeFormatter:DateTimeFormatter = new DateTimeFormatter();
				dateTimeFormatter.dateTimePattern = "yyyy-MM-dd";
				var columnDataField:String = column.dataField;
				if("d50205" == columnDataField) {
					var date_D50205:Date = vd502.d50205;
					var date_D50205_Text:String = dateTimeFormatter.format(date_D50205);
					return date_D50205_Text;
				}
				return null;
			}
			
			private function onOperationSuccess(event:RefreshParentWindowDataEvent):void
			{
				this.refresh();
			}
			
			private function onSelectionChange(event:GridSelectionEvent):void
			{
				this.vd502 = DataGrid(event.target).selectedItem as VD502;
			}
			
			private function faultHandler(event:FaultEvent):void
			{
				var sessionException:SessionException = event.fault.rootCause as SessionException;
				var errorCode:String = "";
				try {
					errorCode = sessionException.errorCode;
					if(errorCode == SystemConstant.LOGIN_USER_INFO_IS_NULL) {
						Alert.show(sessionException.errorMessage, "系统提示");
						return;
					}
				} catch(error:Error) {
					Alert.show("系统异常", "系统提示");
				}
			}
			
			public function detail(event:MouseEvent):void
			{
				if(this.vd502 == null) {
					Alert.show("请选择要查看的行!","系统提示");
					return;
				}
				
				
				
				var detailTitleWindow:DetailTitleWindow = new DetailTitleWindow();
				detailTitleWindow.owner = this;
				PopUpManager.addPopUp(detailTitleWindow, this);
				var x:Number = (this.width - detailTitleWindow.width) / 2;
				var y:Number = (this.height - detailTitleWindow.height) / 2;
				detailTitleWindow.move(x, y);
				
				var idB:String = Button(event.target).id;
				if(idB == "wsy") {
					detailTitleWindow.d505_05 = "1";
					this.flag = "1";
				} else {
					this.flag = "";
					detailTitleWindow.d505_05 = "";
				}
				
				detailTitleWindow.d505_02 = this.vd502.d50201;
				//detailTitleWindow.areaCode = this.vd505.d50212;
			}
			
			public function ddlIndexChangeHandler(event:IndexChangeEvent):void
			{
				Alert.show("good", "abc");
				this.detail(null);
			}
		]]>
	</fx:Script>
