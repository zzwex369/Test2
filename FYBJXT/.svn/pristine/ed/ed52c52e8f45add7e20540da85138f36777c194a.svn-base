							</mx:GridItem>
						</mx:GridRow>
						<mx:GridRow>
							<mx:GridItem colSpan="6">
								<s:TextArea id="F306_06" width="1140" height="200"/>
							</mx:GridItem>
						</mx:GridRow>
						<mx:GridRow>
							<mx:GridItem colSpan="4">
								<s:TextInput visible="false"/>
							</mx:GridItem>
							<mx:GridItem paddingLeft="30">
								<s:Button id="saF306" label="确定" click="validate()" enabled="false"/>
							</mx:GridItem>
						</mx:GridRow>
					</mx:Grid>
				</s:NavigatorContent>
			</mx:TabNavigator>
		</s:VGroup>
	</s:Scroller>
</s:Module>
