							<s:Label styleName="mustQuery" text="请先查询孕产妇档案信息"/>
							<s:HGroup id="fmload" visible="true" verticalAlign="middle">
								<s:Label paddingLeft="8" text="请输入孕产妇姓名"/><s:TextInput id="f30102"/>
								<s:Label text="证件号码"/><s:TextInput id="f30105" width="140"/>
								<s:Button label="查询" click="queryfnwcdj()"/>	
								<s:Button id="duka1" width="60" label="读卡" click="readCard_B(event)"
										  enabled="false"/>
								<s:TextInput id="F301_01" visible="false"/>
							</s:HGroup>
						</s:HGroup>
					</s:VGroup>
				</s:NavigatorContent>
			</mx:TabNavigator>
			<mx:TabNavigator width="1160" chromeColor="#ffffff" creationPolicy="all">
				<s:NavigatorContent width="100%" label="基本情況">	
					<mx:Grid paddingBottom="10" paddingLeft="8">
						<mx:GridRow>
							<mx:GridItem>
								<s:Label text="孕产妇姓名"/>	
								<s:TextInput id="F301_02" width="130" enabled="false"/>	
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label text="证件类型" />
								<s:DropDownList id="F301_04" width="130" enabled="false"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label text="证件号码"/>
								<s:TextInput id="F301_05" width="140" enabled="false"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label text="婚姻状况"/>
								<s:DropDownList id="F301_12" width="130" enabled="false"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label text="出生日期"/>
								<mx:DateField id="F301_06" width="130"
											  dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
											  monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
											  formatString="YYYY-MM-DD" yearNavigationEnabled="true" enabled="false"/>
								<s:Label text="*" styleName="must"/>
								<s:Button id="duka2" label="读卡" click="readCard_mother(event)" enabled="false"/>
							</mx:GridItem>
						</mx:GridRow>
						<mx:GridRow>
							<mx:GridItem>
								<s:Label text="建册编号"/>	
								<s:TextInput id="F301_17" width="130" enabled="false"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label text="建册日期" enabled="false"/>
								<mx:DateField  id="F301_31" width="130" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
											   monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
											   formatString="YYYY-MM-DD" yearNavigationEnabled="true" enabled="false"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label text="生育卡号"/>
								<s:TextInput id="F306_12" width="140"/>
							</mx:GridItem>	
							<mx:GridItem>
								<s:Label text="预产日期"/>
								<mx:DateField  id="F306_15" width="130" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
											   monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
											   formatString="YYYY-MM-DD" yearNavigationEnabled="true"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label text="高危评分"/>
								<s:TextInput id="F306_13" width="130"/>
							</mx:GridItem>
						</mx:GridRow>
						<mx:GridRow>
							<mx:GridItem colSpan="6">
								<s:Label text="高危原因"/>
								<s:TextInput id="F306_14" width="90%"/>
							</mx:GridItem>
						</mx:GridRow>
					</mx:Grid>
				</s:NavigatorContent>
			</mx:TabNavigator>
			<mx:TabNavigator width="1160" chromeColor="#ffffff" creationPolicy="all">
				<s:NavigatorContent width="100%" label="教育内容">	
					<mx:Grid paddingBottom="10" paddingLeft="8">
						<mx:GridRow>
							<mx:GridItem>
								<s:Label text="课程名称"/>
								<s:DropDownList id="F306_07" width="130"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label text="上课时间"/>
								<mx:DateField  id="F306_05" width="130" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
											   monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
											   formatString="YYYY-MM-DD" yearNavigationEnabled="true"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label text="上课医生 "/>
								<s:TextInput id="F306_08" width="130"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label text="上课地点"/>
								<s:TextInput id="F306_09" width="130"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label text="登记单位"/>
								<s:DropDownList id="F306_10" width="130" enabled="false"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
						</mx:GridRow>
						<mx:GridRow>
							<mx:GridItem>
								<s:Label text="登  记  者"/>
								<s:TextInput id="F306_11" width="130"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
							<mx:GridItem>
								<s:Label text="登记时间"/>
								<mx:DateField  id="F306_03" width="130" dayNames='["周日","周一","周二","周三","周四","周五","周六"]'
											   monthNames='["一月","二月","三月","四月","五月","六月","七月","八月","九月","十月","十一月","十二月"]'
											   formatString="YYYY-MM-DD" yearNavigationEnabled="true"/>
								<s:Label text="*" styleName="must"/>
							</mx:GridItem>
						</mx:GridRow>
						<mx:GridRow>
							<mx:GridItem colSpan="5">
								<s:Label text="上课内容"/>
